{
  "buruc": {
    "surahNumber": "85",
    "surahName": "البروج",
    "surahNameTr": "Bürûc Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "وَالسَّمَاءِ ذَاتِ الْبُرُوجِ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَالْيَوْمِ الْمَوْعُودِ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَشَاهِدٍ وَمَشْهُودٍ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "قُتِلَ أَصْحَابُ الْأُخْدُودِ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "النَّارِ ذَاتِ الْوَقُودِ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "إِذْ هُمْ عَلَيْهَا قُعُودٌ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَهُمْ عَلَىٰ مَا يَفْعَلُونَ بِالْمُؤْمِنِينَ شُهُودٌ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَمَا نَقَمُوا مِنْهُمْ إِلَّا أَن يُؤْمِنُوا بِاللَّهِ الْعَزِيزِ الْحَمِيدِ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "الَّذِي لَهُ مُلْكُ السَّمَاوَاتِ وَالْأَرْضِ ۚ وَاللَّهُ عَلَىٰ كُلِّ شَيْءٍ شَهِيدٌ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "إِنَّ الَّذِينَ فَتَنُوا الْمُؤْمِنِينَ وَالْمُؤْمِنَاتِ ثُمَّ لَمْ يَتُوبُوا فَلَهُمْ عَذَابُ جَهَنَّمَ وَلَهُمْ عَذَابُ الْحَرِيقِ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "إِنَّ الَّذِينَ آمَنُوا وَعَمِلُوا الصَّالِحَاتِ لَهُمْ جَنَّاتٌ تَجْرِي مِن تَحْتِهَا الْأَنْهَارُ ۚ ذَٰلِكَ الْفَوْزُ الْكَبِيرُ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "إِنَّ بَطْشَ رَبِّكَ لَشَدِيدٌ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "إِنَّهُ هُوَ يُبْدِئُ وَيُعِيدُ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "وَهُوَ الْغَفُورُ الْوَدُودُ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "ذُو الْعَرْشِ الْمَجِيدُ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "فَعَّالٌ لِّمَا يُرِيدُ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "هَلْ أَتَاكَ حَدِيثُ الْجُنُودِ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "فِرْعَوْنَ وَثَمُودَ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "بَلِ الَّذِينَ كَفَرُوا فِي تَكْذِيبٍ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "وَاللَّهُ مِن وَرَائِهِم مُّحِيطٌ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "بَلْ هُوَ قُرْآنٌ مَّجِيدٌ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "فِي لَوْحٍ مَّحْفُوظٍ"
      }
    ]
  }
}