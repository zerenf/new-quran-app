{
	"alak": {
		"surahNumber": "96",
		"surahName": "العلق",
		"surahNameTr": "Alak",
		"ayats": [
			{
				"ayahNumber": "1",
				"ayahText": "اقْرَأْ بِاسْمِ رَبِّكَ الَّذِي خَلَقَ"
			},
			{
				"ayahNumber": "2",
				"ayahText": "خَلَقَ الْإِنسَانَ مِنْ عَلَقٍ"
			},
			{
				"ayahNumber": "3",
				"ayahText": "اقْرَأْ وَرَبُّكَ الْأَكْرَمُ"
			},
			{
				"ayahNumber": "4",
				"ayahText": "الَّذِي عَلَّمَ بِالْقَلَمِ"
			},
			{
				"ayahNumber": "5",
				"ayahText": "عَلَّمَ الْإِنسَانَ مَا لَمْ يَعْلَمْ"
			},
			{
				"ayahNumber": "6",
				"ayahText": "كَلَّا إِنَّ الْإِنسَانَ لَيَطْغَىٰ"
			},
			{
				"ayahNumber": "7",
				"ayahText": "أَن رَّآهُ اسْتَغْنَىٰ"
			},
			{
				"ayahNumber": "8",
				"ayahText": "إِنَّ إِلَىٰ رَبِّكَ الرُّجْعَىٰ"
			},
			{
				"ayahNumber": "9",
				"ayahText": "أَرَأَيْتَ الَّذِي يَنْهَىٰ"
			},
			{
				"ayahNumber": "10",
				"ayahText": "عَبْدًا إِذَا صَلَّىٰ"
			},
			{
				"ayahNumber": "11",
				"ayahText": "أَرَأَيْتَ إِن كَانَ عَلَى الْهُدَىٰ"
			},
			{
				"ayahNumber": "12",
				"ayahText": "أَوْ أَمَرَ بِالتَّقْوَىٰ"
			},
			{
				"ayahNumber": "13",
				"ayahText": "أَرَأَيْتَ إِن كَذَّبَ وَتَوَلَّىٰ"
			},
			{
				"ayahNumber": "14",
				"ayahText": "أَلَمْ يَعْلَم بِأَنَّ اللَّهَ يَرَىٰ"
			},
			{
				"ayahNumber": "15",
				"ayahText": "كَلَّا لَئِن لَّمْ يَنتَهِ لَنَسْفَعًا بِالنَّاصِيَةِ"
			},
			{
				"ayahNumber": "16",
				"ayahText": "نَاصِيَةٍ كَاذِبَةٍ خَاطِئَةٍ"
			},
			{
				"ayahNumber": "17",
				"ayahText": "فَلْيَدْعُ نَادِيَهُ"
			},
			{
				"ayahNumber": "18",
				"ayahText": "سَنَدْعُ الزَّبَانِيَةَ"
			},
			{
				"ayahNumber": "19",
				"ayahText": "كَلَّا لَا تُطِعْهُ وَاسْجُدْ وَاقْتَرِب ۩"
			}
		]
	}
}
