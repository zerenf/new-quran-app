{
  "mearic": {
    "surahNumber": "70",
    "surahName": "المعارج",
    "surahNameTr": "Meâric Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "سَأَلَ سَائِلٌ بِعَذَابٍ وَاقِعٍ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "لِّلْكَافِرِينَ لَيْسَ لَهُ دَافِعٌ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "مِّنَ اللَّهِ ذِي الْمَعَارِجِ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "تَعْرُجُ الْمَلَائِكَةُ وَالرُّوحُ إِلَيْهِ فِي يَوْمٍ كَانَ مِقْدَارُهُ خَمْسِينَ أَلْفَ سَنَةٍ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "فَاصْبِرْ صَبْرًا جَمِيلًا"
      },
      {
        "ayahNumber": "6",
        "ayahText": "إِنَّهُمْ يَرَوْنَهُ بَعِيدًا"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَنَرَاهُ قَرِيبًا"
      },
      {
        "ayahNumber": "8",
        "ayahText": "يَوْمَ تَكُونُ السَّمَاءُ كَالْمُهْلِ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَلَا يَسْأَلُ حَمِيمٌ حَمِيمًا"
      },
      {
        "ayahNumber": "11",
        "ayahText": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ الْمُجْرِمُ لَوْ يَفْتَدِي مِنْ عَذَابِ يَوْمِئِذٍ بِبَنِيهِ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "وَصَاحِبَتِهِ وَأَخِيهِ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "وَفَصِيلَتِهِ الَّتِي تُؤْوِيهِ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "وَمَن فِي الْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "كَلَّا ۖ إِنَّهَا لَظَىٰ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "نَزَّاعَةً لِّلشَّوَىٰ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "تَدْعُو مَنْ أَدْبَرَ وَتَوَلَّىٰ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "وَجَمَعَ فَأَوْعَىٰ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "إِنَّ الْإِنسَانَ خُلِقَ هَلُوعًا"
      },
      {
        "ayahNumber": "20",
        "ayahText": "إِذَا مَسَّهُ الشَّرُّ جَزُوعًا"
      },
      {
        "ayahNumber": "21",
        "ayahText": "وَإِذَا مَسَّهُ الْخَيْرُ مَنُوعًا"
      },
      {
        "ayahNumber": "22",
        "ayahText": "إِلَّا الْمُصَلِّينَ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "الَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَائِمُونَ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "وَالَّذِينَ فِي أَمْوَالِهِمْ حَقٌّ مَّعْلُومٌ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "لِّلسَّائِلِ وَالْمَحْرُومِ"
      },
      {
        "ayahNumber": "26",
        "ayahText": "وَالَّذِينَ يُصَدِّقُونَ بِيَوْمِ الدِّينِ"
      },
      {
        "ayahNumber": "27",
        "ayahText": "وَالَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ"
      },
      {
        "ayahNumber": "28",
        "ayahText": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "وَالَّذِينَ هُمْ لِفُرُوجِهِمْ حَافِظُونَ"
      },
      {
        "ayahNumber": "30",
        "ayahText": "إِلَّا عَلَىٰ أَزْوَاجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَانُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ"
      },
      {
        "ayahNumber": "31",
        "ayahText": "فَمَنِ ابْتَغَىٰ وَرَاءَ ذَٰلِكَ فَأُولَـٰئِكَ هُمُ الْعَادُونَ"
      },
      {
        "ayahNumber": "32",
        "ayahText": "وَالَّذِينَ هُمْ لِأَمَانَاتِهِمْ وَعَهْدِهِمْ رَاعُونَ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "وَالَّذِينَ هُم بِشَهَادَاتِهِمْ قَائِمُونَ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "وَالَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "أُولَـٰئِكَ فِي جَنَّاتٍ مُّكْرَمُونَ"
      },
      {
        "ayahNumber": "36",
        "ayahText": "فَمَالِ الَّذِينَ كَفَرُوا قِبَلَكَ مُهْطِعِينَ"
      },
      {
        "ayahNumber": "37",
        "ayahText": "عَنِ الْيَمِينِ وَعَنِ الشِّمَالِ عِزِينَ"
      },
      {
        "ayahNumber": "38",
        "ayahText": "أَيَطْمَعُ كُلُّ امْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "كَلَّا ۖ إِنَّا خَلَقْنَاهُم مِّمَّا يَعْلَمُونَ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "فَلَا أُقْسِمُ بِرَبِّ الْمَشَارِقِ وَالْمَغَارِبِ إِنَّا لَقَادِرُونَ"
      },
      {
        "ayahNumber": "41",
        "ayahText": "عَلَىٰ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ"
      },
      {
        "ayahNumber": "42",
        "ayahText": "فَذَرْهُمْ يَخُوضُوا وَيَلْعَبُوا حَتَّىٰ يُلَاقُوا يَوْمَهُمُ الَّذِي يُوعَدُونَ"
      },
      {
        "ayahNumber": "43",
        "ayahText": "يَوْمَ يَخْرُجُونَ مِنَ الْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ"
      },
      {
        "ayahNumber": "44",
        "ayahText": "خَاشِعَةً أَبْصَارُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ الْيَوْمُ الَّذِي كَانُوا يُوعَدُونَ"
      }
    ]
  }
}