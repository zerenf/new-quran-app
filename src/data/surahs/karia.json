{
	"karia": {
		"surahNumber": "101",
		"surahName": "القارعة",
		"surahNameTr": "Kâria",
		"ayats": [
			{
				"ayahNumber": "1",
				"ayahText": "الْقَارِعَةُ"
			},
			{
				"ayahNumber": "2",
				"ayahText": "مَا الْقَارِعَةُ"
			},
			{
				"ayahNumber": "3",
				"ayahText": "وَمَا أَدْرَاكَ مَا الْقَارِعَةُ"
			},
			{
				"ayahNumber": "4",
				"ayahText": "يَوْمَ يَكُونُ النَّاسُ كَالْفَرَاشِ الْمَبْثُوثِ"
			},
			{
				"ayahNumber": "5",
				"ayahText": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ الْمَنفُوشِ"
			},
			{
				"ayahNumber": "6",
				"ayahText": "فَأَمَّا مَن ثَقُلَتْ مَوَازِينُهُ"
			},
			{
				"ayahNumber": "7",
				"ayahText": "فَهُوَ فِي عِيشَةٍ رَّاضِيَةٍ"
			},
			{
				"ayahNumber": "8",
				"ayahText": "وَأَمَّا مَنْ خَفَّتْ مَوَازِينُهُ"
			},
			{
				"ayahNumber": "9",
				"ayahText": "فَأُمُّهُ هَاوِيَةٌ"
			},
			{
				"ayahNumber": "10",
				"ayahText": "وَمَا أَدْرَاكَ مَا هِيَهْ"
			},
			{
				"ayahNumber": "11",
				"ayahText": "نَارٌ حَامِيَةٌ"
			}
		]
	}
}
