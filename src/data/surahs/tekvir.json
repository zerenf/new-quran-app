{
  "tekvir": {
    "surahNumber": "81",
    "surahName": "التكوير",
    "surahNameTr": "Tekvîr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "إِذَا الشَّمْسُ كُوِّرَتْ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَإِذَا النُّجُومُ انكَدَرَتْ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَإِذَا الْجِبَالُ سُيِّرَتْ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "وَإِذَا الْعِشَارُ عُطِّلَتْ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "وَإِذَا الْوُحُوشُ حُشِرَتْ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "وَإِذَا الْبِحَارُ سُجِّرَتْ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَإِذَا النُّفُوسُ زُوِّجَتْ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَإِذَا الْمَوْءُودَةُ سُئِلَتْ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "بِأَيِّ ذَنبٍ قُتِلَتْ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَإِذَا الصُّحُفُ نُشِرَتْ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "وَإِذَا السَّمَاءُ كُشِطَتْ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "وَإِذَا الْجَحِيمُ سُعِّرَتْ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "وَإِذَا الْجَنَّةُ أُزْلِفَتْ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "عَلِمَتْ نَفْسٌ مَّا أَحْضَرَتْ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "فَلَا أُقْسِمُ بِالْخُنَّسِ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "الْجَوَارِ الْكُنَّسِ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "وَاللَّيْلِ إِذَا عَسْعَسَ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "وَالصُّبْحِ إِذَا تَنَفَّسَ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "إِنَّهُ لَقَوْلُ رَسُولٍ كَرِيمٍ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "ذِي قُوَّةٍ عِندَ ذِي الْعَرْشِ مَكِينٍ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "مُّطَاعٍ ثَمَّ أَمِينٍ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "وَمَا صَاحِبُكُم بِمَجْنُونٍ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "وَلَقَدْ رَآهُ بِالْأُفُقِ الْمُبِينِ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "وَمَا هُوَ عَلَى الْغَيْبِ بِضَنِينٍ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "وَمَا هُوَ بِقَوْلِ شَيْطَانٍ رَّجِيمٍ"
      },
      {
        "ayahNumber": "26",
        "ayahText": "فَأَيْنَ تَذْهَبُونَ"
      },
      {
        "ayahNumber": "27",
        "ayahText": "إِنْ هُوَ إِلَّا ذِكْرٌ لِّلْعَالَمِينَ"
      },
      {
        "ayahNumber": "28",
        "ayahText": "لِمَن شَاءَ مِنكُمْ أَن يَسْتَقِيمَ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "وَمَا تَشَاءُونَ إِلَّا أَن يَشَاءَ اللَّهُ رَبُّ الْعَالَمِينَ"
      }
    ]
  }
}