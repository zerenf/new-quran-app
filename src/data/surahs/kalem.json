{
  "kalem": {
    "surahNumber": "68",
    "surahName": "القلم",
    "surahNameTr": "Kalem Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "ن ۚ وَالْقَلَمِ وَمَا يَسْطُرُونَ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "مَا أَنتَ بِنِعْمَةِ رَبِّكَ بِمَجْنُونٍ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَإِنَّ لَكَ لَأَجْرًا غَيْرَ مَمْنُونٍ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "وَإِنَّكَ لَعَلَىٰ خُلُقٍ عَظِيمٍ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "فَسَتُبْصِرُ وَيُبْصِرُونَ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "بِأَييِّكُمُ الْمَفْتُونُ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِ وَهُوَ أَعْلَمُ بِالْمُهْتَدِينَ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "فَلَا تُطِعِ الْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَدُّوا لَوْ تُدْهِنُ فَيُدْهِنُونَ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَلَا تُطِعْ كُلَّ حَلَّافٍ مَّهِينٍ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "هَمَّازٍ مَّشَّاءٍ بِنَمِيمٍ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "مَّنَّاعٍ لِّلْخَيْرِ مُعْتَدٍ أَثِيمٍ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "عُتُلٍّ بَعْدَ ذَٰلِكَ زَنِيمٍ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "أَن كَانَ ذَا مَالٍ وَبَنِينَ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "إِذَا تُتْلَىٰ عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "سَنَسِمُهُ عَلَى الْخُرْطُومِ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "إِنَّا بَلَوْنَاهُمْ كَمَا بَلَوْنَا أَصْحَابَ الْجَنَّةِ إِذْ أَقْسَمُوا لَيَصْرِمُنَّهَا مُصْبِحِينَ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "وَلَا يَسْتَثْنُونَ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "فَطَافَ عَلَيْهَا طَائِفٌ مِّن رَّبِّكَ وَهُمْ نَائِمُونَ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "فَأَصْبَحَتْ كَالصَّرِيمِ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "فَتَنَادَوْا مُصْبِحِينَ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "أَنِ اغْدُوا عَلَىٰ حَرْثِكُمْ إِن كُنتُمْ صَارِمِينَ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "فَانطَلَقُوا وَهُمْ يَتَخَافَتُونَ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "أَن لَّا يَدْخُلَنَّهَا الْيَوْمَ عَلَيْكُم مِّسْكِينٌ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "وَغَدَوْا عَلَىٰ حَرْدٍ قَادِرِينَ"
      },
      {
        "ayahNumber": "26",
        "ayahText": "فَلَمَّا رَأَوْهَا قَالُوا إِنَّا لَضَالُّونَ"
      },
      {
        "ayahNumber": "27",
        "ayahText": "بَلْ نَحْنُ مَحْرُومُونَ"
      },
      {
        "ayahNumber": "28",
        "ayahText": "قَالَ أَوْسَطُهُمْ أَلَمْ أَقُل لَّكُمْ لَوْلَا تُسَبِّحُونَ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "قَالُوا سُبْحَانَ رَبِّنَا إِنَّا كُنَّا ظَالِمِينَ"
      },
      {
        "ayahNumber": "30",
        "ayahText": "فَأَقْبَلَ بَعْضُهُمْ عَلَىٰ بَعْضٍ يَتَلَاوَمُونَ"
      },
      {
        "ayahNumber": "31",
        "ayahText": "قَالُوا يَا وَيْلَنَا إِنَّا كُنَّا طَاغِينَ"
      },
      {
        "ayahNumber": "32",
        "ayahText": "عَسَىٰ رَبُّنَا أَن يُبْدِلَنَا خَيْرًا مِّنْهَا إِنَّا إِلَىٰ رَبِّنَا رَاغِبُونَ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "كَذَٰلِكَ الْعَذَابُ ۖ وَلَعَذَابُ الْآخِرَةِ أَكْبَرُ ۚ لَوْ كَانُوا يَعْلَمُونَ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "إِنَّ لِلْمُتَّقِينَ عِندَ رَبِّهِمْ جَنَّاتِ النَّعِيمِ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "أَفَنَجْعَلُ الْمُسْلِمِينَ كَالْمُجْرِمِينَ"
      },
      {
        "ayahNumber": "36",
        "ayahText": "مَا لَكُمْ كَيْفَ تَحْكُمُونَ"
      },
      {
        "ayahNumber": "37",
        "ayahText": "أَمْ لَكُمْ كِتَابٌ فِيهِ تَدْرُسُونَ"
      },
      {
        "ayahNumber": "38",
        "ayahText": "إِنَّ لَكُمْ فِيهِ لَمَا تَخَيَّرُونَ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "أَمْ لَكُمْ أَيْمَانٌ عَلَيْنَا بَالِغَةٌ إِلَىٰ يَوْمِ الْقِيَامَةِ ۙ إِنَّ لَكُمْ لَمَا تَحْكُمُونَ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "سَلْهُمْ أَيُّهُم بِذَٰلِكَ زَعِيمٌ"
      },
      {
        "ayahNumber": "41",
        "ayahText": "أَمْ لَهُمْ شُرَكَاءُ فَلْيَأْتُوا بِشُرَكَائِهِمْ إِن كَانُوا صَادِقِينَ"
      },
      {
        "ayahNumber": "42",
        "ayahText": "يَوْمَ يُكْشَفُ عَن سَاقٍ وَيُدْعَوْنَ إِلَى السُّجُودِ فَلَا يَسْتَطِيعُونَ"
      },
      {
        "ayahNumber": "43",
        "ayahText": "خَاشِعَةً أَبْصَارُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۖ وَقَدْ كَانُوا يُدْعَوْنَ إِلَى السُّجُودِ وَهُمْ سَالِمُونَ"
      },
      {
        "ayahNumber": "44",
        "ayahText": "فَذَرْنِي وَمَن يُكَذِّبُ بِهَـٰذَا الْحَدِيثِ ۖ سَنَسْتَدْرِجُهُم مِّنْ حَيْثُ لَا يَعْلَمُونَ"
      },
      {
        "ayahNumber": "45",
        "ayahText": "وَأُمْلِي لَهُمْ ۚ إِنَّ كَيْدِي مَتِينٌ"
      },
      {
        "ayahNumber": "46",
        "ayahText": "أَمْ تَسْأَلُهُمْ أَجْرًا فَهُم مِّن مَّغْرَمٍ مُّثْقَلُونَ"
      },
      {
        "ayahNumber": "47",
        "ayahText": "أَمْ عِندَهُمُ الْغَيْبُ فَهُمْ يَكْتُبُونَ"
      },
      {
        "ayahNumber": "48",
        "ayahText": "فَاصْبِرْ لِحُكْمِ رَبِّكَ وَلَا تَكُن كَصَاحِبِ الْحُوتِ إِذْ نَادَىٰ وَهُوَ مَكْظُومٌ"
      },
      {
        "ayahNumber": "49",
        "ayahText": "لَّوْلَا أَن تَدَارَكَهُ نِعْمَةٌ مِّن رَّبِّهِ لَنُبِذَ بِالْعَرَاءِ وَهُوَ مَذْمُومٌ"
      },
      {
        "ayahNumber": "50",
        "ayahText": "فَاجْتَبَاهُ رَبُّهُ فَجَعَلَهُ مِنَ الصَّالِحِينَ"
      },
      {
        "ayahNumber": "51",
        "ayahText": "وَإِن يَكَادُ الَّذِينَ كَفَرُوا لَيُزْلِقُونَكَ بِأَبْصَارِهِمْ لَمَّا سَمِعُوا الذِّكْرَ وَيَقُولُونَ إِنَّهُ لَمَجْنُونٌ"
      },
      {
        "ayahNumber": "52",
        "ayahText": "وَمَا هُوَ إِلَّا ذِكْرٌ لِّلْعَالَمِينَ"
      }
    ]
  }
}