{
  "insikak": {
    "surahNumber": "84",
    "surahName": "الإنشقاق",
    "surahNameTr": "İnşikâk Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "إِذَا السَّمَاءُ انشَقَّتْ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَإِذَا الْأَرْضُ مُدَّتْ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "وَأَلْقَتْ مَا فِيهَا وَتَخَلَّتْ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "يَا أَيُّهَا الْإِنسَانُ إِنَّكَ كَادِحٌ إِلَىٰ رَبِّكَ كَدْحًا فَمُلَاقِيهِ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "فَأَمَّا مَنْ أُوتِيَ كِتَابَهُ بِيَمِينِهِ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "فَسَوْفَ يُحَاسَبُ حِسَابًا يَسِيرًا"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَيَنقَلِبُ إِلَىٰ أَهْلِهِ مَسْرُورًا"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَأَمَّا مَنْ أُوتِيَ كِتَابَهُ وَرَاءَ ظَهْرِهِ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "فَسَوْفَ يَدْعُو ثُبُورًا"
      },
      {
        "ayahNumber": "12",
        "ayahText": "وَيَصْلَىٰ سَعِيرًا"
      },
      {
        "ayahNumber": "13",
        "ayahText": "إِنَّهُ كَانَ فِي أَهْلِهِ مَسْرُورًا"
      },
      {
        "ayahNumber": "14",
        "ayahText": "إِنَّهُ ظَنَّ أَن لَّن يَحُورَ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "بَلَىٰ إِنَّ رَبَّهُ كَانَ بِهِ بَصِيرًا"
      },
      {
        "ayahNumber": "16",
        "ayahText": "فَلَا أُقْسِمُ بِالشَّفَقِ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "وَاللَّيْلِ وَمَا وَسَقَ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "وَالْقَمَرِ إِذَا اتَّسَقَ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "لَتَرْكَبُنَّ طَبَقًا عَن طَبَقٍ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "فَمَا لَهُمْ لَا يُؤْمِنُونَ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "وَإِذَا قُرِئَ عَلَيْهِمُ الْقُرْآنُ لَا يَسْجُدُونَ ۩"
      },
      {
        "ayahNumber": "22",
        "ayahText": "بَلِ الَّذِينَ كَفَرُوا يُكَذِّبُونَ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "وَاللَّهُ أَعْلَمُ بِمَا يُوعُونَ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "فَبَشِّرْهُم بِعَذَابٍ أَلِيمٍ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "إِلَّا الَّذِينَ آمَنُوا وَعَمِلُوا الصَّالِحَاتِ لَهُمْ أَجْرٌ غَيْرُ مَمْنُونٍ"
      }
    ]
  }
}