{
  "maun": {
    "surahNumber": "107",
    "surahName": "الماعون",
    "surahNameTr": "Mâûn Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "أَرَأَيْتَ الَّذِي يُكَذِّبُ بِالدِّينِ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "فَذَٰلِكَ الَّذِي يَدُعُّ الْيَتِيمَ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ الْمِسْكِينِ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "فَوَيْلٌ لِّلْمُصَلِّينَ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "الَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "الَّذِينَ هُمْ يُرَاءُونَ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَيَمْنَعُونَ الْمَاعُونَ"
      }
    ]
  }
}