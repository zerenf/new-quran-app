{
  "zilzal": {
    "surahNumber": "99",
    "surahName": "الزلزلة",
    "surahNameTr": "Zilzâl Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "إِذَا زُلْزِلَتِ الْأَرْضُ زِلْزَالَهَا"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَأَخْرَجَتِ الْأَرْضُ أَثْقَالَهَا"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَقَالَ الْإِنسَانُ مَا لَهَا"
      },
      {
        "ayahNumber": "4",
        "ayahText": "يَوْمَئِذٍ تُحَدِّثُ أَخْبَارَهَا"
      },
      {
        "ayahNumber": "5",
        "ayahText": "بِأَنَّ رَبَّكَ أَوْحَىٰ لَهَا"
      },
      {
        "ayahNumber": "6",
        "ayahText": "يَوْمَئِذٍ يَصْدُرُ النَّاسُ أَشْتَاتًا لِّيُرَوْا أَعْمَالَهُمْ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "فَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًا يَرَهُ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ شَرًّا يَرَهُ"
      }
    ]
  }
}