{
  "duha": {
    "surahNumber": "93",
    "surahName": "الضحى",
    "surahNameTr": "Duhâ Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "وَالضُّحَىٰ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَاللَّيْلِ إِذَا سَجَىٰ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "وَلَلْآخِرَةُ خَيْرٌ لَّكَ مِنَ الْأُولَىٰ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "وَلَسَوْفَ يُعْطِيكَ رَبُّكَ فَتَرْضَىٰ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "أَلَمْ يَجِدْكَ يَتِيمًا فَآوَىٰ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَوَجَدَكَ ضَالًّا فَهَدَىٰ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَوَجَدَكَ عَائِلًا فَأَغْنَىٰ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "فَأَمَّا الْيَتِيمَ فَلَا تَقْهَرْ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَأَمَّا السَّائِلَ فَلَا تَنْهَرْ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "وَأَمَّا بِنِعْمَةِ رَبِّكَ فَحَدِّثْ"
      }
    ]
  }
}