    "surahName": "التكاثر",
    "surahNameTr": "Tekâsür Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "أَلْهَاكُمُ التَّكَاثُرُ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "حَتَّىٰ زُرْتُمُ الْمَقَابِرَ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "كَلَّا سَوْفَ تَعْلَمُونَ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "كَلَّا لَوْ تَعْلَمُونَ عِلْمَ الْيَقِينِ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "لَتَرَوُنَّ الْجَحِيمَ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "ثُمَّ لَتَرَوُنَّهَا عَيْنَ الْيَقِينِ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "ثُمَّ لَتُسْأَلُنَّ يَوْمَئِذٍ عَنِ النَّعِيمِ"
      }
    ]
  }
