{
	"nebe": {
		"surahNumber": "78",
		"surahName": "النبإ",
		"surahNameTr": "Nebe'",
		"ayats": [
			{
				"ayahNumber": "1",
				"ayahText": "عَمَّ يَتَسَاءَلُونَ"
			},
			{
				"ayahNumber": "2",
				"ayahText": "عَنِ النَّبَإِ الْعَظِيمِ"
			},
			{
				"ayahNumber": "3",
				"ayahText": "الَّذِي هُمْ فِيهِ مُخْتَلِفُونَ"
			},
			{
				"ayahNumber": "4",
				"ayahText": "كَلَّا سَيَعْلَمُونَ"
			},
			{
				"ayahNumber": "5",
				"ayahText": "ثُمَّ كَلَّا سَيَعْلَمُونَ"
			},
			{
				"ayahNumber": "6",
				"ayahText": "أَلَمْ نَجْعَلِ الْأَرْضَ مِهَادًا"
			},
			{
				"ayahNumber": "7",
				"ayahText": "وَالْجِبَالَ أَوْتَادًا"
			},
			{
				"ayahNumber": "8",
				"ayahText": "وَخَلَقْنَاكُمْ أَزْوَاجًا"
			},
			{
				"ayahNumber": "9",
				"ayahText": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتًا"
			},
			{
				"ayahNumber": "10",
				"ayahText": "وَجَعَلْنَا اللَّيْلَ لِبَاسًا"
			},
			{
				"ayahNumber": "11",
				"ayahText": "وَجَعَلْنَا النَّهَارَ مَعَاشًا"
			},
			{
				"ayahNumber": "12",
				"ayahText": "وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًا"
			},
			{
				"ayahNumber": "13",
				"ayahText": "وَجَعَلْنَا سِرَاجًا وَهَّاجًا"
			},
			{
				"ayahNumber": "14",
				"ayahText": "وَأَنزَلْنَا مِنَ الْمُعْصِرَاتِ مَاءً ثَجَّاجًا"
			},
			{
				"ayahNumber": "15",
				"ayahText": "لِّنُخْرِجَ بِهِ حَبًّا وَنَبَاتًا"
			},
			{
				"ayahNumber": "16",
				"ayahText": "وَجَنَّاتٍ أَلْفَافًا"
			},
			{
				"ayahNumber": "17",
				"ayahText": "إِنَّ يَوْمَ الْفَصْلِ كَانَ مِيقَاتًا"
			},
			{
				"ayahNumber": "18",
				"ayahText": "يَوْمَ يُنفَخُ فِي الصُّورِ فَتَأْتُونَ أَفْوَاجًا"
			},
			{
				"ayahNumber": "19",
				"ayahText": "وَفُتِحَتِ السَّمَاءُ فَكَانَتْ أَبْوَابًا"
			},
			{
				"ayahNumber": "20",
				"ayahText": "وَسُيِّرَتِ الْجِبَالُ فَكَانَتْ سَرَابًا"
			},
			{
				"ayahNumber": "21",
				"ayahText": "إِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًا"
			},
			{
				"ayahNumber": "22",
				"ayahText": "لِّلطَّاغِينَ مَآبًا"
			},
			{
				"ayahNumber": "23",
				"ayahText": "لَّابِثِينَ فِيهَا أَحْقَابًا"
			},
			{
				"ayahNumber": "24",
				"ayahText": "لَّا يَذُوقُونَ فِيهَا بَرْدًا وَلَا شَرَابًا"
			},
			{
				"ayahNumber": "25",
				"ayahText": "إِلَّا حَمِيمًا وَغَسَّاقًا"
			},
			{
				"ayahNumber": "26",
				"ayahText": "جَزَاءً وِفَاقًا"
			},
			{
				"ayahNumber": "27",
				"ayahText": "إِنَّهُمْ كَانُوا لَا يَرْجُونَ حِسَابًا"
			},
			{
				"ayahNumber": "28",
				"ayahText": "وَكَذَّبُوا بِآيَاتِنَا كِذَّابًا"
			},
			{
				"ayahNumber": "29",
				"ayahText": "وَكُلَّ شَيْءٍ أَحْصَيْنَاهُ كِتَابًا"
			},
			{
				"ayahNumber": "30",
				"ayahText": "فَذُوقُوا فَلَن نَّزِيدَكُمْ إِلَّا عَذَابًا"
			},
			{
				"ayahNumber": "31",
				"ayahText": "إِنَّ لِلْمُتَّقِينَ مَفَازًا"
			},
			{
				"ayahNumber": "32",
				"ayahText": "حَدَائِقَ وَأَعْنَابًا"
			},
			{
				"ayahNumber": "33",
				"ayahText": "وَكَوَاعِبَ أَتْرَابًا"
			},
			{
				"ayahNumber": "34",
				"ayahText": "وَكَأْسًا دِهَاقًا"
			},
			{
				"ayahNumber": "35",
				"ayahText": "لَّا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا كِذَّابًا"
			},
			{
				"ayahNumber": "36",
				"ayahText": "جَزَاءً مِّن رَّبِّكَ عَطَاءً حِسَابًا"
			},
			{
				"ayahNumber": "37",
				"ayahText": "رَّبِّ السَّمَاوَاتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا الرَّحْمَـٰنِ ۖ لَا يَمْلِكُونَ مِنْهُ خِطَابًا"
			},
			{
				"ayahNumber": "38",
				"ayahText": "يَوْمَ يَقُومُ الرُّوحُ وَالْمَلَائِكَةُ صَفًّا ۖ لَّا يَتَكَلَّمُونَ إِلَّا مَنْ أَذِنَ لَهُ الرَّحْمَـٰنُ وَقَالَ صَوَابًا"
			},
			{
				"ayahNumber": "39",
				"ayahText": "ذَٰلِكَ الْيَوْمُ الْحَقُّ ۖ فَمَن شَاءَ اتَّخَذَ إِلَىٰ رَبِّهِ مَآبًا"
			},
			{
				"ayahNumber": "40",
				"ayahText": "إِنَّا أَنذَرْنَاكُمْ عَذَابًا قَرِيبًا يَوْمَ يَنظُرُ الْمَرْءُ مَا قَدَّمَتْ يَدَاهُ وَيَقُولُ الْكَافِرُ يَا لَيْتَنِي كُنتُ تُرَابًا"
			}
		]
	}
}
