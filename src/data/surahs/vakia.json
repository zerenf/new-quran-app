{
  "vakia": {
    "surahNumber": "56",
    "surahName": "الواقعة",
    "surahNameTr": "Vâkıa Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "إِذَا وَقَعَتِ الْوَاقِعَةُ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "خَافِضَةٌ رَّافِعَةٌ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "إِذَا رُجَّتِ الْأَرْضُ رَجًّا"
      },
      {
        "ayahNumber": "5",
        "ayahText": "وَبُسَّتِ الْجِبَالُ بَسًّا"
      },
      {
        "ayahNumber": "6",
        "ayahText": "فَكَانَتْ هَبَاءً مُّنبَثًّا"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَكُنتُمْ أَزْوَاجًا ثَلَاثَةً"
      },
      {
        "ayahNumber": "8",
        "ayahText": "فَأَصْحَابُ الْمَيْمَنَةِ مَا أَصْحَابُ الْمَيْمَنَةِ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَأَصْحَابُ الْمَشْأَمَةِ مَا أَصْحَابُ الْمَشْأَمَةِ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَالسَّابِقُونَ السَّابِقُونَ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "أُولَـٰئِكَ الْمُقَرَّبُونَ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "فِي جَنَّاتِ النَّعِيمِ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "ثُلَّةٌ مِّنَ الْأَوَّلِينَ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "وَقَلِيلٌ مِّنَ الْآخِرِينَ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "عَلَىٰ سُرُرٍ مَّوْضُونَةٍ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "مُّتَّكِئِينَ عَلَيْهَا مُتَقَابِلِينَ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "يَطُوفُ عَلَيْهِمْ وِلْدَانٌ مُّخَلَّدُونَ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "بِأَكْوَابٍ وَأَبَارِيقَ وَكَأْسٍ مِّن مَّعِينٍ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "لَّا يُصَدَّعُونَ عَنْهَا وَلَا يُنزِفُونَ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "وَفَاكِهَةٍ مِّمَّا يَتَخَيَّرُونَ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "وَلَحْمِ طَيْرٍ مِّمَّا يَشْتَهُونَ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "وَحُورٌ عِينٌ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "كَأَمْثَالِ اللُّؤْلُؤِ الْمَكْنُونِ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "جَزَاءً بِمَا كَانُوا يَعْمَلُونَ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا تَأْثِيمًا"
      },
      {
        "ayahNumber": "26",
        "ayahText": "إِلَّا قِيلًا سَلَامًا سَلَامًا"
      },
      {
        "ayahNumber": "27",
        "ayahText": "وَأَصْحَابُ الْيَمِينِ مَا أَصْحَابُ الْيَمِينِ"
      },
      {
        "ayahNumber": "28",
        "ayahText": "فِي سِدْرٍ مَّخْضُودٍ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "وَطَلْحٍ مَّنضُودٍ"
      },
      {
        "ayahNumber": "30",
        "ayahText": "وَظِلٍّ مَّمْدُودٍ"
      },
      {
        "ayahNumber": "31",
        "ayahText": "وَمَاءٍ مَّسْكُوبٍ"
      },
      {
        "ayahNumber": "32",
        "ayahText": "وَفَاكِهَةٍ كَثِيرَةٍ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "لَّا مَقْطُوعَةٍ وَلَا مَمْنُوعَةٍ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "وَفُرُشٍ مَّرْفُوعَةٍ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "إِنَّا أَنشَأْنَاهُنَّ إِنشَاءً"
      },
      {
        "ayahNumber": "36",
        "ayahText": "فَجَعَلْنَاهُنَّ أَبْكَارًا"
      },
      {
        "ayahNumber": "37",
        "ayahText": "عُرُبًا أَتْرَابًا"
      },
      {
        "ayahNumber": "38",
        "ayahText": "لِّأَصْحَابِ الْيَمِينِ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "ثُلَّةٌ مِّنَ الْأَوَّلِينَ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "وَثُلَّةٌ مِّنَ الْآخِرِينَ"
      },
      {
        "ayahNumber": "41",
        "ayahText": "وَأَصْحَابُ الشِّمَالِ مَا أَصْحَابُ الشِّمَالِ"
      },
      {
        "ayahNumber": "42",
        "ayahText": "فِي سَمُومٍ وَحَمِيمٍ"
      },
      {
        "ayahNumber": "43",
        "ayahText": "وَظِلٍّ مِّن يَحْمُومٍ"
      },
      {
        "ayahNumber": "44",
        "ayahText": "لَّا بَارِدٍ وَلَا كَرِيمٍ"
      },
      {
        "ayahNumber": "45",
        "ayahText": "إِنَّهُمْ كَانُوا قَبْلَ ذَٰلِكَ مُتْرَفِينَ"
      },
      {
        "ayahNumber": "46",
        "ayahText": "وَكَانُوا يُصِرُّونَ عَلَى الْحِنثِ الْعَظِيمِ"
      },
      {
        "ayahNumber": "47",
        "ayahText": "وَكَانُوا يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَبْعُوثُونَ"
      },
      {
        "ayahNumber": "48",
        "ayahText": "أَوَآبَاؤُنَا الْأَوَّلُونَ"
      },
      {
        "ayahNumber": "49",
        "ayahText": "قُلْ إِنَّ الْأَوَّلِينَ وَالْآخِرِينَ"
      },
      {
        "ayahNumber": "50",
        "ayahText": "لَمَجْمُوعُونَ إِلَىٰ مِيقَاتِ يَوْمٍ مَّعْلُومٍ"
      },
      {
        "ayahNumber": "51",
        "ayahText": "ثُمَّ إِنَّكُمْ أَيُّهَا الضَّالُّونَ الْمُكَذِّبُونَ"
      },
      {
        "ayahNumber": "52",
        "ayahText": "لَآكِلُونَ مِن شَجَرٍ مِّن زَقُّومٍ"
      },
      {
        "ayahNumber": "53",
        "ayahText": "فَمَالِئُونَ مِنْهَا الْبُطُونَ"
      },
      {
        "ayahNumber": "54",
        "ayahText": "فَشَارِبُونَ عَلَيْهِ مِنَ الْحَمِيمِ"
      },
      {
        "ayahNumber": "55",
        "ayahText": "فَشَارِبُونَ شُرْبَ الْهِيمِ"
      },
      {
        "ayahNumber": "56",
        "ayahText": "هَـٰذَا نُزُلُهُمْ يَوْمَ الدِّينِ"
      },
      {
        "ayahNumber": "57",
        "ayahText": "نَحْنُ خَلَقْنَاكُمْ فَلَوْلَا تُصَدِّقُونَ"
      },
      {
        "ayahNumber": "58",
        "ayahText": "أَفَرَأَيْتُم مَّا تُمْنُونَ"
      },
      {
        "ayahNumber": "59",
        "ayahText": "أَأَنتُمْ تَخْلُقُونَهُ أَمْ نَحْنُ الْخَالِقُونَ"
      },
      {
        "ayahNumber": "60",
        "ayahText": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ الْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ"
      },
      {
        "ayahNumber": "61",
        "ayahText": "عَلَىٰ أَن نُّبَدِّلَ أَمْثَالَكُمْ وَنُنشِئَكُمْ فِي مَا لَا تَعْلَمُونَ"
      },
      {
        "ayahNumber": "62",
        "ayahText": "وَلَقَدْ عَلِمْتُمُ النَّشْأَةَ الْأُولَىٰ فَلَوْلَا تَذَكَّرُونَ"
      },
      {
        "ayahNumber": "63",
        "ayahText": "أَفَرَأَيْتُم مَّا تَحْرُثُونَ"
      },
      {
        "ayahNumber": "64",
        "ayahText": "أَأَنتُمْ تَزْرَعُونَهُ أَمْ نَحْنُ الزَّارِعُونَ"
      },
      {
        "ayahNumber": "65",
        "ayahText": "لَوْ نَشَاءُ لَجَعَلْنَاهُ حُطَامًا فَظَلْتُمْ تَفَكَّهُونَ"
      },
      {
        "ayahNumber": "66",
        "ayahText": "إِنَّا لَمُغْرَمُونَ"
      },
      {
        "ayahNumber": "67",
        "ayahText": "بَلْ نَحْنُ مَحْرُومُونَ"
      },
      {
        "ayahNumber": "68",
        "ayahText": "أَفَرَأَيْتُمُ الْمَاءَ الَّذِي تَشْرَبُونَ"
      },
      {
        "ayahNumber": "69",
        "ayahText": "أَأَنتُمْ أَنزَلْتُمُوهُ مِنَ الْمُزْنِ أَمْ نَحْنُ الْمُنزِلُونَ"
      },
      {
        "ayahNumber": "70",
        "ayahText": "لَوْ نَشَاءُ جَعَلْنَاهُ أُجَاجًا فَلَوْلَا تَشْكُرُونَ"
      },
      {
        "ayahNumber": "71",
        "ayahText": "أَفَرَأَيْتُمُ النَّارَ الَّتِي تُورُونَ"
      },
      {
        "ayahNumber": "72",
        "ayahText": "أَأَنتُمْ أَنشَأْتُمْ شَجَرَتَهَا أَمْ نَحْنُ الْمُنشِئُونَ"
      },
      {
        "ayahNumber": "73",
        "ayahText": "نَحْنُ جَعَلْنَاهَا تَذْكِرَةً وَمَتَاعًا لِّلْمُقْوِينَ"
      },
      {
        "ayahNumber": "74",
        "ayahText": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ"
      },
      {
        "ayahNumber": "75",
        "ayahText": "فَلَا أُقْسِمُ بِمَوَاقِعِ النُّجُومِ"
      },
      {
        "ayahNumber": "76",
        "ayahText": "وَإِنَّهُ لَقَسَمٌ لَّوْ تَعْلَمُونَ عَظِيمٌ"
      },
      {
        "ayahNumber": "77",
        "ayahText": "إِنَّهُ لَقُرْآنٌ كَرِيمٌ"
      },
      {
        "ayahNumber": "78",
        "ayahText": "فِي كِتَابٍ مَّكْنُونٍ"
      },
      {
        "ayahNumber": "79",
        "ayahText": "لَّا يَمَسُّهُ إِلَّا الْمُطَهَّرُونَ"
      },
      {
        "ayahNumber": "80",
        "ayahText": "تَنزِيلٌ مِّن رَّبِّ الْعَالَمِينَ"
      },
      {
        "ayahNumber": "81",
        "ayahText": "أَفَبِهَـٰذَا الْحَدِيثِ أَنتُم مُّدْهِنُونَ"
      },
      {
        "ayahNumber": "82",
        "ayahText": "وَتَجْعَلُونَ رِزْقَكُمْ أَنَّكُمْ تُكَذِّبُونَ"
      },
      {
        "ayahNumber": "83",
        "ayahText": "فَلَوْلَا إِذَا بَلَغَتِ الْحُلْقُومَ"
      },
      {
        "ayahNumber": "84",
        "ayahText": "وَأَنتُمْ حِينَئِذٍ تَنظُرُونَ"
      },
      {
        "ayahNumber": "85",
        "ayahText": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنكُمْ وَلَـٰكِن لَّا تُبْصِرُونَ"
      },
      {
        "ayahNumber": "86",
        "ayahText": "فَلَوْلَا إِن كُنتُمْ غَيْرَ مَدِينِينَ"
      },
      {
        "ayahNumber": "87",
        "ayahText": "تَرْجِعُونَهَا إِن كُنتُمْ صَادِقِينَ"
      },
      {
        "ayahNumber": "88",
        "ayahText": "فَأَمَّا إِن كَانَ مِنَ الْمُقَرَّبِينَ"
      },
      {
        "ayahNumber": "89",
        "ayahText": "فَرَوْحٌ وَرَيْحَانٌ وَجَنَّتُ نَعِيمٍ"
      },
      {
        "ayahNumber": "90",
        "ayahText": "وَأَمَّا إِن كَانَ مِنْ أَصْحَابِ الْيَمِينِ"
      },
      {
        "ayahNumber": "91",
        "ayahText": "فَسَلَامٌ لَّكَ مِنْ أَصْحَابِ الْيَمِينِ"
      },
      {
        "ayahNumber": "92",
        "ayahText": "وَأَمَّا إِن كَانَ مِنَ الْمُكَذِّبِينَ الضَّالِّينَ"
      },
      {
        "ayahNumber": "93",
        "ayahText": "فَنُزُلٌ مِّنْ حَمِيمٍ"
      },
      {
        "ayahNumber": "94",
        "ayahText": "وَتَصْلِيَةُ جَحِيمٍ"
      },
      {
        "ayahNumber": "95",
        "ayahText": "إِنَّ هَـٰذَا لَهُوَ حَقُّ الْيَقِينِ"
      },
      {
        "ayahNumber": "96",
        "ayahText": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ"
      }
    ]
  }
}