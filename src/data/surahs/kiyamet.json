{
  "kiyamet": {
    "surahNumber": "75",
    "surahName": "القيامة",
    "surahNameTr": "Kıyamet Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "لَا أُقْسِمُ بِيَوْمِ الْقِيَامَةِ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَلَا أُقْسِمُ بِالنَّفْسِ اللَّوَّامَةِ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "أَيَحْسَبُ الْإِنسَانُ أَلَّن نَّجْمَعَ عِظَامَهُ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "بَلَىٰ قَادِرِينَ عَلَىٰ أَن نُّسَوِّيَ بَنَانَهُ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "بَلْ يُرِيدُ الْإِنسَانُ لِيَفْجُرَ أَمَامَهُ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "يَسْأَلُ أَيَّانَ يَوْمُ الْقِيَامَةِ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "فَإِذَا بَرِقَ الْبَصَرُ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَخَسَفَ الْقَمَرُ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَجُمِعَ الشَّمْسُ وَالْقَمَرُ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "يَقُولُ الْإِنسَانُ يَوْمَئِذٍ أَيْنَ الْمَفَرُّ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "كَلَّا لَا وَزَرَ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمُسْتَقَرُّ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "يُنَبَّأُ الْإِنسَانُ يَوْمَئِذٍ بِمَا قَدَّمَ وَأَخَّرَ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "بَلِ الْإِنسَانُ عَلَىٰ نَفْسِهِ بَصِيرَةٌ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "وَلَوْ أَلْقَىٰ مَعَاذِيرَهُ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "لَا تُحَرِّكْ بِهِ لِسَانَكَ لِتَعْجَلَ بِهِ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "إِنَّ عَلَيْنَا جَمْعَهُ وَقُرْآنَهُ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "فَإِذَا قَرَأْنَاهُ فَاتَّبِعْ قُرْآنَهُ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "كَلَّا بَلْ تُحِبُّونَ الْعَاجِلَةَ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "وَتَذَرُونَ الْآخِرَةَ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "وُجُوهٌ يَوْمَئِذٍ نَّاضِرَةٌ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "إِلَىٰ رَبِّهَا نَاظِرَةٌ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "وَوُجُوهٌ يَوْمَئِذٍ بَاسِرَةٌ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "تَظُنُّ أَن يُفْعَلَ بِهَا فَاقِرَةٌ"
      },
      {
        "ayahNumber": "26",
        "ayahText": "كَلَّا إِذَا بَلَغَتِ التَّرَاقِيَ"
      },
      {
        "ayahNumber": "27",
        "ayahText": "وَقِيلَ مَنْ ۜ رَاقٍ"
      },
      {
        "ayahNumber": "28",
        "ayahText": "وَظَنَّ أَنَّهُ الْفِرَاقُ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "وَالْتَفَّتِ السَّاقُ بِالسَّاقِ"
      },
      {
        "ayahNumber": "30",
        "ayahText": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمَسَاقُ"
      },
      {
        "ayahNumber": "31",
        "ayahText": "فَلَا صَدَّقَ وَلَا صَلَّىٰ"
      },
      {
        "ayahNumber": "32",
        "ayahText": "وَلَـٰكِن كَذَّبَ وَتَوَلَّىٰ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "ثُمَّ ذَهَبَ إِلَىٰ أَهْلِهِ يَتَمَطَّىٰ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "أَوْلَىٰ لَكَ فَأَوْلَىٰ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "ثُمَّ أَوْلَىٰ لَكَ فَأَوْلَىٰ"
      },
      {
        "ayahNumber": "36",
        "ayahText": "أَيَحْسَبُ الْإِنسَانُ أَن يُتْرَكَ سُدًى"
      },
      {
        "ayahNumber": "37",
        "ayahText": "أَلَمْ يَكُ نُطْفَةً مِّن مَّنِيٍّ يُمْنَىٰ"
      },
      {
        "ayahNumber": "38",
        "ayahText": "ثُمَّ كَانَ عَلَقَةً فَخَلَقَ فَسَوَّىٰ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "فَجَعَلَ مِنْهُ الزَّوْجَيْنِ الذَّكَرَ وَالْأُنثَىٰ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "أَلَيْسَ ذَٰلِكَ بِقَادِرٍ عَلَىٰ أَن يُحْيِيَ الْمَوْتَىٰ"
      }
    ]
  }
}