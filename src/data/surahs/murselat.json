{
  "murselat": {
    "surahNumber": "77",
    "surahName": "المرسلات",
    "surahNameTr": "Mürselât Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "وَالْمُرْسَلَاتِ عُرْفًا"
      },
      {
        "ayahNumber": "2",
        "ayahText": "فَالْعَاصِفَاتِ عَصْفًا"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَالنَّاشِرَاتِ نَشْرًا"
      },
      {
        "ayahNumber": "4",
        "ayahText": "فَالْفَارِقَاتِ فَرْقًا"
      },
      {
        "ayahNumber": "5",
        "ayahText": "فَالْمُلْقِيَاتِ ذِكْرًا"
      },
      {
        "ayahNumber": "6",
        "ayahText": "عُذْرًا أَوْ نُذْرًا"
      },
      {
        "ayahNumber": "7",
        "ayahText": "إِنَّمَا تُوعَدُونَ لَوَاقِعٌ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "فَإِذَا النُّجُومُ طُمِسَتْ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَإِذَا السَّمَاءُ فُرِجَتْ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَإِذَا الْجِبَالُ نُسِفَتْ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "وَإِذَا الرُّسُلُ أُقِّتَتْ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "لِأَيِّ يَوْمٍ أُجِّلَتْ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "لِيَوْمِ الْفَصْلِ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "وَمَا أَدْرَاكَ مَا يَوْمُ الْفَصْلِ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "أَلَمْ نُهْلِكِ الْأَوَّلِينَ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "ثُمَّ نُتْبِعُهُمُ الْآخِرِينَ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "كَذَٰلِكَ نَفْعَلُ بِالْمُجْرِمِينَ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "أَلَمْ نَخْلُقكُّم مِّن مَّاءٍ مَّهِينٍ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "فَجَعَلْنَاهُ فِي قَرَارٍ مَّكِينٍ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "إِلَىٰ قَدَرٍ مَّعْلُومٍ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "فَقَدَرْنَا فَنِعْمَ الْقَادِرُونَ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "أَلَمْ نَجْعَلِ الْأَرْضَ كِفَاتًا"
      },
      {
        "ayahNumber": "26",
        "ayahText": "أَحْيَاءً وَأَمْوَاتًا"
      },
      {
        "ayahNumber": "27",
        "ayahText": "وَجَعَلْنَا فِيهَا رَوَاسِيَ شَامِخَاتٍ وَأَسْقَيْنَاكُم مَّاءً فُرَاتًا"
      },
      {
        "ayahNumber": "28",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "29",
        "ayahText": "انطَلِقُوا إِلَىٰ مَا كُنتُم بِهِ تُكَذِّبُونَ"
      },
      {
        "ayahNumber": "30",
        "ayahText": "انطَلِقُوا إِلَىٰ ظِلٍّ ذِي ثَلَاثِ شُعَبٍ"
      },
      {
        "ayahNumber": "31",
        "ayahText": "لَّا ظَلِيلٍ وَلَا يُغْنِي مِنَ اللَّهَبِ"
      },
      {
        "ayahNumber": "32",
        "ayahText": "إِنَّهَا تَرْمِي بِشَرَرٍ كَالْقَصْرِ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "كَأَنَّهُ جِمَالَتٌ صُفْرٌ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "هَـٰذَا يَوْمُ لَا يَنطِقُونَ"
      },
      {
        "ayahNumber": "36",
        "ayahText": "وَلَا يُؤْذَنُ لَهُمْ فَيَعْتَذِرُونَ"
      },
      {
        "ayahNumber": "37",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "38",
        "ayahText": "هَـٰذَا يَوْمُ الْفَصْلِ ۖ جَمَعْنَاكُمْ وَالْأَوَّلِينَ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "فَإِن كَانَ لَكُمْ كَيْدٌ فَكِيدُونِ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "41",
        "ayahText": "إِنَّ الْمُتَّقِينَ فِي ظِلَالٍ وَعُيُونٍ"
      },
      {
        "ayahNumber": "42",
        "ayahText": "وَفَوَاكِهَ مِمَّا يَشْتَهُونَ"
      },
      {
        "ayahNumber": "43",
        "ayahText": "كُلُوا وَاشْرَبُوا هَنِيئًا بِمَا كُنتُمْ تَعْمَلُونَ"
      },
      {
        "ayahNumber": "44",
        "ayahText": "إِنَّا كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ"
      },
      {
        "ayahNumber": "45",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "46",
        "ayahText": "كُلُوا وَتَمَتَّعُوا قَلِيلًا إِنَّكُم مُّجْرِمُونَ"
      },
      {
        "ayahNumber": "47",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "48",
        "ayahText": "وَإِذَا قِيلَ لَهُمُ ارْكَعُوا لَا يَرْكَعُونَ"
      },
      {
        "ayahNumber": "49",
        "ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
      },
      {
        "ayahNumber": "50",
        "ayahText": "فَبِأَيِّ حَدِيثٍ بَعْدَهُ يُؤْمِنُونَ"
      }
    ]
  }
}