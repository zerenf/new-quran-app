{
  "infitar": {
    "surahNumber": "82",
    "surahName": "الإنفطار",
    "surahNameTr": "İnfitâr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "إِذَا السَّمَاءُ انفَطَرَتْ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "وَإِذَا الْكَوَاكِبُ انتَثَرَتْ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَإِذَا الْبِحَارُ فُجِّرَتْ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "وَإِذَا الْقُبُورُ بُعْثِرَتْ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "عَلِمَتْ نَفْسٌ مَّا قَدَّمَتْ وَأَخَّرَتْ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "يَا أَيُّهَا الْإِنسَانُ مَا غَرَّكَ بِرَبِّكَ الْكَرِيمِ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "الَّذِي خَلَقَكَ فَسَوَّاكَ فَعَدَلَكَ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "فِي أَيِّ صُورَةٍ مَّا شَاءَ رَكَّبَكَ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "كَلَّا بَلْ تُكَذِّبُونَ بِالدِّينِ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "وَإِنَّ عَلَيْكُمْ لَحَافِظِينَ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "كِرَامًا كَاتِبِينَ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "يَعْلَمُونَ مَا تَفْعَلُونَ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "إِنَّ الْأَبْرَارَ لَفِي نَعِيمٍ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "وَإِنَّ الْفُجَّارَ لَفِي جَحِيمٍ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "يَصْلَوْنَهَا يَوْمَ الدِّينِ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "وَمَا هُمْ عَنْهَا بِغَائِبِينَ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "وَمَا أَدْرَاكَ مَا يَوْمُ الدِّينِ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "ثُمَّ مَا أَدْرَاكَ مَا يَوْمُ الدِّينِ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "يَوْمَ لَا تَمْلِكُ نَفْسٌ لِّنَفْسٍ شَيْئًا ۖ وَالْأَمْرُ يَوْمَئِذٍ لِّلَّهِ"
      }
    ]
  }
}