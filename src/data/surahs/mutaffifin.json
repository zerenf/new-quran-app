{
	"mutaffifin": {
		"surahNumber": "83",
		"surahName": "المطففين",
		"surahNameTr": "Mutaffifîn",
		"ayats": [
			{
				"ayahNumber": "1",
				"ayahText": "وَيْلٌ لِّلْمُطَفِّفِينَ"
			},
			{
				"ayahNumber": "2",
				"ayahText": "الَّذِينَ إِذَا اكْتَالُوا عَلَى النَّاسِ يَسْتَوْفُونَ"
			},
			{
				"ayahNumber": "3",
				"ayahText": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ"
			},
			{
				"ayahNumber": "4",
				"ayahText": "أَلَا يَظُنُّ أُولَـٰئِكَ أَنَّهُم مَّبْعُوثُونَ"
			},
			{
				"ayahNumber": "5",
				"ayahText": "لِيَوْمٍ عَظِيمٍ"
			},
			{
				"ayahNumber": "6",
				"ayahText": "يَوْمَ يَقُومُ النَّاسُ لِرَبِّ الْعَالَمِينَ"
			},
			{
				"ayahNumber": "7",
				"ayahText": "كَلَّا إِنَّ كِتَابَ الْفُجَّارِ لَفِي سِجِّينٍ"
			},
			{
				"ayahNumber": "8",
				"ayahText": "وَمَا أَدْرَاكَ مَا سِجِّينٌ"
			},
			{
				"ayahNumber": "9",
				"ayahText": "كِتَابٌ مَّرْقُومٌ"
			},
			{
				"ayahNumber": "10",
				"ayahText": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
			},
			{
				"ayahNumber": "11",
				"ayahText": "الَّذِينَ يُكَذِّبُونَ بِيَوْمِ الدِّينِ"
			},
			{
				"ayahNumber": "12",
				"ayahText": "وَمَا يُكَذِّبُ بِهِ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ"
			},
			{
				"ayahNumber": "13",
				"ayahText": "إِذَا تُتْلَىٰ عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ"
			},
			{
				"ayahNumber": "14",
				"ayahText": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا يَكْسِبُونَ"
			},
			{
				"ayahNumber": "15",
				"ayahText": "كَلَّا إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍ لَّمَحْجُوبُونَ"
			},
			{
				"ayahNumber": "16",
				"ayahText": "ثُمَّ إِنَّهُمْ لَصَالُو الْجَحِيمِ"
			},
			{
				"ayahNumber": "17",
				"ayahText": "ثُمَّ يُقَالُ هَـٰذَا الَّذِي كُنتُم بِهِ تُكَذِّبُونَ"
			},
			{
				"ayahNumber": "18",
				"ayahText": "كَلَّا إِنَّ كِتَابَ الْأَبْرَارِ لَفِي عِلِّيِّينَ"
			},
			{
				"ayahNumber": "19",
				"ayahText": "وَمَا أَدْرَاكَ مَا عِلِّيُّونَ"
			},
			{
				"ayahNumber": "20",
				"ayahText": "كِتَابٌ مَّرْقُومٌ"
			},
			{
				"ayahNumber": "21",
				"ayahText": "يَشْهَدُهُ الْمُقَرَّبُونَ"
			},
			{
				"ayahNumber": "22",
				"ayahText": "إِنَّ الْأَبْرَارَ لَفِي نَعِيمٍ"
			},
			{
				"ayahNumber": "23",
				"ayahText": "عَلَى الْأَرَائِكِ يَنظُرُونَ"
			},
			{
				"ayahNumber": "24",
				"ayahText": "تَعْرِفُ فِي وُجُوهِهِمْ نَضْرَةَ النَّعِيمِ"
			},
			{
				"ayahNumber": "25",
				"ayahText": "يُسْقَوْنَ مِن رَّحِيقٍ مَّخْتُومٍ"
			},
			{
				"ayahNumber": "26",
				"ayahText": "خِتَامُهُ مِسْكٌ ۚ وَفِي ذَٰلِكَ فَلْيَتَنَافَسِ الْمُتَنَافِسُونَ"
			},
			{
				"ayahNumber": "27",
				"ayahText": "وَمِزَاجُهُ مِن تَسْنِيمٍ"
			},
			{
				"ayahNumber": "28",
				"ayahText": "عَيْنًا يَشْرَبُ بِهَا الْمُقَرَّبُونَ"
			},
			{
				"ayahNumber": "29",
				"ayahText": "إِنَّ الَّذِينَ أَجْرَمُوا كَانُوا مِنَ الَّذِينَ آمَنُوا يَضْحَكُونَ"
			},
			{
				"ayahNumber": "30",
				"ayahText": "وَإِذَا مَرُّوا بِهِمْ يَتَغَامَزُونَ"
			},
			{
				"ayahNumber": "31",
				"ayahText": "وَإِذَا انقَلَبُوا إِلَىٰ أَهْلِهِمُ انقَلَبُوا فَكِهِينَ"
			},
			{
				"ayahNumber": "32",
				"ayahText": "وَإِذَا رَأَوْهُمْ قَالُوا إِنَّ هَـٰؤُلَاءِ لَضَالُّونَ"
			},
			{
				"ayahNumber": "33",
				"ayahText": "وَمَا أُرْسِلُوا عَلَيْهِمْ حَافِظِينَ"
			},
			{
				"ayahNumber": "34",
				"ayahText": "فَالْيَوْمَ الَّذِينَ آمَنُوا مِنَ الْكُفَّارِ يَضْحَكُونَ"
			},
			{
				"ayahNumber": "35",
				"ayahText": "عَلَى الْأَرَائِكِ يَنظُرُونَ"
			},
			{
				"ayahNumber": "36",
				"ayahText": "هَلْ ثُوِّبَ الْكُفَّارُ مَا كَانُوا يَفْعَلُونَ"
			}
		]
	}
}
