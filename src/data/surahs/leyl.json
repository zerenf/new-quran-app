{
	"leyl": {
		"surahNumber": "92",
		"surahName": "الليل",
		"surahNameTr": "Leyl",
		"ayats": [
			{
				"ayahNumber": "1",
				"ayahText": "وَاللَّيْلِ إِذَا يَغْشَىٰ"
			},
			{
				"ayahNumber": "2",
				"ayahText": "وَالنَّهَارِ إِذَا تَجَلَّىٰ"
			},
			{
				"ayahNumber": "3",
				"ayahText": "وَمَا خَلَقَ الذَّكَرَ وَالْأُنثَىٰ"
			},
			{
				"ayahNumber": "4",
				"ayahText": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ"
			},
			{
				"ayahNumber": "5",
				"ayahText": "فَأَمَّا مَنْ أَعْطَىٰ وَاتَّقَىٰ"
			},
			{
				"ayahNumber": "6",
				"ayahText": "وَصَدَّقَ بِالْحُسْنَىٰ"
			},
			{
				"ayahNumber": "7",
				"ayahText": "فَسَنُيَسِّرُهُ لِلْيُسْرَىٰ"
			},
			{
				"ayahNumber": "8",
				"ayahText": "وَأَمَّا مَن بَخِلَ وَاسْتَغْنَىٰ"
			},
			{
				"ayahNumber": "9",
				"ayahText": "وَكَذَّبَ بِالْحُسْنَىٰ"
			},
			{
				"ayahNumber": "10",
				"ayahText": "فَسَنُيَسِّرُهُ لِلْعُسْرَىٰ"
			},
			{
				"ayahNumber": "11",
				"ayahText": "وَمَا يُغْنِي عَنْهُ مَالُهُ إِذَا تَرَدَّىٰ"
			},
			{
				"ayahNumber": "12",
				"ayahText": "إِنَّ عَلَيْنَا لَلْهُدَىٰ"
			},
			{
				"ayahNumber": "13",
				"ayahText": "وَإِنَّ لَنَا لَلْآخِرَةَ وَالْأُولَىٰ"
			},
			{
				"ayahNumber": "14",
				"ayahText": "فَأَنذَرْتُكُمْ نَارًا تَلَظَّىٰ"
			},
			{
				"ayahNumber": "15",
				"ayahText": "لَا يَصْلَاهَا إِلَّا الْأَشْقَى"
			},
			{
				"ayahNumber": "16",
				"ayahText": "الَّذِي كَذَّبَ وَتَوَلَّىٰ"
			},
			{
				"ayahNumber": "17",
				"ayahText": "وَسَيُجَنَّبُهَا الْأَتْقَى"
			},
			{
				"ayahNumber": "18",
				"ayahText": "الَّذِي يُؤْتِي مَالَهُ يَتَزَكَّىٰ"
			},
			{
				"ayahNumber": "19",
				"ayahText": "وَمَا لِأَحَدٍ عِندَهُ مِن نِّعْمَةٍ تُجْزَىٰ"
			},
			{
				"ayahNumber": "20",
				"ayahText": "إِلَّا ابْتِغَاءَ وَجْهِ رَبِّهِ الْأَعْلَىٰ"
			},
			{
				"ayahNumber": "21",
				"ayahText": "وَلَسَوْفَ يَرْضَىٰ"
			}
		]
	}
}
