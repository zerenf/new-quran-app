{
  "abese": {
    "surahNumber": "80",
    "surahName": "عبس",
    "surahNameTr": "Abese Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "عَبَسَ وَتَوَلَّىٰ"
      },
      {
        "ayahNumber": "2",
        "ayahText": "أَن جَاءَهُ الْأَعْمَىٰ"
      },
      {
        "ayahNumber": "3",
        "ayahText": "وَمَا يُدْرِيكَ لَعَلَّهُ يَزَّكَّىٰ"
      },
      {
        "ayahNumber": "4",
        "ayahText": "أَوْ يَذَّكَّرُ فَتَنفَعَهُ الذِّكْرَىٰ"
      },
      {
        "ayahNumber": "5",
        "ayahText": "أَمَّا مَنِ اسْتَغْنَىٰ"
      },
      {
        "ayahNumber": "6",
        "ayahText": "فَأَنتَ لَهُ تَصَدَّىٰ"
      },
      {
        "ayahNumber": "7",
        "ayahText": "وَمَا عَلَيْكَ أَلَّا يَزَّكَّىٰ"
      },
      {
        "ayahNumber": "8",
        "ayahText": "وَأَمَّا مَن جَاءَكَ يَسْعَىٰ"
      },
      {
        "ayahNumber": "9",
        "ayahText": "وَهُوَ يَخْشَىٰ"
      },
      {
        "ayahNumber": "10",
        "ayahText": "فَأَنتَ عَنْهُ تَلَهَّىٰ"
      },
      {
        "ayahNumber": "11",
        "ayahText": "كَلَّا إِنَّهَا تَذْكِرَةٌ"
      },
      {
        "ayahNumber": "12",
        "ayahText": "فَمَن شَاءَ ذَكَرَهُ"
      },
      {
        "ayahNumber": "13",
        "ayahText": "فِي صُحُفٍ مُّكَرَّمَةٍ"
      },
      {
        "ayahNumber": "14",
        "ayahText": "مَّرْفُوعَةٍ مُّطَهَّرَةٍ"
      },
      {
        "ayahNumber": "15",
        "ayahText": "بِأَيْدِي سَفَرَةٍ"
      },
      {
        "ayahNumber": "16",
        "ayahText": "كِرَامٍ بَرَرَةٍ"
      },
      {
        "ayahNumber": "17",
        "ayahText": "قُتِلَ الْإِنسَانُ مَا أَكْفَرَهُ"
      },
      {
        "ayahNumber": "18",
        "ayahText": "مِنْ أَيِّ شَيْءٍ خَلَقَهُ"
      },
      {
        "ayahNumber": "19",
        "ayahText": "مِن نُّطْفَةٍ خَلَقَهُ فَقَدَّرَهُ"
      },
      {
        "ayahNumber": "20",
        "ayahText": "ثُمَّ السَّبِيلَ يَسَّرَهُ"
      },
      {
        "ayahNumber": "21",
        "ayahText": "ثُمَّ أَمَاتَهُ فَأَقْبَرَهُ"
      },
      {
        "ayahNumber": "22",
        "ayahText": "ثُمَّ إِذَا شَاءَ أَنشَرَهُ"
      },
      {
        "ayahNumber": "23",
        "ayahText": "كَلَّا لَمَّا يَقْضِ مَا أَمَرَهُ"
      },
      {
        "ayahNumber": "24",
        "ayahText": "فَلْيَنظُرِ الْإِنسَانُ إِلَىٰ طَعَامِهِ"
      },
      {
        "ayahNumber": "25",
        "ayahText": "أَنَّا صَبَبْنَا الْمَاءَ صَبًّا"
      },
      {
        "ayahNumber": "26",
        "ayahText": "ثُمَّ شَقَقْنَا الْأَرْضَ شَقًّا"
      },
      {
        "ayahNumber": "27",
        "ayahText": "فَأَنبَتْنَا فِيهَا حَبًّا"
      },
      {
        "ayahNumber": "28",
        "ayahText": "وَعِنَبًا وَقَضْبًا"
      },
      {
        "ayahNumber": "29",
        "ayahText": "وَزَيْتُونًا وَنَخْلًا"
      },
      {
        "ayahNumber": "30",
        "ayahText": "وَحَدَائِقَ غُلْبًا"
      },
      {
        "ayahNumber": "31",
        "ayahText": "وَفَاكِهَةً وَأَبًّا"
      },
      {
        "ayahNumber": "32",
        "ayahText": "مَّتَاعًا لَّكُمْ وَلِأَنْعَامِكُمْ"
      },
      {
        "ayahNumber": "33",
        "ayahText": "فَإِذَا جَاءَتِ الصَّاخَّةُ"
      },
      {
        "ayahNumber": "34",
        "ayahText": "يَوْمَ يَفِرُّ الْمَرْءُ مِنْ أَخِيهِ"
      },
      {
        "ayahNumber": "35",
        "ayahText": "وَأُمِّهِ وَأَبِيهِ"
      },
      {
        "ayahNumber": "36",
        "ayahText": "وَصَاحِبَتِهِ وَبَنِيهِ"
      },
      {
        "ayahNumber": "37",
        "ayahText": "لِكُلِّ امْرِئٍ مِّنْهُمْ يَوْمَئِذٍ شَأْنٌ يُغْنِيهِ"
      },
      {
        "ayahNumber": "38",
        "ayahText": "وُجُوهٌ يَوْمَئِذٍ مُّسْفِرَةٌ"
      },
      {
        "ayahNumber": "39",
        "ayahText": "ضَاحِكَةٌ مُّسْتَبْشِرَةٌ"
      },
      {
        "ayahNumber": "40",
        "ayahText": "وَوُجُوهٌ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌ"
      },
      {
        "ayahNumber": "41",
        "ayahText": "تَرْهَقُهَا قَتَرَةٌ"
      },
      {
        "ayahNumber": "42",
        "ayahText": "أُولَـٰئِكَ هُمُ الْكَفَرَةُ الْفَجَرَةُ"
      }
    ]
  }
}