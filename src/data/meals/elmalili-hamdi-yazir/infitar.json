{
  "infitar": {
    "surahNumber": "82",
    "surahNameTr": "İnfitâr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Gök çatladığı vakit,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar döküldüğü vakit,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Denizler yarılıp akıtıldığı vakit,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kabirlerin içi dışına getirildiği vakit,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Herkes neyi önünden gönderdiğini ve neyi geri bıraktığını bilir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Ey insan! İhsanı bol Rabb'ine karşı seni aldatan nedir?"
      },
      {
        "ayahNumber": "7",
        "ayahText": "O Allah ki seni yarattı, seni düzgün yapılı kılıp ölçülü bir biçim verdi."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Seni dilediği her hangi bir şekilde parçalardan oluşturdu."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Hayır hayır, siz cezayı yalanlıyorsunuz."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Oysa üzerinizde koruyucular var."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Değerli yazıcılar"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Onlar, siz her ne yaparsanız bilirler"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Kuşkusuz iyiler nimet içindedirler."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Kötüler de cehennemdedirler."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Ceza günü ona girecekler."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Onlar o cehennemin gözünden kaçamazlar."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Ceza gününün ne olduğunu sen bilir misin?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Evet, bilir misin nedir acaba o ceza günü?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "O gün, hiç kimsenin başkası için hiçbir şeye sahip olamadığı gündür. O gün buyruk yalnız Allah'ındır."
      }
    ]
  }
}