{
  "surahNumber": "107",
  "surahName": "Mâûn Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Dini yalanlayanı gördün mü?"
    },
    {
      "ayahNumber": "2",
      "ayahText": "İşte o, öksüzü iter, kakar."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Yoksulu doyurmaya önayak olmaz."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Vay haline o namaz kılanların ki,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Kıldıkları namazın değerine aldırış etmezler."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Gösteriş yaparlar onlar,"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve yardımlığı sakınırlar (zekatı vermezler)."
    }
  ]
}