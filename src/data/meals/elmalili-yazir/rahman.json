{
  "surahNumber": "55",
  "surahName": "Rahmân Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Rahmân (çok merhametli olan Allah)"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Kurân'ı öğretti."
    },
    {
      "ayahNumber": "3",
      "ayahText": "İnsanı yarattı."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Ona beyanı öğretti."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Güneş de ay da bir hesab iledir."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Bitkiler ve ağaçlar secde etmektedirler."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Göğü yükseltti ve mizanı koydu."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Sakın tartıda taşkınlık etmeyin."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Tartıyı adaletle yapın, terazide eksiklik yapmayın."
    },
    {
      "ayahNumber": "10",
      "ayahText": "(Allah) yeri mahlukat için (aşağıya) koydu."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Orada meyvalar ve salkımlı hurma ağaçları vardır."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Yapraklı taneler ve hoş kokulu bitkiler vardır."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Allah insanı, pişmiş bir çamura benzeyen bir balçıktan yarattı."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Cinleri de hâlis ateşten yarattı."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "17",
      "ayahText": "(O) iki doğunun ve iki batının Rabbidir."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "(Acı ve tatlı) iki denizi salıverdi birbirine kavuşuyorlar."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Fakat aralarında bir engel vardır, birbirlerine geçip karışmıyorlar."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "22",
      "ayahText": "İkisinden de inci ve mercan çıkar."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "24",
      "ayahText": "Denizde koca dağlar gibi yükselen gemiler de onundur."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "26",
      "ayahText": "Yer üzerinde bulunan her şey fânidir."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Yalnız celâl ve ikram sahibi Rabbinin yüzü (zâtı) baki kalacaktır."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "29",
      "ayahText": "Göklerde ve yerde bulunanlar, O'ndan isterler. O, her gün yeni bir iştedir."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ey insan ve cin! sizin de hesabınızı ele alacağız."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "33",
      "ayahText": "Ey cin ve insan toplulukları! Göklerin ve yerin çevresinden geçmeye gücünüz yeterse geçin gidin. Allah'ın verdiği bir güç olmadan geçemezsiniz."
    },
    {
      "ayahNumber": "34",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "35",
      "ayahText": "Üzerinize ateşten alev ve duman gönderilir, kendinizi savunamazsınız."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
    },
    {
      "ayahNumber": "37",
      "ayahText": "Gök yarılıp da, erimiş yağ gibi kıpkırmızı bir gül olduğu zaman..."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "39",
      "ayahText": "İşte o gün, ne insana ne de cinne günahından sorulmaz."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "41",
      "ayahText": "Suçlular simalarından tanınır, alınlarından ve ayaklarından tutulur."
    },
    {
      "ayahNumber": "42",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "43",
      "ayahText": "İşte bu, suçluların yalanladığı cehennemdir."
    },
    {
      "ayahNumber": "44",
      "ayahText": "Onunla kaynar su arasında dolaşırlar."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "46",
      "ayahText": "Rabbinin makamından korkan kimselere iki cennet vardır."
    },
    {
      "ayahNumber": "47",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "48",
      "ayahText": "İkisinin de çeşitli ağaçları, meyvaları vardır."
    },
    {
      "ayahNumber": "49",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "50",
      "ayahText": "İkisinde de akıp giden iki kaynak vardır."
    },
    {
      "ayahNumber": "51",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "52",
      "ayahText": "İkisinde de her türlü meyvadan çift çift vardır."
    },
    {
      "ayahNumber": "53",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "54",
      "ayahText": "Astarları atlastan yataklara yaslanırlar. İki cennetin de devşirmesi yakındır."
    },
    {
      "ayahNumber": "55",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "56",
      "ayahText": "Oralarda gözlerini yalnız eşlerine çevirmiş dilberler var ki, bunlardan önce onlara ne insan ne de cin dokunmuştur."
    },
    {
      "ayahNumber": "57",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "58",
      "ayahText": "Sanki onlar yâkut ve mercandırlar."
    },
    {
      "ayahNumber": "59",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "60",
      "ayahText": "İyiliğin karşılığı, yalnız iyilik değil midir?"
    },
    {
      "ayahNumber": "61",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "62",
      "ayahText": "Bu ikisinden başka iki cennet daha vardır."
    },
    {
      "ayahNumber": "63",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "64",
      "ayahText": "(Bu cennetler) yemyeşildirler."
    },
    {
      "ayahNumber": "65",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "66",
      "ayahText": "İkisinde de fışkıran iki kaynak vardır."
    },
    {
      "ayahNumber": "67",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "68",
      "ayahText": "İkisinde de her türlü meyva, hurma ve nar vardır."
    },
    {
      "ayahNumber": "69",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "70",
      "ayahText": "İçlerinde güzel huylu, güzel yüzlü kadınlar vardır."
    },
    {
      "ayahNumber": "71",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "72",
      "ayahText": "Çadırlar içerisinde gözlerini yalnız kocalarına çevirmiş hûriler vardır."
    },
    {
      "ayahNumber": "73",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "74",
      "ayahText": "Bunlardan önce onlara ne insan ne de cin dokunmuştur."
    },
    {
      "ayahNumber": "75",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "76",
      "ayahText": "Yeşil yastıklara ve hârikulâde güzel işlemeli döşeklere yaslanırlar."
    },
    {
      "ayahNumber": "77",
      "ayahText": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz?"
    },
    {
      "ayahNumber": "78",
      "ayahText": "Büyüklük ve ikram sahibi Rabbinin adı ne yücedir!"
    }
  ]
}