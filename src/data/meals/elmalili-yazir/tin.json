{
  "surahNumber": "95",
  "surahName": "Tîn Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Tîn'e ve Zeytun'a,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Sina dağına"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Ve bu güvenli beldeye andolsun ki,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Biz insanı en güzel biçimde yarattık."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Sonra da çevirdik aşağıların aşağısına attık."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Ancak iman edip iyi işler yapanlar başka; onlar için kesintisiz bir ecir vardır."
    },
    {
      "ayahNumber": "7",
      "ayahText": "O halde sana dini ne yalanlatır?"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Allah, hakimlerin hakimi değil mi?"
    }
  ]
}