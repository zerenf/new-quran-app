{
  "surahNumber": "100",
  "surahName": "Âdiyât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "O harıl harıl (savaşa) koşanlara,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "(Tırnaklarıyla yerden) ateş çıkaranlara,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Sabahleyin akın edenlere,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Tozu dumana karıştıranlara,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Derken bir topluluğun ortasına dalanlara yemin ederim ki,"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Şüphesiz insan, Rabbine karşı çok nankördür."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve kendisi de buna şahittir."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Gerçekten o dünya malını çok sevdiği için katıdır."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Bilmiyor mu ki, kabirlerin içindekiler fırlatılacak."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Ve sinelerin içindekiler derlenecek."
    },
    {
      "ayahNumber": "11",
      "ayahText": "O gün Rableri onların bütün yaptıklarından haberdardır"
    }
  ]
}