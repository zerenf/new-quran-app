{
  "surahNumber": "80",
  "surahName": "Abese Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "(Peygamber) Yüzünü ekşitti ve döndü."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Kendisine âmâ geldi, diye."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Ne bilirsin, belki o temizlenecek?"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Veya öğüt belleyecek de öğüt ona fayda verecek."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Ama buna ihtiyaç hissetmeyene gelince,"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Sen ona yöneliyorsun."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Onun temizlenmemesinden sana ne?"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Ama sana can atarak gelen,"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Allah'tan korkarak gelmişken,"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Sen onunla ilgilenmiyorsun."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Hayır hayır, sakın. Çünkü o Kur'ân bir öğüttür."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Artık dileyen onu düşünür."
    },
    {
      "ayahNumber": "13",
      "ayahText": "O, değerli sahifelerdedir."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Yüksek tutulan tertemiz sahifelerde."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Yazıcıların ellerindedir,"
    },
    {
      "ayahNumber": "16",
      "ayahText": "Değerli, iyi yazıcıların."
    },
    {
      "ayahNumber": "17",
      "ayahText": "O kahrolası insan, ne nankör şey."
    },
    {
      "ayahNumber": "18",
      "ayahText": "O yaratan onu hangi şeyden yarattı?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Bir damla sudan, onu yarattı da biçime koydu."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Sonra ona yolunu kolaylaştırdı."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Sonra onu öldürdü de kabre koydurdu."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Sonra dilediği vakit onu tekrar diriltir."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Hayır hayır, doğrusu o, hiç Allah'ın emrini tam yerine getirmedi,"
    },
    {
      "ayahNumber": "24",
      "ayahText": "Bir de o insan yiyeceğine baksın."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Biz o suyu bol bol döktük."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Sonra toprağı nasıl da yardık."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Bu suretle orada ekinler bitirdik."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Üzümler, yoncalar,"
    },
    {
      "ayahNumber": "29",
      "ayahText": "Zeytinlikler, hurmalıklar,"
    },
    {
      "ayahNumber": "30",
      "ayahText": "İri ve sık ağaçlı bahçeler,"
    },
    {
      "ayahNumber": "31",
      "ayahText": "Meyveler, çayırlar bitirdik."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Siz ve hayvanlarınız faydalansın diye."
    },
    {
      "ayahNumber": "33",
      "ayahText": "Kulakları sağır eden o gürültü geldiğinde,"
    },
    {
      "ayahNumber": "34",
      "ayahText": "O gün kişi kaçar, kardeşinden..."
    },
    {
      "ayahNumber": "35",
      "ayahText": "Anasından, babasından.."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Eşinden ve oğullarından."
    },
    {
      "ayahNumber": "37",
      "ayahText": "Onlardan her birinin o gün başından aşan işi vardır."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Yüzler var ki, o gün parıl parıl,"
    },
    {
      "ayahNumber": "39",
      "ayahText": "Güler, sevinir."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Yüzler de var ki, o gün tozlanmış,"
    },
    {
      "ayahNumber": "41",
      "ayahText": "Onları karanlık bürümüş,"
    },
    {
      "ayahNumber": "42",
      "ayahText": "İşte onlardır kâfirler, haktan sapanlar."
    }
  ]
}