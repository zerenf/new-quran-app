{
  "surahNumber": "93",
  "surahName": "Duhâ Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun kuşluk vaktine."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Ve sakinleştiği zaman geceye ki,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Rabbin seni bırakmadı ve darılmadı."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Ahiret senin için dünyadan iyi olacaktır."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Rabbın sana verecek ve sen hoşnut olacaksın."
    },
    {
      "ayahNumber": "6",
      "ayahText": "O seni yetim bulup da barındırmadı mı?"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Seni yol bilmez bulup yola iletmedi mi?"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Seni yoksul bulup zengin etmedi mi?"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Öyleyse sakın yetimi ezme."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Dilenciyi de azarlama."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Fakat Rabbinin nimetini anlat da anlat."
    }
  ]
}