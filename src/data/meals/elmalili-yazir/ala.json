{
  "surahNumber": "87",
  "surahName": "A'lâ Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Rabbinin yüce adını tesbih et."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Yaratıp düzene koyan O'dur."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Takdir edip hidayeti gösteren O'dur."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Otlağı çıkaran,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Sonra da onu karamsı bir sel köpüğü haline getiren O'dur."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Bundan böyle sana Kur'ân'ı okutacağız da unutmayacaksın."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Yalnız Allah'ın dilediği başkadır. Çünkü o açığı da bilir, gizliyi de."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Seni en kolay yola muvaffak kılacağız."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Onun için öğüt ver, eğer öğüt fayda verirse."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Saygısı olan öğüt alacaktır."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Pek bedbaht olan da ondan kaçınacaktır."
    },
    {
      "ayahNumber": "12",
      "ayahText": "O ki, en büyük ateşe girecektir."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Sonra ne ölecek onda, ne de hayat bulacaktır."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Doğrusu felah buldu (günahtan) temizlenen."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Rabbinin adını anıp namaz kılan."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Fakat siz dünya hayatını tercih ediyorsunuz."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Oysa ahiret daha hayırlı ve daha kalıcıdır."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Kuşkusuz bu ilk sahifelerde vardır,"
    },
    {
      "ayahNumber": "19",
      "ayahText": "İbrahim ve Musa'nın sahifelerinde."
    }
  ]
}