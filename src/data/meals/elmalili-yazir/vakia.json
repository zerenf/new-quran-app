{
  "surahNumber": "56",
  "surahName": "Vâkıa Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Olacak vak'a olduğu zaman"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Onun oluşunu yalanlayacak kimse yoktur."
    },
    {
      "ayahNumber": "3",
      "ayahText": "O, alçaltıcıdır, yükselticidir."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Yer şiddetle sarsıldığı"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Dağlar serpildikçe serpildiği"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Dağılıp toz duman haline geldiği"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve sizler üç sınıf olduğunuz zaman"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Sağın adamları (var ya) ne mutludurlar onlar!"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Solun adamları ise ne uğursuzdurlar onlar!"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Önde olanlar (var ya), onlar öncüdürler."
    },
    {
      "ayahNumber": "11",
      "ayahText": "İşte o yaklaştırılanlar,"
    },
    {
      "ayahNumber": "12",
      "ayahText": "Nimet cennetlerindedirler."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Çoğu önceki ümmetlerden,"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Birazı da sonrakilerden."
    },
    {
      "ayahNumber": "15",
      "ayahText": "(Onlar) cevherlerle işlenmiş tahtlar üzerindedirler."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Karşılıklı olarak onların üzerinde yaslanırlar."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Çevrelerinde, ölümsüzlüğe ulaşmış gençler dolaşırlar."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Kaynağından doldurulmuş, testiler, ibrikler ve kadehlerle."
    },
    {
      "ayahNumber": "19",
      "ayahText": "Ondan ne başları ağrıtılır, ne de akılları giderilir."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Beğendikleri meyvalar,"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Canlarının çektiği kuş etleri,"
    },
    {
      "ayahNumber": "22",
      "ayahText": "İri gözlü hûriler,"
    },
    {
      "ayahNumber": "23",
      "ayahText": "Saklı inciler gibi,"
    },
    {
      "ayahNumber": "24",
      "ayahText": "Yaptıklarına karşılık olarak verilir."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Orada boş bir söz ve günaha sokan bir laf işitmezler."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Duydukları söz, yalnız \"selam\", \"selam\" dır."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Sağın adamları, nedir o sağın adamları!"
    },
    {
      "ayahNumber": "28",
      "ayahText": "Dalbastı kirazlar,"
    },
    {
      "ayahNumber": "29",
      "ayahText": "Meyva dizili muzlar,"
    },
    {
      "ayahNumber": "30",
      "ayahText": "Uzamış gölgeler,"
    },
    {
      "ayahNumber": "31",
      "ayahText": "Fışkıran sular."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Pek çok meyva arasında,"
    },
    {
      "ayahNumber": "33",
      "ayahText": "Tükenmeyen ve yasaklanmayan"
    },
    {
      "ayahNumber": "34",
      "ayahText": "Ve yükseltilmiş döşekler üstündedirler."
    },
    {
      "ayahNumber": "35",
      "ayahText": "Biz kadınları yeniden inşa ettik (yarattık)."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Onları bâkireler yaptık."
    },
    {
      "ayahNumber": "37",
      "ayahText": "Hep yaşıt sevgililer,"
    },
    {
      "ayahNumber": "38",
      "ayahText": "Sağın adamları içindir."
    },
    {
      "ayahNumber": "39",
      "ayahText": "Bir çoğu öncekilerdendir."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Bir çoğu da sonrakilerdendir."
    },
    {
      "ayahNumber": "41",
      "ayahText": "Solun adamları, nedir o solcular!"
    },
    {
      "ayahNumber": "42",
      "ayahText": "İçlerine işleyen bir ateş ve kaynar şu içinde,"
    },
    {
      "ayahNumber": "43",
      "ayahText": "Kapkara dumandan bir gölge altındadırlar."
    },
    {
      "ayahNumber": "44",
      "ayahText": "Ki ne serindir, ne de faydalı."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Çünkü onlar bundan önce varlık içinde sefâhete dalmışlardı."
    },
    {
      "ayahNumber": "46",
      "ayahText": "Büyük günahı işlemekte ısrar ediyorlardı."
    },
    {
      "ayahNumber": "47",
      "ayahText": "Ve diyorlardı ki: \"Biz ölüp, toprak ve kemik yığını olduktan sonra, biz mi bir daha diriltileceğiz?\""
    },
    {
      "ayahNumber": "48",
      "ayahText": "\"Önceki atalarımızda mı?\""
    },
    {
      "ayahNumber": "49",
      "ayahText": "De ki: \"Öncekiler ve sonrakiler\""
    },
    {
      "ayahNumber": "50",
      "ayahText": "\"Belli bir günün belli vaktinde mutlaka toplanacaklardır.\""
    },
    {
      "ayahNumber": "51",
      "ayahText": "Sonra siz, ey sapık yalanlayıcılar!"
    },
    {
      "ayahNumber": "52",
      "ayahText": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz."
    },
    {
      "ayahNumber": "53",
      "ayahText": "Karınlarınızı hep onunla dolduracaksınız."
    },
    {
      "ayahNumber": "54",
      "ayahText": "Üstüne de kaynar su içeceksiniz."
    },
    {
      "ayahNumber": "55",
      "ayahText": "Susuzluk illetine tutulmuş develerin içişi gibi içeceksiniz."
    },
    {
      "ayahNumber": "56",
      "ayahText": "İşte ceza gününde onlara sunulacak ziyafet budur."
    },
    {
      "ayahNumber": "57",
      "ayahText": "Biz sizi yarattık; tasdik etmeniz gerekmez mi?"
    },
    {
      "ayahNumber": "58",
      "ayahText": "Attığınız meniyi gördünüz mü?"
    },
    {
      "ayahNumber": "59",
      "ayahText": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz?"
    },
    {
      "ayahNumber": "60",
      "ayahText": "Aranızda ölümü takdir eden biziz ve bizim önümüze geçilmez."
    },
    {
      "ayahNumber": "61",
      "ayahText": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediğiniz bir yaratılışta tekrar var edelim diye (böyle yapıyoruz)."
    },
    {
      "ayahNumber": "62",
      "ayahText": "Andolsun, ilk yaratılışı bildiniz. Düşünüp ibret almanız gerekmez mi?"
    },
    {
      "ayahNumber": "63",
      "ayahText": "Ektiğinizi gördünüz mü?"
    },
    {
      "ayahNumber": "64",
      "ayahText": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz?"
    },
    {
      "ayahNumber": "65",
      "ayahText": "Dileseydik, onu kuru bir çöp yapardık. Hayret eder dururdunuz."
    },
    {
      "ayahNumber": "66",
      "ayahText": "\"Doğrusu borç altına girdik.\""
    },
    {
      "ayahNumber": "67",
      "ayahText": "\"Doğrusu, biz yoksul bırakıldık\" (derdiniz)."
    },
    {
      "ayahNumber": "68",
      "ayahText": "İçtiğiniz suya baktınız mı?"
    },
    {
      "ayahNumber": "69",
      "ayahText": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz?"
    },
    {
      "ayahNumber": "70",
      "ayahText": "Dileseydik onu tuzlu yapardık. O halde şükretseniz ya!"
    },
    {
      "ayahNumber": "71",
      "ayahText": "Yaktığınız ateşi gördünüz mü?"
    },
    {
      "ayahNumber": "72",
      "ayahText": "Onun ağacını siz mi yarattınız, yoksa yaratan biz miyiz?"
    },
    {
      "ayahNumber": "73",
      "ayahText": "Biz onu bir ibret ve çölden gelip geçenlere bir fayda yaptık."
    },
    {
      "ayahNumber": "74",
      "ayahText": "Öyleyse büyük Rabbinin adını yücelt."
    },
    {
      "ayahNumber": "75",
      "ayahText": "Hayır, yıldızların yerlerine yemin ederim."
    },
    {
      "ayahNumber": "76",
      "ayahText": "Bilirseniz bu büyük bir yemindir."
    },
    {
      "ayahNumber": "77",
      "ayahText": "O, elbette şerefli bir Kur'ân'dır."
    },
    {
      "ayahNumber": "78",
      "ayahText": "Korunmuş bir kitaptadır."
    },
    {
      "ayahNumber": "79",
      "ayahText": "Ona temizlenenlerden başkası el süremez."
    },
    {
      "ayahNumber": "80",
      "ayahText": "(O), âlemlerin Rabbinden indirilmiştir."
    },
    {
      "ayahNumber": "81",
      "ayahText": "Şimdi siz bu sözü mü küçümsüyorsunuz?"
    },
    {
      "ayahNumber": "82",
      "ayahText": "Rızkınızı, yalanlamanızdan ibaret mi kılıyorsunuz?"
    },
    {
      "ayahNumber": "83",
      "ayahText": "Can boğaza dayandığı zaman"
    },
    {
      "ayahNumber": "84",
      "ayahText": "Ki o zaman siz (ölmek üzere olana) bakar durursunuz."
    },
    {
      "ayahNumber": "85",
      "ayahText": "Biz ona sizden daha yakınız, fakat siz görmezsiniz."
    },
    {
      "ayahNumber": "86",
      "ayahText": "Eğer cezalandırılmayacak iseniz,"
    },
    {
      "ayahNumber": "87",
      "ayahText": "Onu geri çevirsenize; şayet iddianızda doğru iseniz."
    },
    {
      "ayahNumber": "88",
      "ayahText": "Fakat ölen kişiye gelince, eğer o rahmete yaklaştırılanlardan ise,"
    },
    {
      "ayahNumber": "89",
      "ayahText": "Ona rahatlık, güzel rızık ve Naîm cenneti vardır."
    },
    {
      "ayahNumber": "90",
      "ayahText": "Eğer O, sağın adamlarından ise,"
    },
    {
      "ayahNumber": "91",
      "ayahText": "\"(Ey sağcı), sana sağcılardan selam!\""
    },
    {
      "ayahNumber": "92",
      "ayahText": "Ama yalanlayıcı sapıklardan ise;"
    },
    {
      "ayahNumber": "93",
      "ayahText": "İşte ona da kaynar sudan bir ziyafet vardır."
    },
    {
      "ayahNumber": "94",
      "ayahText": "Ve cehenneme atılma vardır."
    },
    {
      "ayahNumber": "95",
      "ayahText": "Kesin gerçek budur işte."
    },
    {
      "ayahNumber": "96",
      "ayahText": "Öyle ise Rabbini o büyük ismiyle tesbih et."
    }
  ]
}