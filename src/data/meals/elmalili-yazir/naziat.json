{
  "surahNumber": "79",
  "surahName": "Nâziât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun şiddetle çekip çıkaranlara,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Usulcacık çekenlere,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Yüzüp yüzüp gidenlere,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Yarışıp geçenlere,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Derken bir iş çevirenlere kasem olsun (ki kıyamet var)."
    },
    {
      "ayahNumber": "6",
      "ayahText": "O gün deprem sarsar,"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Onu ikinci bir sarsıntı izler."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Yürekler vardır, o gün kaygıdan hoplar."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Gözler kalkmaz saygıdan."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Diyorlar ki: \"Biz tekrar eski halimize mi döndürülecekmişiz?"
    },
    {
      "ayahNumber": "11",
      "ayahText": "\"Biz, çürümüş kemikler olduktan sonra ha?\""
    },
    {
      "ayahNumber": "12",
      "ayahText": "\"Öyleyse bu çok zararlı bir dönüştür.\" dediler."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Fakat o bir tek haykırıştır."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Bir de bakarsın hepsi meydandadır."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Musa'nın haberi sana geldi mi?"
    },
    {
      "ayahNumber": "16",
      "ayahText": "Hani Rabbi ona kutsal vaadi Tuva'da seslenmişti:"
    },
    {
      "ayahNumber": "17",
      "ayahText": "\"Haydi, demişti, git Firavun'a, çünkü o çok azdı.\""
    },
    {
      "ayahNumber": "18",
      "ayahText": "De ki: İster misin arınasın?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Seni Rabbinin yoluna ileteyim de ondan korkasın."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Musa Firavun'a o büyük mucizeyi gösterdi."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Fakat Firavun yalanladı, karşı geldi."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Sonra koşarak dönüp gitti."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Derken adamlarını topladı da bağırdı:"
    },
    {
      "ayahNumber": "24",
      "ayahText": "\"Ben sizin en yüce Rabbinizim\" dedi."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Allah da onu tuttu, dünya ve ahiret azabıyla yakalayıverdi."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Kuşkusuz bunda, saygı duyacaklar için bir ibret vardır."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Yaratılışça siz mi daha çetinsiniz, yoksa gök mü? Onu Allah bina etti."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Tavanını yükseltti, onu bir düzene koydu."
    },
    {
      "ayahNumber": "29",
      "ayahText": "Gecesini kararttı, kuşluğunu çıkardı."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Bundan sonra da yeryüzünü döşedi."
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ondan suyunu ve otlağını çıkardı."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Dağlarını oturttu."
    },
    {
      "ayahNumber": "33",
      "ayahText": "Sizin ve hayvanlarınızın geçimi için."
    },
    {
      "ayahNumber": "34",
      "ayahText": "Fakat o her şeyi bastıran büyük felaket geldiği vakit,"
    },
    {
      "ayahNumber": "35",
      "ayahText": "O, insanın neyin peşinde koştuğunu anladığı gün,"
    },
    {
      "ayahNumber": "36",
      "ayahText": "Gören kimseler için cehennem hortlatıldığı vakit,"
    },
    {
      "ayahNumber": "37",
      "ayahText": "Artık her kim azgınlık etmiş,"
    },
    {
      "ayahNumber": "38",
      "ayahText": "Ve dünya hayatını tercih etmişse,"
    },
    {
      "ayahNumber": "39",
      "ayahText": "Kuşkusuz onun varacağı yer cehennemdir."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Kim de Rabbinin divanında durmaktan korkmuş, nefsini boş heveslerden menetmiş ise,"
    },
    {
      "ayahNumber": "41",
      "ayahText": "Kuşkusuz onun varacağı yer cennettir."
    },
    {
      "ayahNumber": "42",
      "ayahText": "Sana o kıyameti soruyorlar, ne zaman kopacak diye."
    },
    {
      "ayahNumber": "43",
      "ayahText": "Sen nerde, onu anlatmak nerde?!"
    },
    {
      "ayahNumber": "44",
      "ayahText": "Onun son ilmi Rabbine aittir."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Sen ancak ondan korkacak olanları uyarıcısın."
    },
    {
      "ayahNumber": "46",
      "ayahText": "Onlar o kıyameti görecekleri gün sanki dünyada bir akşam veya kuşluğundan başka durmamışa dönecekler."
    }
  ]
}