{
  "surahNumber": "77",
  "surahName": "Mürselât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun; birbiri ardınca gönderilenlere,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Esip savuranlara,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Yaydıkça yayanlara,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Ayırdıkça ayıranlara,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Öğüt bırakanlara:"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Özür yahut uyarmak için."
    },
    {
      "ayahNumber": "7",
      "ayahText": "(Bunlara andolsun) Ki size va'dedilen, mutlaka olacaktır."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Yıldızlar(ın ışığı) silindiği zaman,"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Gök yarıldığı zaman,"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Dağlar ufalanıp savrulduğu zaman,"
    },
    {
      "ayahNumber": "11",
      "ayahText": "Elçilere vakit belirlendiği zaman:"
    },
    {
      "ayahNumber": "12",
      "ayahText": "Ertelenmiş oldukları gün için,"
    },
    {
      "ayahNumber": "13",
      "ayahText": "Yani hüküm günü için."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Hüküm gününün ne olduğunu sen nereden bileceksin?"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "16",
      "ayahText": "Öncekileri helak etmedik mi?"
    },
    {
      "ayahNumber": "17",
      "ayahText": "Sonra geridekileri de onların ardına takarız."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Suçlulara böyle yaparız."
    },
    {
      "ayahNumber": "19",
      "ayahText": "(Hakkı) yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "20",
      "ayahText": "Sizi adi bir sudan yaratmadık mı?"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Onu sağlam bir karar yerine koyduk."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Belli bir süreye kadar."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Biçimlendirdik. Ne güzel biçim vereniz Biz."
    },
    {
      "ayahNumber": "24",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "25",
      "ayahText": "Arz'ı toplanma yeri yapmadık mı?;"
    },
    {
      "ayahNumber": "26",
      "ayahText": "Diriler ve ölüler için."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Orada yüksek yüksek dağlar meydana getirmedik mi? Ve size tatlı su(lar) içirmedik mi?"
    },
    {
      "ayahNumber": "28",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "29",
      "ayahText": "Haydi yalanladığınız(azab)a gidin!"
    },
    {
      "ayahNumber": "30",
      "ayahText": "Üç dallı bir gölgeye gidin.\""
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ki ne gölgelendirir, ne de alevden korur."
    },
    {
      "ayahNumber": "32",
      "ayahText": "O, kütük gibi kıvılcım(lar) saçar."
    },
    {
      "ayahNumber": "33",
      "ayahText": "(Saçtığı) kıvılcım, sanki sarı bir halattır."
    },
    {
      "ayahNumber": "34",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "35",
      "ayahText": "Bu, konuşamayacakları gündür."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Kendilerine izin de verilmez ki özür dilesinler."
    },
    {
      "ayahNumber": "37",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "38",
      "ayahText": "İşte bu, hüküm günüdür. Sizi ve öncekileri bir araya topladık."
    },
    {
      "ayahNumber": "39",
      "ayahText": "Eğer (kurtulmak için yapacağınız) bir hileniz varsa bana hile yapın (da beni atlatın)."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Yalanlayanların vay haline o gün! *"
    },
    {
      "ayahNumber": "41",
      "ayahText": "Korunanlar ise gölgeler altında, çeşme başındadırlar."
    },
    {
      "ayahNumber": "42",
      "ayahText": "Gönüllerinin çektiği meyvalar içindedirler."
    },
    {
      "ayahNumber": "43",
      "ayahText": "Yaptıklarınıza karşılık afiyetle yeyin, için!"
    },
    {
      "ayahNumber": "44",
      "ayahText": "Biz, güzel davrananları böyle mükafatlandırırız."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "46",
      "ayahText": "Yeyin, azıcık sefa sürün, siz suçlularsınız!"
    },
    {
      "ayahNumber": "47",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "48",
      "ayahText": "Onlara: \"Rüku' edin\" dendiği zaman rüku' etmezler."
    },
    {
      "ayahNumber": "49",
      "ayahText": "Yalanlayanların vay haline o gün!"
    },
    {
      "ayahNumber": "50",
      "ayahText": "Onlar bun(a inanmadık)dan sonra hangi hadise (söze) inanacaklar?"
    }
  ]
}