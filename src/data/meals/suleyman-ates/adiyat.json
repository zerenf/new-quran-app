{
  "surahNumber": "100",
  "surahName": "Âdiyât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun nefesleriyle (güp güp) ses çıkararak koşan(at)lara,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "(Tırnaklariyle yerden) Ateş çıkaranlara,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Sabahleyin akın edenlere,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "(Koşarak) Toz koparanlara,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Derken bir topluluğun ortasına dalanlara."
    },
    {
      "ayahNumber": "6",
      "ayahText": "(Bunlara andolsun) Ki insan, Rabbine karşı çok nankördür."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve o da buna şahiddir."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Doğrusu o, malı çok sever."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Bilmez mi o, kabirlerde olanlar dışarı atıldığı,"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Göğüslerde bulunanlar devşirildiği zaman,"
    },
    {
      "ayahNumber": "11",
      "ayahText": "O gün Rabbleri onların her halini haber almış(gizli ve açık bütün yaptıklarını bilmiş)tir."
    }
  ]
}