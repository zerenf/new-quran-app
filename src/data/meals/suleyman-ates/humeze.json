{
  "humeze": {
    "surahNumber": "104",
    "surahNameTr": "Hümeze Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "(İnsanları) Diliyle çekiştiren, kaş ve gözüyle işaretler yapıp alay eden her fesad kişinin vay haline!"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O ki mal yığdı, onu saydı durdu."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Malının, kendisini ebedi yaşatacağını sanıyor."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hayır, andolsun ki o, Hutame'ye atılacaktır."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Hutame'nin ne olduğunu sen nereden bileceksin?"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Allah'ın tutuşturulmuş ateşidir."
      },
      {
        "ayahNumber": "7",
        "ayahText": "(Bir ateş) Ki gönüllere işler."
      },
      {
        "ayahNumber": "8",
        "ayahText": "O, onların üzerine kapatılıp kilitlenecektir."
      },
      {
        "ayahNumber": "9",
        "ayahText": "(Kendileri,) Uzatılmış direkler arasında (bağlı) olarak (kalacaklardır)."
      }
    ]
  }
}