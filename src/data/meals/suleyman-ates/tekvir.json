{
  "tekvir": {
    "surahNumber": "81",
    "surahNameTr": "Tekvîr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Güneş büzüldüğü zaman,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar kararıp döküldüğü zaman,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Dağlar yürütüldüğü zaman,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "On aylık gebe develer başı boş bırakıldığı zaman,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Vahşi hayvanlar bir araya toplandığı zaman,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Denizler kaynatıldığı zaman,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Nefisler çiftleştirildiği zaman."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Ve sorulduğu zaman o diri diri toprağa gömülen kıza:"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Hangi günah(ı) yüzünden öldürüldü? diye."
      },
      {
        "ayahNumber": "10",
        "ayahText": "(Amel) defterler(i) açılıp yayıldığı zaman,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gök sıyrılıp açıldığı zaman,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Cehennem alevlendirildiği zaman,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Cennet yaklaştırıldığı zaman,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Her can, ne yapıp getirdiğini bilir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Yoo, yemin ederim o geri kalıp gizlenenlere;"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Akıp gidenlere, dönüp saklananlara,"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Sırtını dönen geceye,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Soluk almağa başlayan sabaha,"
      },
      {
        "ayahNumber": "19",
        "ayahText": "(Andolsun bunlara) Ki o, değerli bir elçinin (Cebrail'in) sözüdür."
      },
      {
        "ayahNumber": "20",
        "ayahText": "(O elçi,) Güçlüdür, Arşın sahibi (Allah) katında yücedir."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Orada (kendisine) ita'at edilen, güvenilendir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Arkadaşınız cinli değildir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Andolsun (Muhammed) onu apaçık ufukta görmüştür."
      },
      {
        "ayahNumber": "24",
        "ayahText": "O, gayb hakkında (verdiği haberlerden dolayı) suçlanamaz."
      },
      {
        "ayahNumber": "25",
        "ayahText": "O (Kur'an) kovulmuş şeytanın sözü değildir."
      },
      {
        "ayahNumber": "26",
        "ayahText": "O halde nereye gidiyorsunuz?"
      },
      {
        "ayahNumber": "27",
        "ayahText": "O, alemlere öğüttür."
      },
      {
        "ayahNumber": "28",
        "ayahText": "Aranızdan doğru hareket etmek isteyen için;"
      },
      {
        "ayahNumber": "29",
        "ayahText": "Alemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz."
      }
    ]
  }
}