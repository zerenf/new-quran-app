{
  "surahNumber": "91",
  "surahName": "Şems Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Güneşe ve onun aydın sabahına andolsun,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Onu izleyen aya andolsun,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Güneşi ortaya çıkaran gündüze andolsun."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Onu örten geceye andolsun."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Göğe ve onu yapana andolsun."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Yere ve onu yuvarlayıp döşeyene andolsun."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Nefse ve onu biçimlendirene,"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Ona bozukluğunu ve korunmasını (isyanını ve ita'atini) ilham edene andolsun ki:"
    },
    {
      "ayahNumber": "9",
      "ayahText": "(Allah'tan başkasına tapmayarak) Nefsini yücelten kazanmış,"
    },
    {
      "ayahNumber": "10",
      "ayahText": "(Yaratıklara taparak) Onu alçaltan da ziyana uğramıştır."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Semud (kavmi), azgınlığı yüzünden (Hakk'ı) yalanladı."
    },
    {
      "ayahNumber": "12",
      "ayahText": "En haydutları ayaklandığı zaman,"
    },
    {
      "ayahNumber": "13",
      "ayahText": "Allah'ın elçisi onlara: \"Allah'ın devesine ve onun su içme hakkına dokunmayın!\" demişti."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Onu yalanladılar, deveyi kestiler. Rableri de, günahları yüzünden azabı başlarına geçirip, orayı dümdüz etti."
    },
    {
      "ayahNumber": "15",
      "ayahText": "(Rab) Bu işin sonundan korkmaz."
    }
  ]
}