{
  "surahNumber": "96",
  "surahName": "Alak Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Yaratan Rabbinin adıyle oku."
    },
    {
      "ayahNumber": "2",
      "ayahText": "O, insanı alaktan (embriyodan) yarattı."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Oku, Rabbin en büyük kerem sahibidir."
    },
    {
      "ayahNumber": "4",
      "ayahText": "O ki kalemle (yazmayı) öğretti."
    },
    {
      "ayahNumber": "5",
      "ayahText": "İnsana bilmediğini öğretti."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Hayır, (Rabbinin bu kadar iyiliğine rağmen yine) insan azar;"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Kendini zengin (kendine yeterli) gördüğü için,"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Ama dönüş Rabbinedir (O'nun huzurunda bu azgınlığının hesabını verecektir)."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Gördün mü şu men'edeni?"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Namaz kılarken bir kulu (namazdan)?"
    },
    {
      "ayahNumber": "11",
      "ayahText": "Gördün mü, ya o (kul) doğru yolda olur,"
    },
    {
      "ayahNumber": "12",
      "ayahText": "Yahut kötülüklerden korunmayı emrederse?"
    },
    {
      "ayahNumber": "13",
      "ayahText": "Gördün mü, ya bu (adam, hakkı) yalanlar yüz çevirirse? (O zaman bu yaptığı kendisi için iyi mi olur?)"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Allah'ın (daima kendisini) gördüğünü bilmedi mi (o)?"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Hayır, (olmaz böyle şey), eğer bundan vazgeçmezse (onu) perçem(in)den yakalar(ateşe sürükler)iz,"
    },
    {
      "ayahNumber": "16",
      "ayahText": "O yalancı, günahkar perçem(den)!"
    },
    {
      "ayahNumber": "17",
      "ayahText": "O zaman (o gitsin) de meclisini (adamlarını) çağırsın."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Biz de zebanileri çağıracağız."
    },
    {
      "ayahNumber": "19",
      "ayahText": "Hayır, ona boyun eğme; (Rabbine) secde et ve yaklaş!"
    }
  ]
}