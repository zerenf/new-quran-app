{
  "ala": {
    "surahNumber": "87",
    "surahNameTr": "A'lâ Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Rabbinin yüce adını tesbih et (O'nun eksikliklerden uzak olduğunu an)."
      },
      {
        "ayahNumber": "2",
        "ayahText": "O ki (her şeyi) yarattı, düzenledi."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Ve O ki herşeyin miktarını, biçimini belirleyip hedefini gösterdi."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Ve O ki otlağı çıkardı,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Sonra da onu kupkuru, siyah bir çöpe çevirdi."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Sana (Kur'an'ı), okutacağız, unutmayacaksın."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Yalnız Allah'ın dilediğini unutursun. O, açığı da bilir, gizli olanı da."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Seni en kolay yola muvaffak edeceğiz."
      },
      {
        "ayahNumber": "9",
        "ayahText": "O halde eğer hatırlatmak yarar verirse hatırlat, öğüt ver."
      },
      {
        "ayahNumber": "10",
        "ayahText": "(Allah'a) Saygılı olan hatırlar (öğüt alır)."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Bahtsız olan da ondan kaçınır."
      },
      {
        "ayahNumber": "12",
        "ayahText": "O da en büyük ateşe girer."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Sonra orada ne ölür, ne de yaşar."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Doğrusu, mutluluğa ermiştir zekat veren;"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Rabbinin adını anıp namaz kılan."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ama siz, şu yakın hayatı yeğliyorsunuz."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Oysa ahiret daha iyi ve daha kalıcıdır."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Bu (hükümler), elbette ilk sahifelerde de vardı:"
      },
      {
        "ayahNumber": "19",
        "ayahText": "İbrahim'in ve Musa'nn sayfalarında."
      }
    ]
  }
}