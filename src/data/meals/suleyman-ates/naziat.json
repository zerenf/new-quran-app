{
  "naziat": {
    "surahNumber": "79",
    "surahNameTr": "Nâziât Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Andolsun söküp çıkaranlara,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Hemen çekip alanlara,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Yüzüp gidenlere,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Yarışıp, geçenlere,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Derken işi düzenleyenlere!"
      },
      {
        "ayahNumber": "6",
        "ayahText": "O gün o gürültü sarsar."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Ardından başka bir gürültü gelir."
      },
      {
        "ayahNumber": "8",
        "ayahText": "O gün bazı yürekler çarpar."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Gözleri (korkudan) aşağı kayar."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Diyorlar ki: \"Biz yine eski halimize döndürülecek miyiz?\""
      },
      {
        "ayahNumber": "11",
        "ayahText": "Biz çürümüş kemikler olduktan sonra ha?"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Öyle ise bu, ziyanlı bir dönüştür! dediler."
      },
      {
        "ayahNumber": "13",
        "ayahText": "O (olay zor değil) bir tek haykırış(a bakmakta)dır."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Hemen onlar uyanıklık alanındadırlar."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Musa'nın haberi sana geldi mi?"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Hani Rabbi ona Kutsal Vadi'de, \"Tuva\"'da ünlemişti:"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Fir'avn'a git, çünkü o azdı."
      },
      {
        "ayahNumber": "18",
        "ayahText": "De ki: Arınmağa gönlün var mı?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Seni Rabbin(in yolun)a ileteyim de O'ndan korkasın."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Ona büyük mu'cizeyi gösterdi."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Fakat o yalanladı, karşı geldi."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Sonra sırtını döndü; (Musa'nın getirdiklerini iptal etmek için) çalışmağa koyuldu."
      },
      {
        "ayahNumber": "23",
        "ayahText": "(Adamlarını) Topladı, (onlara) bağırdı:"
      },
      {
        "ayahNumber": "24",
        "ayahText": "Ben sizin en yüce Rabbinizim! dedi."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Allah da onu, sonun ve ilkin (ahiretin ve dünyanın) azabıyle cezalandırdı."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Şüphesiz bunda (Allah'tan) korkacak kimse için ibret vardır."
      },
      {
        "ayahNumber": "27",
        "ayahText": "Yaratılışça siz mi daha çetinsiniz, yoksa gök mü? (Allah) onu yaptı."
      },
      {
        "ayahNumber": "28",
        "ayahText": "Kalınlığını (tavanını) yükseltti, onu düzenledi."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Gecesini örtüp kararttı, kuşluğunu (güneşinin ışığını) açığa çıkardı."
      },
      {
        "ayahNumber": "30",
        "ayahText": "Bundan sonra da yeri yayıp yuvarlattı."
      },
      {
        "ayahNumber": "31",
        "ayahText": "Ondan suyunu ve otlağını çıkardı,"
      },
      {
        "ayahNumber": "32",
        "ayahText": "Dağları oturttu,"
      },
      {
        "ayahNumber": "33",
        "ayahText": "Sizin ve hayvanlarınızın geçimi için."
      },
      {
        "ayahNumber": "34",
        "ayahText": "Herşeyi bastıran o büyük felaket geldiği zaman,"
      },
      {
        "ayahNumber": "35",
        "ayahText": "O gün insan, neyin peşinde koşmuş olduğunu hatırlar."
      },
      {
        "ayahNumber": "36",
        "ayahText": "Gören kimseler için cehennem ortaya çıkarılmıştır."
      },
      {
        "ayahNumber": "37",
        "ayahText": "Artık kim azmışsa,"
      },
      {
        "ayahNumber": "38",
        "ayahText": "Ve şu yakın hayatı yeğlemişse,"
      },
      {
        "ayahNumber": "39",
        "ayahText": "Onun barınağı cehennemdir."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Ama kim Rabbinin divanında dur(up hesap ver)mekten korkmuş ve nefsi(ni) kötü heves(ler) den men'etmişse"
      },
      {
        "ayahNumber": "41",
        "ayahText": "Onun barınağı da cennettir."
      },
      {
        "ayahNumber": "42",
        "ayahText": "Sana sa'atden soruyorlar: Demir atması (gelip çatması) ne zaman diye."
      },
      {
        "ayahNumber": "43",
        "ayahText": "Sen nerede, onun vaktini söylemek nerede?!"
      },
      {
        "ayahNumber": "44",
        "ayahText": "Onun bilgisi Rabbine aittir."
      },
      {
        "ayahNumber": "45",
        "ayahText": "Sen ancak, ondan korkacak olanları uyarıcısın."
      },
      {
        "ayahNumber": "46",
        "ayahText": "Onlar onu gördükleri zaman sanki (dünyada) bir akşam veya onun kuşluk vaktinden fazla kalmamış gibi olurlar."
      }
    ]
  }
}