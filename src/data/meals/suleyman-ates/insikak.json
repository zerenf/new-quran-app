{
  "insikak": {
    "surahNumber": "84",
    "surahNameTr": "İnşikâk Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Gök yarıldığı,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Kendisine yaraştığı üzere Rabbini(n buyruğunu) dinlediği zaman!"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Yer uzatıl(ıp dümdüz yapıl)dığı,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "İçindekileri dışarı atıp boşaldığı,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Ve kendisine yaraştığı üzere Rabbini(n buyruğunu) dinlediği zaman!"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Ey insan, sen, Rabbine varan yolda çabalayıp durmaktasın, nihayet O'na varacaksın."
      },
      {
        "ayahNumber": "7",
        "ayahText": "(O zaman) Kimin Kitabı sağından verilirse:"
      },
      {
        "ayahNumber": "8",
        "ayahText": "O, kolay bir hesaba çekilecek,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Ve sevinçli olarak ailesine dönecektir."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Kimin Kitabı arka tarafından verilirse."
      },
      {
        "ayahNumber": "11",
        "ayahText": "O, ölümü çağıracak,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Ve alevli ateşe girecektir."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Çünkü o, (dünyada) ailesi arasında (şımarık ve) sevinçli idi."
      },
      {
        "ayahNumber": "14",
        "ayahText": "O, hiç (Rabbine) dönmeyeceğini sanmıştı."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Hayır, Rabbi O'nu görmekte idi."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Yoo, and içerim; akşamın alaca karanlığına,"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Geceye ve (gecenin bağrında) topladığı şeylere,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Değirmileşen aya,"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Ki, siz, mutlaka tabakadan tabakaya bineceksiniz!"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Onların nesi var ki inanmıyorlar?"
      },
      {
        "ayahNumber": "21",
        "ayahText": "Kendilerine Kur'an okunduğu zaman secde etmiyorlar?"
      },
      {
        "ayahNumber": "22",
        "ayahText": "Tersine o nankörler yalanlıyorlar."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Allah onların, içlerinde gizledikleri (düşünceleri) biliyor."
      },
      {
        "ayahNumber": "24",
        "ayahText": "Onlara acı bir azabı müjdele."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Ancak inanıp yararlı işler yapan kimseler için kesintisiz bir mükafat vardır."
      }
    ]
  }
}