{
  "abese": {
    "surahNumber": "80",
    "surahNameTr": "Abese Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Surat astı ve döndü;"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Kör geldi diye."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Ne bilirsin belki o arınacak?"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Yahut öğüt dinleyecek de öğüt, kendisine yarayacak."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Kendisini zengin görüp tenezzül etmeyene gelince;"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Sen ona yöneliyorsun."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Onun arınmamasından sana ne?"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Fakat koşarak sana gelen,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Saygılı olarak gelmişken,"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Sen onunla ilgilenmiyorsun."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Hayır (olmaz böyle şey); o (ayetler), bir hatırlatmadır."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Dileyen onu düşünüp öğüt alır."
      },
      {
        "ayahNumber": "13",
        "ayahText": "(O öğüt) Sahifeler içindedir: Değer verilen,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Saygı ile yükseltilen, tertemiz (sayfalar)"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Yazıcıların ellerinde:"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Değerli, iyi (yazıcıların)."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Kahrolası insan, ne kadar da nankördür!"
      },
      {
        "ayahNumber": "18",
        "ayahText": "(Allah) Onu hangi şeyden yarattı?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Nutfe (sperm)den. Onu yarattı, ona biçim verdi."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Sonra ona yolu kolaylaştırdı."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Sonra onu öldürdü, kabre koydurdu."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Sonra dilediği zaman onu diriltip kaldırdı."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Hayır, insan, O'nun kendisine emrettiğini yapmadı."
      },
      {
        "ayahNumber": "24",
        "ayahText": "İnsan şu yiyeceğine baksın."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Biz suyu iyice döktük."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Sonra toprağı güzelce yardık da,"
      },
      {
        "ayahNumber": "27",
        "ayahText": "Orada bitirdik: Dane,"
      },
      {
        "ayahNumber": "28",
        "ayahText": "Üzüm, yonca,"
      },
      {
        "ayahNumber": "29",
        "ayahText": "Zeytin, hurma,"
      },
      {
        "ayahNumber": "30",
        "ayahText": "İri ve gür bahçeler,"
      },
      {
        "ayahNumber": "31",
        "ayahText": "Meyva ve çayır;"
      },
      {
        "ayahNumber": "32",
        "ayahText": "Sizin ve hayvanlarınızın geçimi için."
      },
      {
        "ayahNumber": "33",
        "ayahText": "Çarpınca kulakları sağır eden o gürültü geldiği zaman,"
      },
      {
        "ayahNumber": "34",
        "ayahText": "İşte o gün kişi kaçar: kardeşinden,"
      },
      {
        "ayahNumber": "35",
        "ayahText": "Anasından, babasından,"
      },
      {
        "ayahNumber": "36",
        "ayahText": "Eşinden ve oğullarından."
      },
      {
        "ayahNumber": "37",
        "ayahText": "O gün, onlardan her kişinin, kendisine yeter derecede işi vardır."
      },
      {
        "ayahNumber": "38",
        "ayahText": "Yüzler var ki o gün parıl parıl,"
      },
      {
        "ayahNumber": "39",
        "ayahText": "Güleç, sevinçli."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Yüzler de var ki o gün tozlanmış."
      },
      {
        "ayahNumber": "41",
        "ayahText": "Onları karanlık bürümüş (öylesine üzgün, öylesine dertli)."
      },
      {
        "ayahNumber": "42",
        "ayahText": "İşte onlar kafirler, Hak'tan sapanlardır."
      }
    ]
  }
}