{
  "surahNumber": "101",
  "surahName": "Kâria Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Gürültü koparacak olan"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Nedir o gürültü koparacak olan?"
    },
    {
      "ayahNumber": "3",
      "ayahText": "O gürültü koparacak olanın ne olduğunu sen bilir misin?"
    },
    {
      "ayahNumber": "4",
      "ayahText": "O gün insanlar, ateş etrafında çırpınıp dökülen pervaneye dönecekler."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Dağlar, atılmış renkli yüne benzeyecekler."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Ama tartıları ağır gelen kimse hoş bir hayat içinde olacaktır."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ama tartıları ağır gelen kimse hoş bir hayat içinde olacaktır."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Tartıları hafif gelenler ise,"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Onların yeri bir çukurdur."
    },
    {
      "ayahNumber": "10",
      "ayahText": "O çukurun ne olduğunu sen bilir misin?"
    },
    {
      "ayahNumber": "11",
      "ayahText": "O, kızgın bir ateştir."
    }
  ]
}