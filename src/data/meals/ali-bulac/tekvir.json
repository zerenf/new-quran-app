{
  "tekvir": {
    "surahNumber": "81",
    "surahNameTr": "Tekvîr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Güneş, köreltildiği zaman,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar, bulanıklaşıp-döküldüğü zaman,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Dağlar, yürütüldüğü zaman,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Gebe develer, kendi başına terk edildiği zaman,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Vahşi-hayvanlar, toplandığı zaman,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Denizler, tutuşturulduğu zaman,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Nefisler, birleştiği zaman,"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Ve 'diri diri toprağa gömülen kızcağıza' sorulduğu zaman:"
      },
      {
        "ayahNumber": "9",
        "ayahText": "\"Hangi suçtan dolayı öldürüldü?\""
      },
      {
        "ayahNumber": "10",
        "ayahText": "Sahifeler (amel defterleri) açıldığı zaman,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gök, sıyrılıp-yüzüldüğü zaman"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Cehennem ateşi çılgınca kızıştırıldığı zaman,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Cennet de yakınlaştırıldığı zaman,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "(Artık her) Nefis, neyi hazırladığını bilip-öğrenmiştir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Artık hayır; yemin ederim (gündüz) sinip (gece) dönen (gezegen)lere,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Bir akış içinde yerini alanlara;"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Kararmaya ilk başladığı zaman, geceye andolsun,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Ve nefes almaya başladığı zaman, sabaha;"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Şüphesiz o (Kur'an), üstün onur sahibi bir elçinin gerçekten (Allah'tan getirdiği) sözüdür;"
      },
      {
        "ayahNumber": "20",
        "ayahText": "(Bu elçi,) Bir güç sahibidir, arşın sahibi Katında şereflidir."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Ona itaat edilir, sonra güvenilirdir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Sizin sahibiniz bir deli değildir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Andolsun o (peygamber), onu apaçık bir ufukta görmüştür."
      },
      {
        "ayahNumber": "24",
        "ayahText": "O, gayb (haberlerin)e karşı (söylediklerinden dolayı) suçlanamaz (ya da cimrilikte bulunup kıskançlık yapmaz.)"
      },
      {
        "ayahNumber": "25",
        "ayahText": "O (Kur'an) da kovulmuş şeytanın sözü değildir."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Şu halde, siz nereye kaçıp-gidiyorsunuz?"
      },
      {
        "ayahNumber": "27",
        "ayahText": "O (Kur'an), alemler için yalnızca bir zikirdir;"
      },
      {
        "ayahNumber": "28",
        "ayahText": "Sizden dosdoğru bir yön (istikamet) tutturmak dileyenler için."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Alemlerin Rabbi olan Allah dilemedikçe siz dileyemezsiniz."
      }
    ]
  }
}