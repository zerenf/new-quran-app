{
  "surahNumber": "88",
  "surahName": "Ğâşiye Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "(Her yanı yaygın olarak kuşatacak olan) Kıyametin haberi sana geldi mi?"
    },
    {
      "ayahNumber": "2",
      "ayahText": "O gün, öyle yüzler vardır ki, 'zillet içinde aşağılanmıştır.'"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Çalışmış, boşuna yorulmuştur."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Kızgın bir ateşe yollanırlar."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Kaynar bir kaynaktan içirilirler."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Onlar için (zehirli olan) dari' dikeninden başka bir yiyecek yoktur."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ne doyurup-semirtir, ne açlıktan korur."
    },
    {
      "ayahNumber": "8",
      "ayahText": "O gün, öyle yüzler de vardır ki, nimette (engin bir mutluluk içinde)dirler."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Harcadığı-çabadan dolayı hoşnuttur."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Yüksek bir cennettedir."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Orda anlamsız bir söz işitmez."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Orda 'durmaksızın akan' bir kaynak vardır."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Orda 'yükseklerde kurulmuş, tahtlar da vardır;"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Konulmuş (içecek dolu) kaplar,"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Dizi dizi yastıklar,"
    },
    {
      "ayahNumber": "16",
      "ayahText": "Ve serilmiş yaygılar."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Bakmıyorlar mı o deveye; nasıl yaratıldı?"
    },
    {
      "ayahNumber": "18",
      "ayahText": "Göğe, nasıl yükseltildi?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Dağlara; nasıl oturtulup-kuruldu?"
    },
    {
      "ayahNumber": "20",
      "ayahText": "Yere; nasıl yayılıp-döşendi?"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Artık sen, öğüt verip-hatırlat. Sen, yalnızca bir öğüt verici-bir hatırlatıcısın."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Onlara 'zor ve baskı' kullanacak değilsin."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Ancak kim yüz çevirir ve inkar ederse"
    },
    {
      "ayahNumber": "24",
      "ayahText": "Allah, onu en büyük azap ile azaplandırır."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Şüphesiz onların dönüşleri Bizedir."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Sonra onları hesaba çekmek de elbette Bize aittir."
    }
  ]
}