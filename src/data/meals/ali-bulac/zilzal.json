{
  "zilzal": {
    "surahNumber": "99",
    "surahNameTr": "Zilzâl Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Yer, o şiddetli sarsıntısıyla sarsıldığı,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yer, ağırlıklarını dışa atıp-çıkardığı,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Ve insan: \"Buna ne oluyor?\" dediği zaman;"
      },
      {
        "ayahNumber": "4",
        "ayahText": "O gün (yer), haberlerini anlatacaktır."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Çünkü senin Rabbin, ona vahyetmiştir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "O gün insanlar, amelleri kendilerine gösterilsin diye, bölük bölük fırlayıp-çıkarlar."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Artık kim zerre ağırlığınca hayır işlerse, onu görür."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Artık kim zerre ağırlığınca bir şer (kötülük) işlerse, onu görür."
      }
    ]
  }
}