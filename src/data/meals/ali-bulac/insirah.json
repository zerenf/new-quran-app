{
  "insirah": {
    "surahNumber": "94",
    "surahNameTr": "İnşirâh Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Biz, senin göğsünü yarıp-genişletmedik mi?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Ve yükünü indirip-atmadık mı?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Ki o, senin belini bükmüştü;"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Senin zikrini (şanını) yüceltmedik mi?"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Demek ki, gerçekten zorlukla beraber kolaylık vardır."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Gerçekten güçlükle beraber kolaylık vardır."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Şu halde boş kaldığın zaman, durmaksızın (dua ve ibadetle) yorulmaya-devam et."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Ve yalnızca Rabbine rağbet et."
      }
    ]
  }
}