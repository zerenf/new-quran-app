{
  "abese": {
    "surahNumber": "80",
    "surahNameTr": "Abese Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Surat astı ve yüz çevirdi;"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Kendisine o kör geldi diye."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Nerden biliyorsun; belki o, temizlenip-arınacak?"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Veya öğüt alacak; böylelikle bu öğüt kendisine yarar sağlayacak."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Fakat kendini müstağni gören (hiçbir şeye ihtiyacı olmadığını sanan) ise,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "İşte sen, onda 'yankı uyandırmaya’ çalışıyorsun."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Oysa, onun temizlenip-arınmasından sana ne?"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Ama koşarak sana gelen ise,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Ki o, 'içi titreyerek korkar' bir durumdadır;"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Sen ona aldırış etmeden oyalanıyorsun."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Hayır; çünkü o (Kur'an), bir öğüttür."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Artık dileyen, onu 'düşünüp-öğüt alsın.'"
      },
      {
        "ayahNumber": "13",
        "ayahText": "O (Kur'an), 'şerefli-üstün' sahifelerdedir."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Yüceltilmiş, tertemiz (mutahhar) kılınmış."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Katiplerin ellerinde."
      },
      {
        "ayahNumber": "16",
        "ayahText": "(Ki onlar,) Üstün değerli, 'iyilik ve dürüstlük sembolü.'"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Kahrolası insan, ne kadar nankördür."
      },
      {
        "ayahNumber": "18",
        "ayahText": "(Allah) Onu hangi şeyden yarattı?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Bir damla sudan yarattı da onu 'bir ölçüyle biçime soktu.'"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Sonra ona yolu kolaylaştırdı."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Sonra onu öldürdü, böylece kabre gömdürdü."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Sonra dilediği zaman onu diriltir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Hayır; ona (Allah'ın) emrettiğini yerine getirmedi."
      },
      {
        "ayahNumber": "24",
        "ayahText": "Bir de insan, yediğine bir bakıversin;"
      },
      {
        "ayahNumber": "25",
        "ayahText": "Biz şüphesiz, suyu akıttıkça akıttık,"
      },
      {
        "ayahNumber": "26",
        "ayahText": "Sonra yeri yardıkça yardık;"
      },
      {
        "ayahNumber": "27",
        "ayahText": "Böylece onda taneler bitirdik,"
      },
      {
        "ayahNumber": "28",
        "ayahText": "Üzümler, yoncalar,"
      },
      {
        "ayahNumber": "29",
        "ayahText": "Zeytinler, hurmalar,"
      },
      {
        "ayahNumber": "30",
        "ayahText": "Boyları birbiriyle yarışan ve içiçe girmiş ağaçlı bahçeler."
      },
      {
        "ayahNumber": "31",
        "ayahText": "Meyveler ve otlaklıklar,"
      },
      {
        "ayahNumber": "32",
        "ayahText": "Size ve hayvanlarınıza bir yarar (meta) olmak üzere."
      },
      {
        "ayahNumber": "33",
        "ayahText": "Fakat 'kulakları patlatırcasına olan o gürleme' geldiği zaman,"
      },
      {
        "ayahNumber": "34",
        "ayahText": "Kişi o gün, kendi kardeşinden kaçar;"
      },
      {
        "ayahNumber": "35",
        "ayahText": "Annesinden ve babasından,"
      },
      {
        "ayahNumber": "36",
        "ayahText": "Eşinden ve çocuklarından,"
      },
      {
        "ayahNumber": "37",
        "ayahText": "O gün, onlardan her birisinin kendine yetecek bir işi vardır."
      },
      {
        "ayahNumber": "38",
        "ayahText": "O gün, öyle yüzler vardır ki apaydınlıktır;"
      },
      {
        "ayahNumber": "39",
        "ayahText": "Güler ve sevinç içindedir."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Ve o gün, öyle yüzler de vardır ki üzerini toz bürümüştür."
      },
      {
        "ayahNumber": "41",
        "ayahText": "Bir karartı sarıp-kaplamıştır."
      },
      {
        "ayahNumber": "42",
        "ayahText": "İşte onlar da, kafir, facir olanlardır."
      }
    ]
  }
}