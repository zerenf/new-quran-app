{
  "surahNumber": "85",
  "surahName": "Bürûc Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Burçları olan göğe andolsun,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "O vadedilen güne,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Şahid olana (görene) ve şahit olunana (görülene)."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Kahrolsun Ashab-ı Uhdud"
    },
    {
      "ayahNumber": "5",
      "ayahText": "'Tutuşturucu-yakıt dolu o ateş,'"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Hani kendileri (ateş hendeğinin) çevresinde oturmuşlardı."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve mü'minlere yaptıklarını seyrediyorlardı."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Onlardan, yalnızca 'üstün ve güçlü olan,' öğülen Allah'a iman ettiklerinden dolayı intikam alıyorlardı."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Ki O (Allah), göklerin ve yerin mülkü O'nundur. Allah, herşeyin üzerinde şahid olandır."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Gerçek şu ki, mü'min erkeklerle mü'min kadınlara işkence (fitne) uygulayanlar, sonra tevbe etmeyenler; işte onlar için, cehennem azabı vardır ve yakıcı azap onlaradır."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Şüphesiz iman edip salih amellerde bulunanlara gelince; onlar için altından ırmaklar akan cennetler vardır. İşte büyük 'kurtuluş ve mutluluk' budur."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Doğrusu, Rabbinin 'zorlu yakalayışı' şiddetlidir."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Çünkü O, ilkin var eden, (sonra dirilterek) döndürecek olandır."
    },
    {
      "ayahNumber": "14",
      "ayahText": "O, çok bağışlayandır, çok sevendir."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Arşın sahibidir; Mecid (pek Yüce)dir."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Her dilediğini yapıp-gerçekleştirendir."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Orduların haberi sana geldi mi?"
    },
    {
      "ayahNumber": "18",
      "ayahText": "Firavun ve Semud (ordularının)?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Hayır; inkar edenler, (kesintisiz) bir yalanlama içindedirler."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Allah ise, onları arkalarından sarıp-kuşatmıştır."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Hayır; o (Kitap), 'şerefli-üstün' olan bir Kur'an'dır;"
    },
    {
      "ayahNumber": "22",
      "ayahText": "Levh-i Mahfuz'dadır."
    }
  ]
}