{
  "tarik": {
    "surahNumber": "86",
    "surahNameTr": "Târık Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Göğe ve Tarık'a andolsun,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Tarık'ın ne olduğunu sana bildiren nedir?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "(Karanlığı) Delen yıldızdır."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Üzerinde gözetleyici-koruyucu bulunmayan hiçbir nefis (kimse) yoktur."
      },
      {
        "ayahNumber": "5",
        "ayahText": "İnsan bir baksın, hangi şeyden yaratıldı?"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Dökülüp atılan bir sudan yaratıldı."
      },
      {
        "ayahNumber": "7",
        "ayahText": "(Bu su,) Bel kemiği ile kaburgalar arasında(ki organlar)dan çıkar."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Şüphesiz (Allah), onu yeniden-döndürmeye güç yetirendir."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Sırların orta yere çıkarılacağı gün;"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Artık onun ne gücü vardır, ne yardımcısı."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Dönüşlü olan göğe andolsun."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Yarılan yere de."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Şüphesiz o (Kur'an), ayırdeden bir sözdür."
      },
      {
        "ayahNumber": "14",
        "ayahText": "O, bir şaka değildir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Doğrusu onlar, hileli bir düzen planlayıp kuruyorlar;"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ben de bir düzen kurup hazırlıyorum."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Sen kafirlere bir mühlet ver, az bir süre tanı."
      }
    ]
  }
}