{
  "surahNumber": "96",
  "surahName": "Alak Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Yaratan Rabbin adıyla oku."
    },
    {
      "ayahNumber": "2",
      "ayahText": "O, insanı bir alak'tan yarattı."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Oku, Rabbin en büyük kerem sahibidir;"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Ki O, kalemle (yazmayı) öğretendir."
    },
    {
      "ayahNumber": "5",
      "ayahText": "İnsana bilmediğini öğretti."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Hayır; gerçekten insan, azar."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Kendini müstağni gördüğünden."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Şüphesiz, dönüş yalnızca Rabbinedir."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Engellemekte olanı gördün mü?"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Namaz kıldığı zaman bir kulu."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Gördün mü? Ya o (kul) doğru yol üzerinde ise,"
    },
    {
      "ayahNumber": "12",
      "ayahText": "Ya da takvayı emrettiyse."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Gördün mü? Ya (bu engellemek isteyen) yalanlıyor ve yüz çeviriyor ise."
    },
    {
      "ayahNumber": "14",
      "ayahText": "O, Allah'ın gördüğünü bilmiyor mu?"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Hayır; eğer o, (bu tutumuna) bir son vermeyecek olursa, andolsun, onu perçeminden tutup sürükleyeceğiz;"
    },
    {
      "ayahNumber": "16",
      "ayahText": "O yalancı, günahkar olan alnından."
    },
    {
      "ayahNumber": "17",
      "ayahText": "O zaman da meclisini (yakın çevresini ve yandaşlarını) çağırsın."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Biz de zebanileri çağıracağız."
    },
    {
      "ayahNumber": "19",
      "ayahText": "Hayır; ona boyun eğme (Rabbine) Secde et ve yakınlaş."
    }
  ]
}