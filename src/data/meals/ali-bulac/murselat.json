{
  "surahNumber": "77",
  "surahName": "Mürselât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Birbiri ardınca gönderilenlere andolsun;"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Derken kökünden koparıp savuranlara."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Yaydıkça yayanlara."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Böylece ayırdıkça ayıranlara,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Zikr (vahy, öğüt) bırakanlara;"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Özür (suçu, eksikliği ortadan kaldırmak) veya uyarmak için."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Şüphesiz, size vaadedilen gerçekleşecektir."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Yıldızlar 'örtülüp (ışıkları) silindiği' zaman,"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Gök yarıldığı zaman"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Dağlar, kökünden sökülüp savurulduğu zaman,"
    },
    {
      "ayahNumber": "11",
      "ayahText": "Ve resuller de (şahitlik için) belli bir vakitte getirildiği zaman"
    },
    {
      "ayahNumber": "12",
      "ayahText": "(Bu,) Hangi gün için ertelenmişti?"
    },
    {
      "ayahNumber": "13",
      "ayahText": "(Mü'mini müşrikten, haklıyı haksızdan) Ayırma günü için."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Bu ayırma gününü sana ne bildirdi?"
    },
    {
      "ayahNumber": "15",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Biz, öncekileri helak etmedik mi?"
    },
    {
      "ayahNumber": "17",
      "ayahText": "Sonra arkadan gelenleri onların izinde yürüteceğiz."
    },
    {
      "ayahNumber": "18",
      "ayahText": "İşte Biz, suçlu-günahkarlara böyle yapıyoruz."
    },
    {
      "ayahNumber": "19",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Sizi basbayağı bir sudan yaratmadık mı?"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Sonra onu savunması sağlam bir karar yerine yerleştirdik."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Belli bir süreye kadar;"
    },
    {
      "ayahNumber": "23",
      "ayahText": "İşte (buna) güç yetirdik. Demek ki, Biz ne güzel güç yetirenleriz."
    },
    {
      "ayahNumber": "24",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Biz yeryüzünü bir toplanma yeri kılmadık mı?"
    },
    {
      "ayahNumber": "26",
      "ayahText": "Dirilere ve ölülere."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Ve onda sabit yüksek dağlar var etmedik mi? Size tatlı bir su içirmedik mi?"
    },
    {
      "ayahNumber": "28",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "29",
      "ayahText": "Kendisini yalanladığınız (azab)a gidin."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Üç dala ayrılmış bir gölgeye gidin."
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ne gölge altında barındırır, ne (yakıcı) alevden korur."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Gerçekten o, sanki her biri saray olan bir kıvılcım saçar."
    },
    {
      "ayahNumber": "33",
      "ayahText": "Her biri, sanki sapsarı erkek deve sürüleri gibidir."
    },
    {
      "ayahNumber": "34",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "35",
      "ayahText": "Bu, onların konuşamayacakları bir gündür."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Ve onlara özür beyan etmeleri için izin verilmez."
    },
    {
      "ayahNumber": "37",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Bu, hüküm günüdür; sizi ve öncekileri 'birarada topladık.'"
    },
    {
      "ayahNumber": "39",
      "ayahText": "Şayet kurabileceğiniz hileli bir düzeniniz varsa, durmaksızın bana karşı kurun."
    },
    {
      "ayahNumber": "40",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "41",
      "ayahText": "Şüphesiz muttaki olanlar, gölgeliklerde ve pınar-başlarındadır;"
    },
    {
      "ayahNumber": "42",
      "ayahText": "Ve canlarının çekip-arzu ettiği meyveler (arasındadırlar)."
    },
    {
      "ayahNumber": "43",
      "ayahText": "Yaptıklarınıza karşılık olmak üzere, afiyetle yiyin ve için."
    },
    {
      "ayahNumber": "44",
      "ayahText": "Elbette Biz, 'iyi ve güzel' davrananları işte böyle ödüllendiririz."
    },
    {
      "ayahNumber": "45",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "46",
      "ayahText": "(Sizler de dünyada) Yiyin ve biraz yararlanın. Çünkü siz, suçlu-günahkar kimselersiniz."
    },
    {
      "ayahNumber": "47",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "48",
      "ayahText": "Onlara: \"Rüku edin\" denildiği zaman, rüku etmezler."
    },
    {
      "ayahNumber": "49",
      "ayahText": "O gün, yalanlayanların vay haline."
    },
    {
      "ayahNumber": "50",
      "ayahText": "Artık onlar, bundan sonra hangi söze inanacaklar?"
    }
  ]
}