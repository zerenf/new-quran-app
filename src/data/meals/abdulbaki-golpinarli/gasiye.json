{
  "surahNumber": "88",
  "surahName": "Ğâşiye Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Geldi mi sana her yanı ve herkesi kavrayıp kaplayan o felaketin haberi?"
    },
    {
      "ayahNumber": "2",
      "ayahText": "O gün yüzler eğilirler."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Çalışıp çabalarlar, zahmete girip yorulurlar."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Pek kızgın ateşe atılırlar."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Pek ıssı bir suyla suvarılırlar."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Onlara orada yemek olarak ancak zehirli diken var,"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ne besler ve ne doyurur, açlığı defeder."
    },
    {
      "ayahNumber": "8",
      "ayahText": "O gün yüzler, sevinçlidir, neşeye dalar."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Çalıştıklarından hoşnut olurlar."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Yüce cennettedirler."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Orada boş söz duymazlar."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Orada akan bir pınar var."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Orada yükseltilmiş tahtlar."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Ve konmuş sağraklar."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Ve sırasıra konmuş yastıklar."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Yeryer yayılmış döşemeler."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Hala mı bakmazlar deveye, nasıl da yaratılmış?"
    },
    {
      "ayahNumber": "18",
      "ayahText": "Ve göğe, nasıl da yüceltilmiş?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Ve dağlara, nasıl da dikilmiş."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Ve yeryüzüne, nasıl da yayılmış?"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Artık korkut, öğüt ver, sen, ancak bir korkutucusun, bir öğütçü."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Onlara musallat olmuş biri değilsin."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Ancak kabul etmeyen ve kafir olana gelince."
    },
    {
      "ayahNumber": "24",
      "ayahText": "Artık onu Allah azaplandırır pek büyük bir azapla."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Şüphe yok ki tapımızdır gelecekleri yer."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Sonra da şüphe yok ki hesaplarını görmek, bize düşer."
    }
  ]
}