{
  "surahNumber": "77",
  "surahName": "Mürselât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun, ardı ardınca, iyilikle gönderilenlere."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Şiddetle esip yelenlere."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Bulutları yayıp sürenlere."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Gerçekle aslı olmayanı ayırt edenlere."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Öğütleri telkin edenlere."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Özürle suçu yok etmek hususunda olsun, yahut korkutma hususuna ait bulunsun."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Şüphe yok ki size vaat edilen, mutlaka olacak."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Yıldızların ışıkları sönünce."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Ve gök yarılınca."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Ve dağlar, yerlerinden kopup dümdüz olunca."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Ve peygamberler toplanınca."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Hangi gün için geciktirildi bunlar?"
    },
    {
      "ayahNumber": "13",
      "ayahText": "Ayırma günü için."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Ve nedir, bilir misin ayırma günü?"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Önce gelenleri helak etmedik mi?"
    },
    {
      "ayahNumber": "17",
      "ayahText": "Sonra da son gelenleri tutar, katarız onlara."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Böyle yaparız günahkarlara."
    },
    {
      "ayahNumber": "19",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Sizi, bayağı ve azıcık bir sudan yaratmadık mı?"
    },
    {
      "ayahNumber": "21",
      "ayahText": "Derken onu, karar edilecek kuvvetli bir yerde tutmadık mı?"
    },
    {
      "ayahNumber": "22",
      "ayahText": "Bilinen bir müddete dek."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Derken taktir ettik yaratılışını, ne güzel de takdir ederiz biz."
    },
    {
      "ayahNumber": "24",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Yeryüzünü, bir toplantı yeri olarak halk etmedik mi?"
    },
    {
      "ayahNumber": "26",
      "ayahText": "Dirilere ve ölülere."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Ve orada, sabit ve metin dağlar yarattık ve sizi, tatlı suyla suvardık."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "29",
      "ayahText": "Haydi yürüyün yalanladığınıza doğru."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Yürüyün üç kola ayrılmış gölgeye doğru."
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ne gölgelendirir sizi o, ne alevden korur."
    },
    {
      "ayahNumber": "32",
      "ayahText": "O, köşk gibi kıvılcımlar fırlatır."
    },
    {
      "ayahNumber": "33",
      "ayahText": "Sanki o kıvılcımlar, birer sarı erkek devedir."
    },
    {
      "ayahNumber": "34",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "35",
      "ayahText": "Bu, bir gündür ki söz söyleyemezler."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Onlara izin de verilmez, özür getiremezler."
    },
    {
      "ayahNumber": "37",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Budur ayırma günü, sizi de toplarız, öncekileri de."
    },
    {
      "ayahNumber": "39",
      "ayahText": "Artık bir düzeniniz varsa düzüp koşun."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "41",
      "ayahText": "Şüphe yok ki çekinenler, gölgeliklerdedir ve pınar başlarında,"
    },
    {
      "ayahNumber": "42",
      "ayahText": "arzuladıkları meyveleri bulurlar."
    },
    {
      "ayahNumber": "43",
      "ayahText": "Yiyin ve için, afiyetler olsun yaptıklarınıza karşılık."
    },
    {
      "ayahNumber": "44",
      "ayahText": "Şüphe yok ki böyle mükafatlandırırız iyilik edenleri."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "46",
      "ayahText": "Yiyin ve geçinin az bir müddet, şüphe yok ki suçlularsınız siz."
    },
    {
      "ayahNumber": "47",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "48",
      "ayahText": "Rüku edin denince onlara, rüku etmezler."
    },
    {
      "ayahNumber": "49",
      "ayahText": "Vay hallerine o gün yalanlayanların."
    },
    {
      "ayahNumber": "50",
      "ayahText": "Bundan sonra artık hangi söze inanırlar ki?"
    }
  ]
}