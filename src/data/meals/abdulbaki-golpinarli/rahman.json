{
  "surahNumber": "55",
  "surahName": "Rahmân Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Rahman."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Kur'an'ı öğretti."
    },
    {
      "ayahNumber": "3",
      "ayahText": "insanı halketti,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "ona dilleri, konuşmayı belletti."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Güneş ve ay, hesapla hareket eyler."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Ve gövdesiz bitki ve gövdeli ağaç secde eder."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Ve göğü yüceltti ve ölçüyü koydu."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Ölçüde, tartıda insafsızlık etmeyin."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Teraziyi doğru tutun, adaletle tartın ve eksik tartmayın."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Yeryüzünü alçalttı halka."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Orada meyveler ve lifli, kabuklu hurmalar var."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Yapraklı taneler var ve güzel kokulu otlar."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "14",
      "ayahText": "İyice pişmiş gibi kupkuru balçıktan, insanı halketti."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Ve cinleri, coşup kaynayan ateşten yarattı."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlıyabilirsiniz?"
    },
    {
      "ayahNumber": "17",
      "ayahText": "Rabbidir iki doğunun ve Rabbidir iki batının."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "İki denizi salmıştır, nerdeyse karışacaklar."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Fakat aralarında bir berzah var, birbirlerine karışmazlar."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlıyabilirsiniz?"
    },
    {
      "ayahNumber": "22",
      "ayahText": "Her ikisinden de inci ve mercan çıkar."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "24",
      "ayahText": "Ve onundur denizde akıp giden dağlar gibi gemiler."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "26",
      "ayahText": "Yerin üstünde ne varsa fanidir."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Ve ancak ululuk ve kerem ıssı Rabbinin zatıdır kalan."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "29",
      "ayahText": "Ondan ister kim varsa göklerde ve yeryüzünde; o, her gün bir iştedir."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ey iki ağır topluluk, insanlar ve cinler, yakında hesabınıza bakacağız."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "33",
      "ayahText": "Ey cin ve insan topluluğu, ölümden kurtulmak için, göklerin ve yer yüzünün bucaklarından geçip kaçmaya gücünüz yeterse geçin, kaçın; fakat geçemezsiniz bir kudret olmadıkça."
    },
    {
      "ayahNumber": "34",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "35",
      "ayahText": "Üstünüze bir ateş yalımı ve erimiş bakır gönderilir de kaçamazsınız."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "37",
      "ayahText": "Derken gök yarılıp kırmızı bir gül rengine gelerek yağ gibi eriyince..."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "39",
      "ayahText": "Ne insan, ne cin, artık o gün suçlu mudur, sorulmaz."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "41",
      "ayahText": "Suçlular, yüzlerindeki alametten tanınırlar da perçemlerinden ve ayaklarından tutulurlar."
    },
    {
      "ayahNumber": "42",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "43",
      "ayahText": "İşte bu, suçluların yalanladıkları cehennem."
    },
    {
      "ayahNumber": "44",
      "ayahText": "Cehennemle içecekleri kaynar suyun arasında dolanıp dururlar."
    },
    {
      "ayahNumber": "45",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "46",
      "ayahText": "Rabbinin tapısına varmaktan korkana iki cennet var."
    },
    {
      "ayahNumber": "47",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "48",
      "ayahText": "İkisinde de türlütürlü nimetler var, çeşitçeşit ağaçlar."
    },
    {
      "ayahNumber": "49",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "50",
      "ayahText": "İkisinde de iki ırmak var, akar."
    },
    {
      "ayahNumber": "51",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "52",
      "ayahText": "İkisinde de her çeşit meyve, çifterçifter var."
    },
    {
      "ayahNumber": "53",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "54",
      "ayahText": "Öylesine döşemelere yaslanacaklar ki astarları kalın ipekten, her iki cennetin, devşirilip toplanacak meyveleri de ellerinin altında, pek yakın."
    },
    {
      "ayahNumber": "55",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "56",
      "ayahText": "O cennetlerde, gözlerini, eşlerinden ayırmayan ve eşlerinden önce ne bir insan tarafından dokunulmuş, ne bir cin tarafından dokunulmuş eşler var."
    },
    {
      "ayahNumber": "57",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "58",
      "ayahText": "O eşler, sanki yakut ve mercan."
    },
    {
      "ayahNumber": "59",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "60",
      "ayahText": "İyiliğin karşılığı, iyilikten başka bir şey olabilir mi?"
    },
    {
      "ayahNumber": "61",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "62",
      "ayahText": "Bu iki cennetten başka iki cennet daha var."
    },
    {
      "ayahNumber": "63",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "64",
      "ayahText": "İkisi de koyu yeşil."
    },
    {
      "ayahNumber": "65",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "66",
      "ayahText": "İkisinde de iki pınar var, fışkırıp çıkar da akar."
    },
    {
      "ayahNumber": "67",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "68",
      "ayahText": "Her ikisinde de meyveler ve hurma ve nar var."
    },
    {
      "ayahNumber": "69",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "70",
      "ayahText": "O cennetlerde güzel huylu güzeller var."
    },
    {
      "ayahNumber": "71",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "72",
      "ayahText": "Beyaz tenli, kara gözlü, otağlarda huriler."
    },
    {
      "ayahNumber": "73",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "74",
      "ayahText": "Eşlerinden önce ne bir insan dokunmuş onlara, ne bir cin."
    },
    {
      "ayahNumber": "75",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "76",
      "ayahText": "Yeşil ipeklilerle düşenmiş sedirlere ve güzelim döşemelere yaslanırlar."
    },
    {
      "ayahNumber": "77",
      "ayahText": "Artık Rabbinizin nimetlerinden hangisini yalanlayabilirsiniz?"
    },
    {
      "ayahNumber": "78",
      "ayahText": "Ululuk ve kerem ıssı Rabbinin adının şanı, pek yücedir."
    }
  ]
}