{
  "surahNumber": "80",
  "surahName": "Abese Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Yüzünü ekşitti ve döndürdü."
    },
    {
      "ayahNumber": "2",
      "ayahText": "Yanına kör geldi diye."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Belki o, arınacaktır, ne bilirsin?"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Yahut da öğüt alacaktır da ondan faydalanacaktır."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Fakat ihtiyacı olmayana gelince."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Artık sen onun üstüne düştükçe düşüyorsun."
    },
    {
      "ayahNumber": "7",
      "ayahText": "O arınmazsa sana ne?"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Ve fakat sana koşup gelen."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Ve korkan kişi."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Sen ondan gaflet ediyor, ona aldırış bile etmiyorsun."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Öyle değil, şüphe yok ki Kur'an, ancak bir öğüttür."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Dileyen dinler, öğüt alır."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Büyük, şerefli sayfalardadır."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Yüceltilmiştir, arıtılmıştır."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Yazıcıların ellerinde."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Büyüklerdir, hayırlı ve itaatlilerdir."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Geberesice insan, ne de kafirdir."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Onu, neden yaratmıştır?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Bir katre sudan; yaratmıştır onu da halden hale döndürmüştür."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Sonra ona yolu kolaylatmıştır da dünyaya getirmiştir."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Sonra öldürmüştür onu da kabre sokmuştur."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Sonra da dilerse diriltir onu."
    },
    {
      "ayahNumber": "23",
      "ayahText": "Gerçekten de insan, onun emrini tam yerine getirmedi gitti."
    },
    {
      "ayahNumber": "24",
      "ayahText": "Artık insan, yediğine de bir baksın."
    },
    {
      "ayahNumber": "25",
      "ayahText": "Şüphe yok ki biz, bir yağmurdur, yağdırdık."
    },
    {
      "ayahNumber": "26",
      "ayahText": "Sonra yeryüzünü bir iyice yardık."
    },
    {
      "ayahNumber": "27",
      "ayahText": "Derken orada tohumlar bitirdik."
    },
    {
      "ayahNumber": "28",
      "ayahText": "Ve üzüm ve yoncalar."
    },
    {
      "ayahNumber": "29",
      "ayahText": "Ve zeytin ve hurma."
    },
    {
      "ayahNumber": "30",
      "ayahText": "Ve çeşitli büyük ağaçları bulunan bahçeler."
    },
    {
      "ayahNumber": "31",
      "ayahText": "Ve meyveler ve otlaklar."
    },
    {
      "ayahNumber": "32",
      "ayahText": "Sizin ve hayvanlarınızın faydası için."
    },
    {
      "ayahNumber": "33",
      "ayahText": "Derken adeta kulakları sağır eden o bağırış gelip çattı mı."
    },
    {
      "ayahNumber": "34",
      "ayahText": "O gün, bir gündür ki kişi kaçar kardeşinden."
    },
    {
      "ayahNumber": "35",
      "ayahText": "Ve anasından ve babasından."
    },
    {
      "ayahNumber": "36",
      "ayahText": "Ve eşinden ve çocuğundan."
    },
    {
      "ayahNumber": "37",
      "ayahText": "Ve onların herbirinin bir derdi var ki başkalarına bakmaya vakti bile yok."
    },
    {
      "ayahNumber": "38",
      "ayahText": "Nice yüzler o gün parılparıl parlar."
    },
    {
      "ayahNumber": "39",
      "ayahText": "Güler, sevinir."
    },
    {
      "ayahNumber": "40",
      "ayahText": "Ve nice yüzler o gün tozlarla bulanır."
    },
    {
      "ayahNumber": "41",
      "ayahText": "Üstlerine bir karalıktır çöker."
    },
    {
      "ayahNumber": "42",
      "ayahText": "İşte onlardır kafirler, suçlular."
    }
  ]
}