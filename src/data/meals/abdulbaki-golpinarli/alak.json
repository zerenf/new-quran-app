{
  "surahNumber": "96",
  "surahName": "Alak Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Oku Rabbinin adıyla ki bütün mahlukatı yarattı."
    },
    {
      "ayahNumber": "2",
      "ayahText": "İnsanı da bir parça kan pıhtısından var etti."
    },
    {
      "ayahNumber": "3",
      "ayahText": "Oku ve Rabbin, pek büyük bir kerem sahibidir."
    },
    {
      "ayahNumber": "4",
      "ayahText": "Öyle bir Rab ki kalemle öğretmiştir."
    },
    {
      "ayahNumber": "5",
      "ayahText": "İnsana bilmediğini belletmiştir."
    },
    {
      "ayahNumber": "6",
      "ayahText": "İş öyle değil, şüphe yok ki insan, azar elbette."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Kendini ihtiyacı yok görürse."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Şüphe yok ki dönüş, Rabbinin tapısına."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Gördün mü nehyedeni."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Bir kulu, namaz kılarsa."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Bir düşün, ya o doğru yolu bulup giderse."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Yahut da çekinmeyi emrederse."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Gördün mü sen de, ya öbürü yalanlar ve yüz çevirirse."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Bilmez mi ki Allah, bilir gerçekten de."
    },
    {
      "ayahNumber": "15",
      "ayahText": "İş öyle değil, vaz geçmezse eğer elbette tutarız perçeminden."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Yalan söyleyenin, yanlış hareket edenin perçeminden."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Derken hemdemlerini, kavmini, kabilesini çağırır."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Biz de yakında zebanileri çağırırız."
    },
    {
      "ayahNumber": "19",
      "ayahText": "İş öyle değil, itaat etme ona ve artık secde et de yaklaş."
    }
  ]
}