{
  "insirah": {
    "surahNumber": "94",
    "surahNameTr": "İnşirâh Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Senin göğsünü açıp genişletmedik mi?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Ve senin yükünü kaldırıp attık."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Öylesine yük ki çökertmişti belini."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Ve adını yücelttik."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Artık şüphe yok ki her güçlükle beraber bir de kolaylık var."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Şüphe yok ki her güçlükle beraber bir de kolaylık var."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Artık sen de ibadeti bitirince yorul."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Ve ancak Rabbinden iste, ona doğrul."
      }
    ]
  }
}