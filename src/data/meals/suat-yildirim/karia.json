{
  "surahNumber": "101",
  "surahName": "Kâria Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Kari'a,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Nedir o kari'a?"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Kari'ayı, o kapıları döven ve dehşetiyle kalplere çarpan o kıyamet felaketini sen nereden bileceksin ki!"
    },
    {
      "ayahNumber": "4",
      "ayahText": "O gün insanlar uçuşan kelebekler gibi şuraya buraya fırlatılır."
    },
    {
      "ayahNumber": "5",
      "ayahText": "Dağlar atılmış yüne döner,"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Artık kimin tartıları ağır basarsa,"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Memnun kalacağı bir hayata girer."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Kimin tartıları da hafif gelirse,"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Onun barınağı da Haviye olur."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Onun ne olduğunu bilir misin?"
    },
    {
      "ayahNumber": "11",
      "ayahText": "Haviye bir ateştir: kızgın mı kızgın!"
    }
  ]
}