{
  "surahNumber": "81",
  "surahName": "Tekvîr Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "iẕe-şşemsü küvvirat."
    },
    {
      "ayahNumber": "2",
      "ayahText": "veiẕe-nnücûmü-nkederat."
    },
    {
      "ayahNumber": "3",
      "ayahText": "veiẕe-lcibâlü süyyirat."
    },
    {
      "ayahNumber": "4",
      "ayahText": "veiẕe-l`işâru `uṭṭilet."
    },
    {
      "ayahNumber": "5",
      "ayahText": "veiẕe-lvuḥûşü ḥuşirat."
    },
    {
      "ayahNumber": "6",
      "ayahText": "veiẕe-lbiḥâru süccirat."
    },
    {
      "ayahNumber": "7",
      "ayahText": "veiẕe-nnüfûsü züvvicet."
    },
    {
      "ayahNumber": "8",
      "ayahText": "veiẕe-lmev'ûdetü süilet."
    },
    {
      "ayahNumber": "9",
      "ayahText": "bieyyi ẕembin ḳutilet."
    },
    {
      "ayahNumber": "10",
      "ayahText": "veiẕe-ṣṣuḥufü nüşirat."
    },
    {
      "ayahNumber": "11",
      "ayahText": "veiẕe-ssemâü küşiṭat."
    },
    {
      "ayahNumber": "12",
      "ayahText": "veiẕe-lceḥîmü sü``irat."
    },
    {
      "ayahNumber": "13",
      "ayahText": "veiẕe-lcennetü üzlifet."
    },
    {
      "ayahNumber": "14",
      "ayahText": "`alimet nefsüm mâ aḥḍarat."
    },
    {
      "ayahNumber": "15",
      "ayahText": "felâ uḳsimü bilḫunnes."
    },
    {
      "ayahNumber": "16",
      "ayahText": "elcevâri-lkünnes."
    },
    {
      "ayahNumber": "17",
      "ayahText": "velleyli iẕâ `as`as."
    },
    {
      "ayahNumber": "18",
      "ayahText": "veṣṣubḥi iẕâ teneffes."
    },
    {
      "ayahNumber": "19",
      "ayahText": "innehû leḳavlü rasûlin kerîm."
    },
    {
      "ayahNumber": "20",
      "ayahText": "ẕî ḳuvvetin `inde ẕi-l`arşi mekîn."
    },
    {
      "ayahNumber": "21",
      "ayahText": "müṭâ`in ŝemme emîn."
    },
    {
      "ayahNumber": "22",
      "ayahText": "vemâ ṣâḥibüküm bimecnûn."
    },
    {
      "ayahNumber": "23",
      "ayahText": "veleḳad raâhü bil'üfüḳi-lmübîn."
    },
    {
      "ayahNumber": "24",
      "ayahText": "vemâ hüve `ale-lgaybi biḍanîn."
    },
    {
      "ayahNumber": "25",
      "ayahText": "vemâ hüve biḳavli şeyṭânir racîm."
    },
    {
      "ayahNumber": "26",
      "ayahText": "feeyne teẕhebûn."
    },
    {
      "ayahNumber": "27",
      "ayahText": "in hüve illâ ẕikrul lil`âlemîn."
    },
    {
      "ayahNumber": "28",
      "ayahText": "limen şâe minküm ey yesteḳîm."
    },
    {
      "ayahNumber": "29",
      "ayahText": "vemâ teşâûne illâ ey yeşâe-llâhü rabbü-l`âlemîn."
    }
  ]
}