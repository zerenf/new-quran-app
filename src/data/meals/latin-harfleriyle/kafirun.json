{
  "surahNumber": "109",
  "surahName": "Kâfirûn Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "ḳul yâ eyyühe-lkâfirûn."
    },
    {
      "ayahNumber": "2",
      "ayahText": "lâ a`büdü mâ ta`büdûn."
    },
    {
      "ayahNumber": "3",
      "ayahText": "velâ entüm `âbidûne mâ a`büd."
    },
    {
      "ayahNumber": "4",
      "ayahText": "velâ ene `âbidüm mâ `abettüm."
    },
    {
      "ayahNumber": "5",
      "ayahText": "velâ entüm `âbidûne mâ a`büd."
    },
    {
      "ayahNumber": "6",
      "ayahText": "leküm dînüküm veliye dîn."
    }
  ]
}