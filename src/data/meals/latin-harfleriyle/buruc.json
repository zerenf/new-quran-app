{
  "surahNumber": "85",
  "surahName": "Bürûc Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "vessemâi ẕâti-lbürûc."
    },
    {
      "ayahNumber": "2",
      "ayahText": "velyevmi-lmev`ûd."
    },
    {
      "ayahNumber": "3",
      "ayahText": "veşâhidiv vemeşhûd."
    },
    {
      "ayahNumber": "4",
      "ayahText": "ḳutile aṣḥâbü-l'uḫdûd."
    },
    {
      "ayahNumber": "5",
      "ayahText": "ennâri ẕâti-lveḳûd."
    },
    {
      "ayahNumber": "6",
      "ayahText": "iẕ hüm `aleyhâ ḳu`ûd."
    },
    {
      "ayahNumber": "7",
      "ayahText": "vehüm `alâ mâ yef`alûne bilmü'minîne şühûd."
    },
    {
      "ayahNumber": "8",
      "ayahText": "vemâ neḳamû minhüm illâ ey yü'minû billâhi-l`azîzi-lḥamîd."
    },
    {
      "ayahNumber": "9",
      "ayahText": "elleẕî lehû mülkü-ssemâvâti vel'arḍ. vellâhü `alâ külli şey'in şehîd."
    },
    {
      "ayahNumber": "10",
      "ayahText": "inne-lleẕîne fetenü-lmü'minîne velmü'minâti ŝümme lem yetûbû felehüm `aẕâbü cehenneme velehüm `aẕâbü-lḥarîḳ."
    },
    {
      "ayahNumber": "11",
      "ayahText": "inne-lleẕîne âmenû ve`amilu-ṣṣâliḥâti lehüm cennâtün tecrî min taḥtihe-l'enhâr. ẕâlike-lfevzü-lkebîr."
    },
    {
      "ayahNumber": "12",
      "ayahText": "inne baṭşe rabbike leşedîd."
    },
    {
      "ayahNumber": "13",
      "ayahText": "innehû hüve yübdiü veyü`îd."
    },
    {
      "ayahNumber": "14",
      "ayahText": "vehüve-lgafûru-lvedûd."
    },
    {
      "ayahNumber": "15",
      "ayahText": "ẕü-l`arşi-lmecîd."
    },
    {
      "ayahNumber": "16",
      "ayahText": "fa``âlül limâ yürîd."
    },
    {
      "ayahNumber": "17",
      "ayahText": "hel etâke ḥadîŝü-lcünûd."
    },
    {
      "ayahNumber": "18",
      "ayahText": "fir`avne veŝemûd."
    },
    {
      "ayahNumber": "19",
      "ayahText": "beli-lleẕîne keferû fî tekẕîb."
    },
    {
      "ayahNumber": "20",
      "ayahText": "vellâhü miv verâihim müḥîṭ."
    },
    {
      "ayahNumber": "21",
      "ayahText": "bel hüve ḳur'ânüm mecîd."
    },
    {
      "ayahNumber": "22",
      "ayahText": "fî levḥim maḥfûż."
    }
  ]
}