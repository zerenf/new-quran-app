{
  "necm": {
    "surahNumber": "53",
    "surahNameTr": "Necm Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "vennecmi iẕâ hevâ."
      },
      {
        "ayahNumber": "2",
        "ayahText": "mâ ḍalle ṣâḥibüküm vemâ gavâ."
      },
      {
        "ayahNumber": "3",
        "ayahText": "vemâ yenṭiḳu `ani-lhevâ."
      },
      {
        "ayahNumber": "4",
        "ayahText": "in hüve illâ vaḥyüy yûḥâ."
      },
      {
        "ayahNumber": "5",
        "ayahText": "`allemehû şedîdü-lḳuvâ."
      },
      {
        "ayahNumber": "6",
        "ayahText": "ẕû mirrah. festevâ."
      },
      {
        "ayahNumber": "7",
        "ayahText": "vehüve bil'üfüḳi-l'a`lâ."
      },
      {
        "ayahNumber": "8",
        "ayahText": "ŝümme denâ fetedellâ."
      },
      {
        "ayahNumber": "9",
        "ayahText": "fekâne ḳâbe ḳavseyni ev ednâ."
      },
      {
        "ayahNumber": "10",
        "ayahText": "feevḥâ ilâ `abdihî mâ evḥâ."
      },
      {
        "ayahNumber": "11",
        "ayahText": "mâ keẕebe-lfüâdü mâ raâ."
      },
      {
        "ayahNumber": "12",
        "ayahText": "efetümârûnehû `alâ mâ yerâ."
      },
      {
        "ayahNumber": "13",
        "ayahText": "veleḳad raâhü nezleten uḫrâ."
      },
      {
        "ayahNumber": "14",
        "ayahText": "`inde sidrati-lmüntehâ."
      },
      {
        "ayahNumber": "15",
        "ayahText": "`indehâ cennetü-lme'vâ."
      },
      {
        "ayahNumber": "16",
        "ayahText": "iẕ yagşe-ssidrate mâ yagşâ."
      },
      {
        "ayahNumber": "17",
        "ayahText": "mâ zâga-lbeṣaru vemâ ṭagâ."
      },
      {
        "ayahNumber": "18",
        "ayahText": "leḳad raâ min âyâti rabbihi-lkübrâ."
      },
      {
        "ayahNumber": "19",
        "ayahText": "eferaeytümü-llâte vel`uzzâ."
      },
      {
        "ayahNumber": "20",
        "ayahText": "vemenâte-ŝŝâliŝete-l'uḫrâ."
      },
      {
        "ayahNumber": "21",
        "ayahText": "elekümü-ẕẕekeru velehü-l'ünŝâ."
      },
      {
        "ayahNumber": "22",
        "ayahText": "tilke iẕen ḳismetün ḍîzâ."
      },
      {
        "ayahNumber": "23",
        "ayahText": "in hiye illâ esmâün semmeytümûhâ entüm veâbâüküm mâ enzele-llâhü bihâ min sülṭân. iy yettebi`ûne ille-żżanne vemâ tehve-l'enfüs. veleḳad câehüm mir rabbihimü-lhüdâ."
      },
      {
        "ayahNumber": "24",
        "ayahText": "em lil'insâni mâ temennâ."
      },
      {
        "ayahNumber": "25",
        "ayahText": "felillâhi-l'âḫiratü vel'ûlâ."
      },
      {
        "ayahNumber": "26",
        "ayahText": "vekem mim melekin fi-ssemâvâti lâ tugnî şefâ`atühüm şey'en illâ mim ba`di ey ye'ẕene-llâhü limey yeşâü veyerḍâ."
      },
      {
        "ayahNumber": "27",
        "ayahText": "inne-lleẕîne lâ yü'minûne bil'âḫirati leyüsemmûne-lmelâikete tesmiyete-l'ünŝâ."
      },
      {
        "ayahNumber": "28",
        "ayahText": "vemâ lehüm bihî min `ilm. iy yettebi`ûne ille-żżanne. veinne-żżanne lâ yugnî mine-lḥaḳḳi şey'â."
      },
      {
        "ayahNumber": "29",
        "ayahText": "fea`riḍ `am men tevellâ `an ẕikrinâ velem yürid ille-lḥayâte-ddünyâ."
      },
      {
        "ayahNumber": "30",
        "ayahText": "ẕâlike mebleguhüm mine-l`ilm. inne rabbeke hüve a`lemü bimen ḍalle `an sebîlihî vehüve a`lemü bimeni-htedâ."
      },
      {
        "ayahNumber": "31",
        "ayahText": "velillâhi mâ fi-ssemâvâti vemâ fi-l'arḍi liyecziye-lleẕîne esâü bimâ `amilû veyecziye-lleẕîne aḥsenû bilḥusnâ."
      },
      {
        "ayahNumber": "32",
        "ayahText": "elleẕîne yectenibûne kebâira-l'iŝmi velfevâḥişe ille-llemem. inne rabbeke vâsi`u-lmagfirah. hüve a`lemü biküm iẕ enşeeküm mine-l'arḍi veiẕ entüm ecinnetün fî büṭûni ümmehâtiküm. felâ tüzekkû enfüseküm. hüve a`lemü bimeni-tteḳâ."
      },
      {
        "ayahNumber": "33",
        "ayahText": "eferaeyte-lleẕî tevellâ."
      },
      {
        "ayahNumber": "34",
        "ayahText": "vea`ṭâ ḳalîlev veekdâ."
      },
      {
        "ayahNumber": "35",
        "ayahText": "e`indehû `ilmü-lgaybi fehüve yerâ."
      },
      {
        "ayahNumber": "36",
        "ayahText": "em lem yünebbe' bimâ fî ṣuḥufi mûsâ."
      },
      {
        "ayahNumber": "37",
        "ayahText": "veibrâhime-lleẕî veffâ."
      },
      {
        "ayahNumber": "38",
        "ayahText": "ellâ teziru vâziratüv vizra uḫrâ."
      },
      {
        "ayahNumber": "39",
        "ayahText": "veel leyse lil'insâni illâ mâ se`â."
      },
      {
        "ayahNumber": "40",
        "ayahText": "veenne sa`yehû sevfe yürâ."
      },
      {
        "ayahNumber": "41",
        "ayahText": "ŝümme yüczâhü-lcezâe-l'evfâ."
      },
      {
        "ayahNumber": "42",
        "ayahText": "veenne ilâ rabbike-lmüntehâ."
      },
      {
        "ayahNumber": "43",
        "ayahText": "veennehû hüve aḍḥake veebkâ."
      },
      {
        "ayahNumber": "44",
        "ayahText": "veennehû hüve emâte veaḥyâ."
      },
      {
        "ayahNumber": "45",
        "ayahText": "veennehû ḫaleḳa-zzevceyni-ẕẕekera vel'ünŝâ."
      },
      {
        "ayahNumber": "46",
        "ayahText": "min nuṭfetin iẕâ tümnâ."
      },
      {
        "ayahNumber": "47",
        "ayahText": "veenne `aleyhi-nneş'ete-l'uḫrâ."
      },
      {
        "ayahNumber": "48",
        "ayahText": "veennehû hüve agnâ veaḳnâ."
      },
      {
        "ayahNumber": "49",
        "ayahText": "veennehû hüve rabbü-şşi`râ."
      },
      {
        "ayahNumber": "50",
        "ayahText": "veennehû ehleke `âden-l'ûlâ."
      },
      {
        "ayahNumber": "51",
        "ayahText": "veŝemûde femâ ebḳâ."
      },
      {
        "ayahNumber": "52",
        "ayahText": "veḳavme nûḥim min ḳabl. innehüm kânû hüm ażleme veaṭgâ."
      },
      {
        "ayahNumber": "53",
        "ayahText": "velmü'tefikete ehvâ."
      },
      {
        "ayahNumber": "54",
        "ayahText": "fegaşşâhâ mâ gaşşâ."
      },
      {
        "ayahNumber": "55",
        "ayahText": "febieyyi âlâi rabbike tetemârâ."
      },
      {
        "ayahNumber": "56",
        "ayahText": "hâẕâ neẕîrum mine-nnüẕüri-l'ûlâ."
      },
      {
        "ayahNumber": "57",
        "ayahText": "ezifeti-l'âzifeh."
      },
      {
        "ayahNumber": "58",
        "ayahText": "leyse lehâ min dûni-llâhi kâşifeh."
      },
      {
        "ayahNumber": "59",
        "ayahText": "efemin hâẕe-lḥadîŝi ta`cebûn."
      },
      {
        "ayahNumber": "60",
        "ayahText": "vetaḍḥakûne velâ tebkûn."
      },
      {
        "ayahNumber": "61",
        "ayahText": "veentüm sâmidûn."
      },
      {
        "ayahNumber": "62",
        "ayahText": "fescüdû lillâhi va`büdû."
      }
    ]
  }
}