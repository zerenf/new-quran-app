{
  "surahNumber": "1",
  "surahName": "Fâtiha Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "bismi-llâhi-rraḥmâni-rraḥîm."
    },
    {
      "ayahNumber": "2",
      "ayahText": "elḥamdü lillâhi rabbi-l`âlemîn."
    },
    {
      "ayahNumber": "3",
      "ayahText": "erraḥmâni-rraḥîm."
    },
    {
      "ayahNumber": "4",
      "ayahText": "mâliki yevmi-ddîn."
    },
    {
      "ayahNumber": "5",
      "ayahText": "iyyâke na`büdü veiyyâke neste`în."
    },
    {
      "ayahNumber": "6",
      "ayahText": "ihdine-ṣṣirâṭa-lmüsteḳîm."
    },
    {
      "ayahNumber": "7",
      "ayahText": "ṣirâṭa-lleẕîne en`amte `aleyhim gayri-lmagḍûbi `aleyhim vele-ḍḍâllîn."
    }
  ]
}