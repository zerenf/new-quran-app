{
  "surahNumber": "70",
  "surahName": "Meâric Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "seele sâilüm bi`aẕâbiv vâḳi`."
    },
    {
      "ayahNumber": "2",
      "ayahText": "lilkâfirîne leyse lehû dâfi`."
    },
    {
      "ayahNumber": "3",
      "ayahText": "mine-llâhi ẕi-lme`âric."
    },
    {
      "ayahNumber": "4",
      "ayahText": "ta`rucü-lmelâiketü verrûḥu ileyhi fî yevmin kâne miḳdâruhû ḫamsîne elfe seneh."
    },
    {
      "ayahNumber": "5",
      "ayahText": "faṣbir ṣabran cemîlâ."
    },
    {
      "ayahNumber": "6",
      "ayahText": "innehüm yeravnehû be`îdâ."
    },
    {
      "ayahNumber": "7",
      "ayahText": "venerâhü ḳarîbâ."
    },
    {
      "ayahNumber": "8",
      "ayahText": "yevme tekûnü-ssemâü kelmühl."
    },
    {
      "ayahNumber": "9",
      "ayahText": "vetekûnü-lcibâlü kel`ihn."
    },
    {
      "ayahNumber": "10",
      "ayahText": "velâ yes'elü ḥamîmün ḥamîmâ."
    },
    {
      "ayahNumber": "11",
      "ayahText": "yübeṣṣarûnehüm. yeveddü-lmücrimü lev yeftedî min `aẕâbi yevmiiẕim bibenîh."
    },
    {
      "ayahNumber": "12",
      "ayahText": "veṣâḥibetihî veeḫîh."
    },
    {
      "ayahNumber": "13",
      "ayahText": "vefeṣîletihi-lletî tü'vîh."
    },
    {
      "ayahNumber": "14",
      "ayahText": "vemen fi-l'arḍi cemî`an ŝümme yüncîh."
    },
    {
      "ayahNumber": "15",
      "ayahText": "kellâ. innehâ leżâ."
    },
    {
      "ayahNumber": "16",
      "ayahText": "nezzâ`atel lişşevâ."
    },
    {
      "ayahNumber": "17",
      "ayahText": "ted`û men edbera vetevellâ."
    },
    {
      "ayahNumber": "18",
      "ayahText": "veceme`a feev`â."
    },
    {
      "ayahNumber": "19",
      "ayahText": "inne-l'insâne ḫuliḳa helû`â."
    },
    {
      "ayahNumber": "20",
      "ayahText": "iẕâ messehü-şşerru cezû`â."
    },
    {
      "ayahNumber": "21",
      "ayahText": "veiẕâ messehü-lḫayru menû`â."
    },
    {
      "ayahNumber": "22",
      "ayahText": "ille-lmüṣallîn."
    },
    {
      "ayahNumber": "23",
      "ayahText": "elleẕîne hüm `alâ ṣalâtihim dâimûn."
    },
    {
      "ayahNumber": "24",
      "ayahText": "velleẕîne fî emvâlihim ḥaḳḳum ma`lûm."
    },
    {
      "ayahNumber": "25",
      "ayahText": "lissâili velmaḥrûm."
    },
    {
      "ayahNumber": "26",
      "ayahText": "velleẕîne yüṣaddiḳûne biyevmi-ddîn."
    },
    {
      "ayahNumber": "27",
      "ayahText": "velleẕîne hüm min `aẕâbi rabbihim müşfiḳûn."
    },
    {
      "ayahNumber": "28",
      "ayahText": "inne `aẕâbe rabbihim gayru me'mûn."
    },
    {
      "ayahNumber": "29",
      "ayahText": "velleẕîne hüm lifürûcihim ḥâfiżûn."
    },
    {
      "ayahNumber": "30",
      "ayahText": "illâ `alâ ezvâcihim ev mâ meleket eymânühüm feinnehüm gayru melûmîn."
    },
    {
      "ayahNumber": "31",
      "ayahText": "femeni-btegâ verâe ẕâlike feülâike hümü-l`âdûn."
    },
    {
      "ayahNumber": "32",
      "ayahText": "velleẕîne hüm liemânâtihim ve`ahdihim râ`ûn."
    },
    {
      "ayahNumber": "33",
      "ayahText": "velleẕîne hüm bişehâdetihim ḳâimûn."
    },
    {
      "ayahNumber": "34",
      "ayahText": "velleẕîne hüm `alâ ṣalâtihim yüḥâfiżûn."
    },
    {
      "ayahNumber": "35",
      "ayahText": "ülâike fî cennâtim mükramûn."
    },
    {
      "ayahNumber": "36",
      "ayahText": "femâ lilleẕîne keferû ḳibeleke mühti`în."
    },
    {
      "ayahNumber": "37",
      "ayahText": "`ani-lyemîni ve`ani-şşimâli `izîn."
    },
    {
      "ayahNumber": "38",
      "ayahText": "eyaṭme`u küllü-mriim minhüm ey yüdḫale cennete ne`îm."
    },
    {
      "ayahNumber": "39",
      "ayahText": "kellâ. innâ ḫalaḳnâhüm mimmâ ya`lemûn."
    },
    {
      "ayahNumber": "40",
      "ayahText": "felâ uḳsimü birabbi-lmeşâriḳi velmegâribi innâ leḳâdirûn."
    },
    {
      "ayahNumber": "41",
      "ayahText": "`alâ en nübeddile ḫayram minhüm vemâ naḥnü bimesbûḳîn."
    },
    {
      "ayahNumber": "42",
      "ayahText": "feẕerhüm yeḫûḍû veyel`abû ḥattâ yülâḳû yevmehümü-lleẕî yû`adûn."
    },
    {
      "ayahNumber": "43",
      "ayahText": "yevme yaḫrucûne mine-l'ecdâŝi sirâ`an keennehüm ilâ nüṣubiy yûfiḍûn."
    },
    {
      "ayahNumber": "44",
      "ayahText": "ḫâşi`aten ebṣâruhüm terheḳuhüm ẕilleh. ẕâlike-lyevmü-lleẕî kânû yû`adûn."
    }
  ]
}