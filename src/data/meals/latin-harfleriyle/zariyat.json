{
  "surahNumber": "51",
  "surahName": "Zâriyât Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "veẕẕâriyâti ẕervâ."
    },
    {
      "ayahNumber": "2",
      "ayahText": "felḥâmilâti viḳrâ."
    },
    {
      "ayahNumber": "3",
      "ayahText": "felcâriyâti yüsrâ."
    },
    {
      "ayahNumber": "4",
      "ayahText": "felmüḳassimâti emrâ."
    },
    {
      "ayahNumber": "5",
      "ayahText": "innemâ tû`adûne leṣâdiḳ."
    },
    {
      "ayahNumber": "6",
      "ayahText": "veinne-ddîne levâḳi`."
    },
    {
      "ayahNumber": "7",
      "ayahText": "vessemâi ẕâti-lḥubük."
    },
    {
      "ayahNumber": "8",
      "ayahText": "inneküm lefî ḳavlim muḫtelif."
    },
    {
      "ayahNumber": "9",
      "ayahText": "yü'fekü `anhü men üfik."
    },
    {
      "ayahNumber": "10",
      "ayahText": "ḳutile-lḫarrâṣûn."
    },
    {
      "ayahNumber": "11",
      "ayahText": "elleẕîne hüm fî gamratin sâhûn."
    },
    {
      "ayahNumber": "12",
      "ayahText": "yes'elûne eyyâne yevmü-ddîn."
    },
    {
      "ayahNumber": "13",
      "ayahText": "yevme hüm `ale-nnâri yüftenûn."
    },
    {
      "ayahNumber": "14",
      "ayahText": "ẕûḳû fitneteküm. hâẕe-lleẕî küntüm bihî testa`cilûn."
    },
    {
      "ayahNumber": "15",
      "ayahText": "inne-lmütteḳîne fî cennâtiv ve`uyûn."
    },
    {
      "ayahNumber": "16",
      "ayahText": "âḫiẕîne mâ âtâhüm rabbühüm. innehüm kânû ḳable ẕâlike muḥsinîn."
    },
    {
      "ayahNumber": "17",
      "ayahText": "kânû ḳalîlem mine-lleyli mâ yehce`ûn."
    },
    {
      "ayahNumber": "18",
      "ayahText": "vebil'esḥâri hüm yestagfirûn."
    },
    {
      "ayahNumber": "19",
      "ayahText": "vefî emvâlihim ḥaḳḳul lissâili velmaḥrûm."
    },
    {
      "ayahNumber": "20",
      "ayahText": "vefi-l'arḍi âyâtül lilmûḳinîn."
    },
    {
      "ayahNumber": "21",
      "ayahText": "vefî enfüsiküm. efelâ tübṣirûn."
    },
    {
      "ayahNumber": "22",
      "ayahText": "vefi-ssemâi rizḳuküm vemâ tû`adûn."
    },
    {
      "ayahNumber": "23",
      "ayahText": "feverabbi-ssemâi vel'arḍi innehû leḥaḳḳum miŝle mâ enneküm tenṭiḳûn."
    },
    {
      "ayahNumber": "24",
      "ayahText": "hel etâke ḥadîŝü ḍayfi ibrâhîme-lmükramîn."
    },
    {
      "ayahNumber": "25",
      "ayahText": "iẕ deḫalû `aleyhi feḳâlû selâmâ. ḳâle selâm. ḳavmüm münkerûn."
    },
    {
      "ayahNumber": "26",
      "ayahText": "ferâga ilâ ehlihî fecâe bi`iclin semîn."
    },
    {
      "ayahNumber": "27",
      "ayahText": "feḳarrabehû ileyhim ḳâle elâ te'külûn."
    },
    {
      "ayahNumber": "28",
      "ayahText": "feevcese minhüm ḫîfeh. ḳâlû lâ teḫaf. vebeşşerûhü bigulâmin `alîm."
    },
    {
      "ayahNumber": "29",
      "ayahText": "feaḳbeleti-mraetühû fî ṣarratin feṣakket vechehâ veḳâlet `acûzün `aḳîm."
    },
    {
      "ayahNumber": "30",
      "ayahText": "ḳâlû keẕâliki ḳâle rabbük. innehû hüve-lḥakîmü-l`alîm."
    },
    {
      "ayahNumber": "31",
      "ayahText": "ḳâle femâ ḫaṭbüküm eyyühe-lmürselûn."
    },
    {
      "ayahNumber": "32",
      "ayahText": "ḳâlû innâ ürsilnâ ilâ ḳavmim mücrimîn."
    },
    {
      "ayahNumber": "33",
      "ayahText": "linürsile `aleyhim ḥicâratem min ṭîn."
    },
    {
      "ayahNumber": "34",
      "ayahText": "müsevvemeten `inde rabbike lilmüsrifîn."
    },
    {
      "ayahNumber": "35",
      "ayahText": "feaḫracnâ men kâne fîhâ mine-lmü'minîn."
    },
    {
      "ayahNumber": "36",
      "ayahText": "femâ vecednâ fîhâ gayra beytim mine-lmüslimîn."
    },
    {
      "ayahNumber": "37",
      "ayahText": "veteraknâ fîhâ âyetel lilleẕîne yeḫâfûne-l`aẕâbe-l'elîm."
    },
    {
      "ayahNumber": "38",
      "ayahText": "vefî mûsâ iẕ erselnâhü ilâ fir`avne bisülṭânim mübîn."
    },
    {
      "ayahNumber": "39",
      "ayahText": "fetevellâ biruknihî veḳâle sâḥirun ev mecnûn."
    },
    {
      "ayahNumber": "40",
      "ayahText": "feeḫaẕnâhü vecünûdehû fenebeẕnâhüm fi-lyemmi vehüve mülîm."
    },
    {
      "ayahNumber": "41",
      "ayahText": "vefî `âdin iẕ erselnâ `aleyhimü-rrîḥa-l`aḳîm."
    },
    {
      "ayahNumber": "42",
      "ayahText": "mâ teẕeru min şey'in etet `aleyhi illâ ce`alethü kelramîm."
    },
    {
      "ayahNumber": "43",
      "ayahText": "vefî ŝemûde iẕ ḳîle lehüm temette`û ḥattâ ḥîn."
    },
    {
      "ayahNumber": "44",
      "ayahText": "fe`atev `an emri rabbihim feeḫaẕethümu-ṣṣâ`iḳatü vehüm yenżurûn."
    },
    {
      "ayahNumber": "45",
      "ayahText": "feme-steṭâ`û min ḳiyâmiv vemâ kânû münteṣirîn."
    },
    {
      "ayahNumber": "46",
      "ayahText": "veḳavme nûḥim min ḳabl. innehüm kânû ḳavmen fâsiḳîn."
    },
    {
      "ayahNumber": "47",
      "ayahText": "vessemâe beneynâhâ bieydiv veinnâ lemûsi`ûn."
    },
    {
      "ayahNumber": "48",
      "ayahText": "vel'arḍa feraşnâhâ feni`me-lmâhidûn."
    },
    {
      "ayahNumber": "49",
      "ayahText": "vemin külli şey'in ḫalaḳnâ zevceyni le`alleküm teẕekkerûn."
    },
    {
      "ayahNumber": "50",
      "ayahText": "fefirrû ile-llâh. innî leküm minhü neẕîrum mübîn."
    },
    {
      "ayahNumber": "51",
      "ayahText": "velâ tec`alû me`a-llâhi ilâhen âḫar. innî leküm minhü neẕîrum mübîn."
    },
    {
      "ayahNumber": "52",
      "ayahText": "keẕâlike mâ ete-lleẕîne min ḳablihim mir rasûlin illâ ḳâlû sâḥirun ev mecnûn."
    },
    {
      "ayahNumber": "53",
      "ayahText": "etevâṣav bih. bel hüm ḳavmün ṭâgûn."
    },
    {
      "ayahNumber": "54",
      "ayahText": "fetevelle `anhüm femâ ente bimelûm."
    },
    {
      "ayahNumber": "55",
      "ayahText": "veẕekkir feinne-ẕẕikrâ tenfe`u-lmü'minîn."
    },
    {
      "ayahNumber": "56",
      "ayahText": "vemâ ḫalaḳtü-lcinne vel'inse illâ liya`büdûn."
    },
    {
      "ayahNumber": "57",
      "ayahText": "mâ ürîdü minhüm mir rizḳiv vemâ ürîdü ey yuṭ`imûn."
    },
    {
      "ayahNumber": "58",
      "ayahText": "inne-llâhe hüve-rrazzâḳu ẕü-lḳuvveti-lmetîn."
    },
    {
      "ayahNumber": "59",
      "ayahText": "feinne lilleẕîne żalemû ẕenûbem miŝle ẕenûbi aṣḥâbihim felâ yesta`cilûn."
    },
    {
      "ayahNumber": "60",
      "ayahText": "feveylül lilleẕîne keferû miy yevmihimü-lleẕî yû`adûn."
    }
  ]
}