{
  "surahNumber": "96",
  "surahName": "Alak Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "iḳra' bismi rabbike-lleẕî ḫaleḳ."
    },
    {
      "ayahNumber": "2",
      "ayahText": "ḫaleḳa-l'insâne min `alaḳ."
    },
    {
      "ayahNumber": "3",
      "ayahText": "iḳra' verabbüke-l'ekram."
    },
    {
      "ayahNumber": "4",
      "ayahText": "elleẕî `alleme bilḳalem."
    },
    {
      "ayahNumber": "5",
      "ayahText": "`alleme-l'insâne mâ lem ya`lem."
    },
    {
      "ayahNumber": "6",
      "ayahText": "kellâ inne-l'insâne leyaṭgâ."
    },
    {
      "ayahNumber": "7",
      "ayahText": "er raâhü-stagnâ."
    },
    {
      "ayahNumber": "8",
      "ayahText": "inne ilâ rabbike-rruc`â."
    },
    {
      "ayahNumber": "9",
      "ayahText": "era'eyte-lleẕî yenhâ."
    },
    {
      "ayahNumber": "10",
      "ayahText": "`abden iẕâ ṣallâ."
    },
    {
      "ayahNumber": "11",
      "ayahText": "era'eyte in kâne `ale-lhüdâ."
    },
    {
      "ayahNumber": "12",
      "ayahText": "ev emera bittaḳvâ."
    },
    {
      "ayahNumber": "13",
      "ayahText": "era'eyte in keẕẕebe vetevellâ."
    },
    {
      "ayahNumber": "14",
      "ayahText": "elem ya`lem bienne-llâhe yerâ."
    },
    {
      "ayahNumber": "15",
      "ayahText": "kellâ leil lem yentehi lenesfe`am binnâṣiyeh."
    },
    {
      "ayahNumber": "16",
      "ayahText": "nâṣiyetin kâẕibetin ḫâṭieh."
    },
    {
      "ayahNumber": "17",
      "ayahText": "felyed`u nâdiyeh."
    },
    {
      "ayahNumber": "18",
      "ayahText": "sened`u-zzebâniyeh."
    },
    {
      "ayahNumber": "19",
      "ayahText": "kellâ. lâ tüṭi`hü vescüd vaḳterib."
    }
  ]
}