{
  "surahNumber": "54",
  "surahName": "Kamer Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "iḳterabeti-ssâ`atü venşeḳḳa-lḳamer."
    },
    {
      "ayahNumber": "2",
      "ayahText": "veiy yerav âyetey yü`riḍû veyeḳûlû siḥrum müstemirr."
    },
    {
      "ayahNumber": "3",
      "ayahText": "vekeẕẕebû vettebe`û ehvâehüm veküllü emrim müsteḳirr."
    },
    {
      "ayahNumber": "4",
      "ayahText": "veleḳad câehüm mine-l'embâi mâ fîhi müzdecer."
    },
    {
      "ayahNumber": "5",
      "ayahText": "ḥikmetüm bâligatün femâ tugni-nnüẕür."
    },
    {
      "ayahNumber": "6",
      "ayahText": "fetevelle `anhüm. yevme yed`u-ddâ`i ilâ şey'in nükür."
    },
    {
      "ayahNumber": "7",
      "ayahText": "ḫuşşe`an ebṣâruhüm yaḫrucûne mine-l'ecdâŝi keennehüm cerâdüm münteşir."
    },
    {
      "ayahNumber": "8",
      "ayahText": "mühti`îne ile-ddâ`. yeḳûlü-lkâfirûne hâẕâ yevmün `asir."
    },
    {
      "ayahNumber": "9",
      "ayahText": "keẕẕebet ḳablehüm ḳavmü nûḥin fekeẕẕebû `abdenâ veḳâlû mecnûnüv vezdücira."
    },
    {
      "ayahNumber": "10",
      "ayahText": "fede`â rabbehû ennî maglûbün fenteṣir."
    },
    {
      "ayahNumber": "11",
      "ayahText": "fefetaḥnâ ebvâbe-ssemâi bimâim münhemir."
    },
    {
      "ayahNumber": "12",
      "ayahText": "vefeccerne-l'arḍa `uyûnen felteḳe-lmâü `alâ emrin ḳad ḳudir."
    },
    {
      "ayahNumber": "13",
      "ayahText": "veḥamelnâhü `alâ ẕâti elvâḥiv vedüsür."
    },
    {
      "ayahNumber": "14",
      "ayahText": "tecrî bia`yüninâ. cezâel limen kâne küfira."
    },
    {
      "ayahNumber": "15",
      "ayahText": "veleḳat teraknâhâ âyeten fehel mim müddekir."
    },
    {
      "ayahNumber": "16",
      "ayahText": "fekeyfe kâne `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "17",
      "ayahText": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir."
    },
    {
      "ayahNumber": "18",
      "ayahText": "keẕẕebet `âdün fekeyfe kâne `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "19",
      "ayahText": "innâ erselnâ `aleyhim rîḥan ṣarṣaran fî yevmi naḥsim müstemirr."
    },
    {
      "ayahNumber": "20",
      "ayahText": "tenzi`u-nnâse keennehüm a`câzü naḫlim münḳa`ir."
    },
    {
      "ayahNumber": "21",
      "ayahText": "fekeyfe kâne `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "22",
      "ayahText": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir."
    },
    {
      "ayahNumber": "23",
      "ayahText": "keẕẕebet ŝemûdü binnüẕür."
    },
    {
      "ayahNumber": "24",
      "ayahText": "feḳâlû ebeşeram minnâ vâḥiden nettebi`uhû innâ iẕel lefî ḍalâliv vesü`ur."
    },
    {
      "ayahNumber": "25",
      "ayahText": "eülḳiye-ẕẕikru `aleyhi mim beyninâ bel hüve keẕẕâbün eşir."
    },
    {
      "ayahNumber": "26",
      "ayahText": "seya`lemûne gadem meni-lkeẕẕâbü-l'eşir."
    },
    {
      "ayahNumber": "27",
      "ayahText": "innâ mürsilü-nnâḳati fitnetel lehüm ferteḳibhüm vaṣṭabir."
    },
    {
      "ayahNumber": "28",
      "ayahText": "venebbi'hüm enne-lmâe ḳismetüm beynehüm. küllü şirbim muḥteḍar."
    },
    {
      "ayahNumber": "29",
      "ayahText": "fenâdev ṣâḥibehüm fete`âṭâ fe`aḳara."
    },
    {
      "ayahNumber": "30",
      "ayahText": "fekeyfe kâne `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "31",
      "ayahText": "innâ erselnâ `aleyhim ṣayḥatev vâḥideten fekânû keheşîmi-lmuḥteżir."
    },
    {
      "ayahNumber": "32",
      "ayahText": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir."
    },
    {
      "ayahNumber": "33",
      "ayahText": "keẕẕebet ḳavmü lûṭim binnüẕür."
    },
    {
      "ayahNumber": "34",
      "ayahText": "innâ erselnâ `aleyhim ḥâṣiben illâ âle lûṭ. necceynâhüm biseḥar."
    },
    {
      "ayahNumber": "35",
      "ayahText": "ni`metem min `indinâ. keẕâlike neczî men şekera."
    },
    {
      "ayahNumber": "36",
      "ayahText": "veleḳad enẕerahüm baṭşetenâ fetemârav binnüẕür."
    },
    {
      "ayahNumber": "37",
      "ayahText": "veleḳad râvedûhü `an ḍayfihî feṭamesnâ a`yünehüm feẕûḳû `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "38",
      "ayahText": "veleḳad ṣabbeḥahüm bükraten `aẕâbüm müsteḳirr."
    },
    {
      "ayahNumber": "39",
      "ayahText": "feẕûḳû `aẕâbî venüẕür."
    },
    {
      "ayahNumber": "40",
      "ayahText": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir."
    },
    {
      "ayahNumber": "41",
      "ayahText": "veleḳad câe âle fir`avne-nnüẕür."
    },
    {
      "ayahNumber": "42",
      "ayahText": "keẕẕebû biâyâtinâ küllihâ feeḫaẕnâhüm aḫẕe `azîzim muḳtedir."
    },
    {
      "ayahNumber": "43",
      "ayahText": "eküffâruküm ḫayrum min ülâiküm em leküm berâetün fi-zzübür."
    },
    {
      "ayahNumber": "44",
      "ayahText": "em yeḳûlûne naḥnü cemî`um münteṣir."
    },
    {
      "ayahNumber": "45",
      "ayahText": "seyühzemü-lcem`u veyüvellûne-ddübüra."
    },
    {
      "ayahNumber": "46",
      "ayahText": "beli-ssâ`atü mev`idühüm vessâ`atü edhâ veemerr."
    },
    {
      "ayahNumber": "47",
      "ayahText": "inne-lmücrimîne fî ḍalâliv vesü`ur."
    },
    {
      "ayahNumber": "48",
      "ayahText": "yevme yüsḥabûne fi-nnâri `alâ vucûhihim. ẕûḳû messe seḳara."
    },
    {
      "ayahNumber": "49",
      "ayahText": "innâ külle şey'in ḫalaḳnâhü biḳader."
    },
    {
      "ayahNumber": "50",
      "ayahText": "vemâ emrunâ illâ vâḥidetün kelemḥim bilbeṣar."
    },
    {
      "ayahNumber": "51",
      "ayahText": "veleḳad ehleknâ eşyâ`aküm fehel mim müddekir."
    },
    {
      "ayahNumber": "52",
      "ayahText": "veküllü şey'in fe`alûhü fi-zzübür."
    },
    {
      "ayahNumber": "53",
      "ayahText": "veküllü ṣagîriv vekebîrim müsteṭar."
    },
    {
      "ayahNumber": "54",
      "ayahText": "inne-lmütteḳîne fî cennâtiv veneher."
    },
    {
      "ayahNumber": "55",
      "ayahText": "fî maḳ`adi ṣidḳin `inde melîkim muḳtedir."
    }
  ]
}