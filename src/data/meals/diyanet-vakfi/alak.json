{
  "alak": {
    "surahNumber": "96",
    "surahNameTr": "Alak Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Yaratan Rabbinin adıyla oku!"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O, insanı bir aşılanmış yumurtadan yarattı."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Oku! Rabbin, en büyük kerem sahibidir."
      },
      {
        "ayahNumber": "4",
        "ayahText": "O Rab ki kalemle (yazmayı) öğretti."
      },
      {
        "ayahNumber": "5",
        "ayahText": "İnsana bilmedikleri şeyi öğretti."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Gerçek şu ki, insan azar."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Kendini kendine yeterli gördüğü için."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Kuşkusuz dönüş Rabbinedir."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Gördün mü şu men edeni,"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Namaz kılarken bir kulu (Peygamber'i namazdan)?"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gördün mü, ya o (Peygamber) doğru yolda olur,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Yahut takvayı emrediyorsa?"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Ne dersin o (meneden, Peygamber'i) yalanlıyor ve doğru yoldan yüz çeviriyorsa!"
      },
      {
        "ayahNumber": "14",
        "ayahText": "(Bu adam) Allah'ın, (yaptıklarını) gördüğünü bilmez mi!"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Hayır, hayır! Eğer vazgeçmezse, derhal onu alnından (perçeminden), yakalarız (cehenneme atarız)."
      },
      {
        "ayahNumber": "16",
        "ayahText": "O yalancı, günahkar alından (perçemden),"
      },
      {
        "ayahNumber": "17",
        "ayahText": "O, hemen gidip meclisini (kendi taraftarlarını) çağırsın."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Biz de zebanileri çağıracağız."
      },
      {
        "ayahNumber": "19",
        "ayahText": "Hayır! Ona uyma! Allah'a secde et ve (yalnızca O'na) yaklaş!"
      }
    ]
  }
}