{
  "nebe": {
    "surahNumber": "78",
    "surahNameTr": "Nebe' Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Birbirlerine neyi soruyorlar?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O büyük haberden mi?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "(İnanıp inanmamakta) ayrılığa düşmektedirler."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hayır! Anlayacaklar!"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Yine hayır! Onlar anlayacaklar!"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Biz yeryüzünü bir döşek, yapmadık mı?"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Dağları da birer kazık."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Sizi çifter çifter yarattık."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Uykunuzu bir dinlenme kıldık."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Geceyi bir örtü yaptık."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gündüzü de çalışıp kazanma zamanı kıldık."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Üstünüzde yedi kat sağlam göğü bina ettik."
      },
      {
        "ayahNumber": "13",
        "ayahText": "(Orada) alev alev yanan bir kandil yarattık."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Sıkışan bulutlardan şarıl şarıl akan sular indirdik."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Size tohumlar, bitkiler, yetiştirmek için"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ve ağaçları(birbirine) sarmaş dolaş bahçeler."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Şüphesiz hüküm günü vakit olarak belirlenmiştir."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Sur'a üflendiği gün, bölük bölük Allah'a gelirsiniz."
      },
      {
        "ayahNumber": "19",
        "ayahText": "Gökyüzü açılır ve orada pek çok kapılar oluşur;"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Dağlar yürütülür, serap haline gelir."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Şüphesiz, cehennem pusuda beklemektedir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Azgınların barınacağı yerdir (cehennem)."
      },
      {
        "ayahNumber": "23",
        "ayahText": "(Azgınlar) orada çağlar boyu kalacaklar,"
      },
      {
        "ayahNumber": "24",
        "ayahText": "Orada bir serinlik ya da (susuzluk gideren) bir içecek tatmazlar,"
      },
      {
        "ayahNumber": "25",
        "ayahText": "Kaynar su ve irin (tadarlar)."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Ancak (dünyada yaptıklarına) uygun karşılık olarak."
      },
      {
        "ayahNumber": "27",
        "ayahText": "Çünkü onlar hesap gününü (geleceğini) ummazlardı."
      },
      {
        "ayahNumber": "28",
        "ayahText": "Bizim ayetlerimizi yalanladıkça yalanlamışlardı."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Biz ise her şeyi bir kitapta sayıp yazmışızdır."
      },
      {
        "ayahNumber": "30",
        "ayahText": "Tadın! Bundan sonra yalnızca azabınızı arttıracağız."
      },
      {
        "ayahNumber": "31",
        "ayahText": "Şüphesiz takva sahipleri için de başarı ödülü vardır."
      },
      {
        "ayahNumber": "32",
        "ayahText": "Bahçeler, bağlar,"
      },
      {
        "ayahNumber": "33",
        "ayahText": "Göğüsleri tomurcuk gibi kabarmış yaşıt kızlar,"
      },
      {
        "ayahNumber": "34",
        "ayahText": "Ve içki dolu kase(ler)."
      },
      {
        "ayahNumber": "35",
        "ayahText": "Onlar orada ne boş bir lakırdı ne de yalan işitirler."
      },
      {
        "ayahNumber": "36",
        "ayahText": "Bunlar Rabbinin yeterli bir bağışı, mükafatıdır."
      },
      {
        "ayahNumber": "37",
        "ayahText": "O, göklerin, yerin ve ikisi arasında bulunanların Rabbidir. O, rahmandır. O gün insanlar O'na karşı konuşmaya yetkili değillerdir."
      },
      {
        "ayahNumber": "38",
        "ayahText": "Ruh (Cebrail) ve melekler saf saf olup durduğu gün, Rahman'ın izin verdiklerinden başkaları konuşmazlar; konuşan da doğruyu söyler."
      },
      {
        "ayahNumber": "39",
        "ayahText": "İşte o, kesin olarak gelecek gündür. O halde dileyen Rabbine varan bir yol tutsun."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Biz, yakın bir azap ile sizi uyardık. O gün kişi önceden yaptıklarına bakacak ve inkarcı kişi: \"Keşke toprak olsaydım!\" diyecektir."
      }
    ]
  }
}