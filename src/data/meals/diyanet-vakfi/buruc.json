{
  "surahNumber": "85",
  "surahName": "Bürûc Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Burçlara sahip gökyüzüne,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Geleceği bildirilmiş olan güne,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "(O günde) tanıklık edene ve edilene andolsun ki,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Kahroldu o hendeğin sahipleri,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "O çıralı ateşin,"
    },
    {
      "ayahNumber": "6",
      "ayahText": "Onlar (yakanlar) da başlarına oturmuşlar,"
    },
    {
      "ayahNumber": "7",
      "ayahText": "Müminlere yapmakta oldukları işkenceyi seyrediyorlardı."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Onlardan, sırf, aziz ve hamid olan Allah'a iman ettikleri için intikam aldılar."
    },
    {
      "ayahNumber": "9",
      "ayahText": "O Allah ki, göklerin ve yerin mülkü kendisine aittir, ve Allah her şeye şahittir."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Şüphesiz inanmış erkeklerle inanmış kadınlara işkence edip sonra tevbe de etmeyenlere cehennem azabı ve (orada) yanma cezası vardır."
    },
    {
      "ayahNumber": "11",
      "ayahText": "İman edip salih ameller işleyenlere ise, zemininden ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur."
    },
    {
      "ayahNumber": "12",
      "ayahText": "Şüphesiz Rabbinin yakalaması çok şiddetlidir."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Bilin ki O, (kainat yokken) ilk olarak yaratan, (ölümden sonra tekrar hayatı) geri getirendir."
    },
    {
      "ayahNumber": "14",
      "ayahText": "O, çok bağışlayan ve çok sevendir."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Şerefli Arş'ın sahibidir."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Dilediği şeyleri mutlaka yapandır."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Orduların, haberi sana geldi mi?"
    },
    {
      "ayahNumber": "18",
      "ayahText": "Yani Firavun ve Semud'un"
    },
    {
      "ayahNumber": "19",
      "ayahText": "Doğrusu inkarcılar (gerçeği) yalanlayıp dururlar."
    },
    {
      "ayahNumber": "20",
      "ayahText": "Allah onları arkalarından kuşatmıştır."
    },
    {
      "ayahNumber": "21",
      "ayahText": "Hayır o şerefli bir Kur'an'dır."
    },
    {
      "ayahNumber": "22",
      "ayahText": "Levh-i Mahfuz'dadır."
    }
  ]
}