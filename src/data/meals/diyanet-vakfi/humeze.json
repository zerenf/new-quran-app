{
  "humeze": {
    "surahNumber": "104",
    "surahNameTr": "Hümeze Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Arkadan çekiştirmeyi, yüze karşı eğlenmeyi adet edinen herkesin vay haline!"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O ki, toplamış ve onu sayıp durmuştur."
      },
      {
        "ayahNumber": "3",
        "ayahText": "(O), malının kendisini ebedi kılacağını zanneder."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hayır! Andolsun ki o, Hutame'ye atılacaktır."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Hutame'nin ne olduğunu bilir misin?"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Allah'ın, tutuşturulmuş ateşidir."
      },
      {
        "ayahNumber": "7",
        "ayahText": "(Yandıkça) tırmanıp kalplerin ta üstüne çıkar."
      },
      {
        "ayahNumber": "8",
        "ayahText": "O, onların üzerine kapatılıp kilitlenecektir."
      },
      {
        "ayahNumber": "9",
        "ayahText": "(Bu ateşin içinde) uzatılmış sütunlara bağlanmışlar."
      }
    ]
  }
}