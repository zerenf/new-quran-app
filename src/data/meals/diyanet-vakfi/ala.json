{
  "surahNumber": "87",
  "surahName": "A'lâ Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Yüce Rabbinin adını,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Yaratıp düzene koyan,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Takdir edip yol gösteren,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "(Topraktan) yeşil otu çıkaran,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "Sonra da onu kapkara bir sel artığına çeviren yüce Rabbinin adını tesbih (ve takdis) et."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Sana (Kur an'ı) okutacağız; sen hiç unutmayacaksın."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Artık Allah'ın dilediği hariç, Şüphesiz Allah, açığı ve gizleneni bilir."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Seni en kolaya muvaffak kılacağız."
    },
    {
      "ayahNumber": "9",
      "ayahText": "O halde eğer öğüt fayda verirse öğüt ver."
    },
    {
      "ayahNumber": "10",
      "ayahText": "(Allah'tan) korkan öğütten yararlanacak."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Kötü kimse ise öğütten kaçınacaktır."
    },
    {
      "ayahNumber": "12",
      "ayahText": "O ki, en büyük ateşe girecektir."
    },
    {
      "ayahNumber": "13",
      "ayahText": "Sonra o, ateşte ne ölür ne de yaşar."
    },
    {
      "ayahNumber": "14",
      "ayahText": "Doğrusu feraha ermiştir temizlenen,"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Rabbinin adını anıp O'na kulluk eden."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Fakat siz (ey insanlar! ) dünya hayatını tercih ediyorsunuz."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Oysa ahiret daha hayırlı daha devamlıdır."
    },
    {
      "ayahNumber": "18",
      "ayahText": "Şüphesiz bu (anlatılanlar), önceki kitaplarda, vardır."
    },
    {
      "ayahNumber": "19",
      "ayahText": "İbrahim ve Musa'nın kitaplarında."
    }
  ]
}