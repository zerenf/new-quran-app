{
  "surahNumber": "82",
  "surahName": "İnfitâr Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Gökyüzü yarıldığı zaman,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Yıldızlar döküldüğü zaman,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Denizler birbirine katıldığı zaman,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Kabirlerin içindekiler dışarı çıkarıldığı zaman,"
    },
    {
      "ayahNumber": "5",
      "ayahText": "İnsanoğlu (yapıp) gönderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar."
    },
    {
      "ayahNumber": "6",
      "ayahText": "Ey insan! İhsanı bol Rabbine karşı seni aldatan nedir?"
    },
    {
      "ayahNumber": "7",
      "ayahText": "O Allah ki seni yarattı, seni düzgün ve dengeli kılıp, ölçülü bir biçim verdi."
    },
    {
      "ayahNumber": "8",
      "ayahText": "Seni istediği her hangi bir şekilde parçalardan oluşturdu."
    },
    {
      "ayahNumber": "9",
      "ayahText": "Hayır! Siz yine de dini yalanlıyorsunuz."
    },
    {
      "ayahNumber": "10",
      "ayahText": "Şunu iyi bilin ki üzerinizde bekçiler var,"
    },
    {
      "ayahNumber": "11",
      "ayahText": "Değerli yazıcılar var,"
    },
    {
      "ayahNumber": "12",
      "ayahText": "Onlar, yapmakta olduklarınızı bilirler."
    },
    {
      "ayahNumber": "13",
      "ayahText": "İyiler muhakkak cennettedirler,"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Kötüler de cehennemdedirler."
    },
    {
      "ayahNumber": "15",
      "ayahText": "Ceza gününde oraya girerler."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Onlar (kafirler) oradan bir daha da ayrılmazlar."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Ceza günü nedir bilir misin?"
    },
    {
      "ayahNumber": "18",
      "ayahText": "Evet, bilir misin? Nedir acaba o ceza günü?"
    },
    {
      "ayahNumber": "19",
      "ayahText": "O gün hiçbir kimse başkası için bir şey yapamaz. O gün iş Allah'a kalmıştır."
    }
  ]
}