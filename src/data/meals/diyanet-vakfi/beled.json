{
  "surahNumber": "90",
  "surahName": "Beled Suresi",
  "ayats": [
    {
      "ayahNumber": "1",
      "ayahText": "Andolsun bu beldeye,"
    },
    {
      "ayahNumber": "2",
      "ayahText": "Ki sen bu beldedesin,"
    },
    {
      "ayahNumber": "3",
      "ayahText": "Ve andolsun babaya ve ondan meydana gelen çocuğa,"
    },
    {
      "ayahNumber": "4",
      "ayahText": "Biz, insanı ( yüzyüze geleceği nice ) zorluklar içinde yarattık."
    },
    {
      "ayahNumber": "5",
      "ayahText": "İnsan, hiç kimsenin kendisine güç yetiremeyeceğini mi sanıyor?"
    },
    {
      "ayahNumber": "6",
      "ayahText": "\" Pek çok mal harcadım \" diyor."
    },
    {
      "ayahNumber": "7",
      "ayahText": "Kimse onu görmedi mi sanıyor?"
    },
    {
      "ayahNumber": "8",
      "ayahText": "Biz ona iki göz vermedik mi?"
    },
    {
      "ayahNumber": "9",
      "ayahText": "Bir dil ve iki dudak,"
    },
    {
      "ayahNumber": "10",
      "ayahText": "Ona iki yolu ( doğru ve eğriyi ) gösterdik."
    },
    {
      "ayahNumber": "11",
      "ayahText": "Fakat o, sarp yokuşu aşamadı."
    },
    {
      "ayahNumber": "12",
      "ayahText": "O sarp yokuş nedir bilir misin?"
    },
    {
      "ayahNumber": "13",
      "ayahText": "Köle azat etmek,"
    },
    {
      "ayahNumber": "14",
      "ayahText": "Veya açlık gününde yemek yedirmektir,"
    },
    {
      "ayahNumber": "15",
      "ayahText": "Yakınlığı olan bir yetime."
    },
    {
      "ayahNumber": "16",
      "ayahText": "Veya hiçbir şeyi olmayan yoksula."
    },
    {
      "ayahNumber": "17",
      "ayahText": "Sonra iman edenlerden, birbirlerine sabrı tavsiye edenlerden ve birbirlerine acımayı öğütleyenlerden olmaktır."
    },
    {
      "ayahNumber": "18",
      "ayahText": "İşte bunlar sağdakilerdir."
    },
    {
      "ayahNumber": "19",
      "ayahText": "Ayetlerimizi inkar edenler ise işte onlar soldakilerdir,"
    },
    {
      "ayahNumber": "20",
      "ayahText": "Cezaları, kapıları üzerlerine sımsıkı kapatılmış bir ateştir."
    }
  ]
}