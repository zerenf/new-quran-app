{
  "insikak": {
    "surahNumber": "84",
    "surahNameTr": "İnşikâk Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Gök yarıldığı,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Yer uzatılıp düzlendiği,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "İçinde ne varsa attığı ve tamamen boşaldığı"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Ve Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Ey insan! Kuşkusuz sen Rabbine doğru çaba üstüne çaba sarfetmektesin, nihayet O'na varacaksın."
      },
      {
        "ayahNumber": "7",
        "ayahText": "O vakit kitabı sağ eline verilen,"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Kolay bir hesapla hesaba çekilecek,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Ve sevinçli olarak ailesine dönecektir."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Ama kitabı arkasından verilen,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "\"Yetiş ey ölüm!\" diye bağıracak"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Ve alevli ateşe girecektir."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Çünkü o ailesi içinde sevinçli idi."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Hiç Rabbine dönmeyeceğini sanmıştı."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Hayır Rabbi onu görmekte idi."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Şimdi, yemin ederim o şafağa,"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Geceye ve içinde barındırdığı şeylere,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Derlendiği zaman o aya,"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Ki, siz elbette halden hale geçeceksiniz."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Böyleyken onlar neden acaba iman etmezler?"
      },
      {
        "ayahNumber": "21",
        "ayahText": "Karşılarında Kur'ân okunduğu vakit secde etmezler?"
      },
      {
        "ayahNumber": "22",
        "ayahText": "Aksine o nankörler yalanlıyorlar."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Oysa Allah içlerinde sakladıklarını biliyor."
      },
      {
        "ayahNumber": "24",
        "ayahText": "Onun için onlara elem verici bir azabı müjdele."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Ancak iman edip iyi ameller işleyenler başkadır. Onlara tükenmez bir ecir vardır."
      }
    ]
  }
}