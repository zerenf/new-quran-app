{
  "sems": {
    "surahNumber": "91",
    "surahNameTr": "Şems Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Güneş'e ve onun parıltısına,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Güneş'in ardından gelen Ay'a,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Güneş'i açıp ortaya çıkaran gündüze,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Onu örten geceye,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Göğe ve onu bina edene,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Yere ve onu döşeyene,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Nefse ve onu biçimlendirene,"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Sonra da ona kötülük ve takva kabiliyetini verene yemin olsun ki,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Elbette nefsini temizleyip parlatan kurtulmuştur."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Onu kirletip gömen de ziyan etmiştir."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Semud, azgınlığıyla Hakk'ı yalanladı,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "En azgınları ileri atılınca,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Allah'ın Rasulü (Salih peygamber) onlara: \"Allah'ın devesini ve onun su nöbetini gözetin.\" demişti."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Fakat onlar peygamberi yalanlayıp deveyi kestiler. Rableri de günahlarını başlarına geçiriverdi de orayı dümdüz etti."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Öyle ya, Allah bu işin sonundan korkacak değil ya."
      }
    ]
  }
}