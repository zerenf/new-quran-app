{
  "gasiye": {
    "surahNumber": "88",
    "surahNameTr": "Ğâşiye Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "O her şeyi kuşatacak olan Kıyamet'in haberi sana geldi mi?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yüzler var ki, o gün eğilmiş, zillete düşmüştür."
      },
      {
        "ayahNumber": "3",
        "ayahText": "Çalışmış, yorulmuştur."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kızışmış bir ateşe girer."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Onlara kızgın bir kaynaktan su verilir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Onlar için kuru bir dikenden başka yiyecek de yoktur."
      },
      {
        "ayahNumber": "7",
        "ayahText": "O da ne besler, ne de açlığı giderir."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Yüzler de var ki, o gün nimetle mutludur."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Yaptığından hoşnuttur."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Yüksek bir cennettedir."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Orada boş bir söz işitmez."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Orada akan bir kaynak,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Yükseltilmiş divanlar,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Konulmuş kadehler,"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Dizilmiş koltuklar, yastıklar,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Serilmiş halılar vardır."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Bakmıyorlar mı o develere, nasıl yaratılmış?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Göğe bakmıyorlar mı, nasıl yükseltilmiş?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Bakmıyorlar mı dağlara, nasıl dikilmiş?"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Yere bakmıyorlar mı, nasıl yayılmış?"
      },
      {
        "ayahNumber": "21",
        "ayahText": "Haydi öğüt ver; sen şimdi sırf bir öğütçüsün."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Onların üzerinde bir zorba değilsin."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Ancak kim yüz çevirir ve kâfir olursa,"
      },
      {
        "ayahNumber": "24",
        "ayahText": "Allah ona en büyük azap ile azap edecek."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Kuşkusuz onlar döne dolaşa bize gelecekler."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Sonra da bize hesap verecekler."
      }
    ]
  }
}