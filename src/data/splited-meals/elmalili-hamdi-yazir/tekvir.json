{
  "tekvir": {
    "surahNumber": "81",
    "surahNameTr": "Tekvîr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Güneş katlanıp dürüldüğünde,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar bulandığında,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Dağlar yürütüldüğünde,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kıyılmaz mallar bırakıldığında,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Vahşi hayvanlar bir araya toplandığında,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Denizler ateşlendiğinde (suları çekilip, volkanlar halinde ateş püskürdüğünde),"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Nefisler eşleştirildiğinde (iyiler iyilerle, kötüler kötülerle bir araya toplandığında),"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Diri diri toprağa gömülen kıza sorulduğunda,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "\"Hangi günahtan dolayı öldürüldü?\" diye."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Amel defterleri açıldığında,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gök sıyrılıp açıldığında,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Cehennem kızıştırıldığında,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Ve cennet yaklaştırıldığında,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Herkes ne getirmiş olduğunu anlar."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Şimdi yemin ederim o sinenlere (gündüzleri gözden kaybolan yıldızlara),"
      },
      {
        "ayahNumber": "16",
        "ayahText": "O akıp akıp yuvasına gidenlere,"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Yöneldiği an geceye,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Nefeslendiği (ağardığı) an sabaha ki,"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Kuşkusuz o Kur'an, değerli bir elçinin sözüdür."
      },
      {
        "ayahNumber": "20",
        "ayahText": "O elçi güçlüdür, Arş'ın sahibinin yanında çok itibarlıdır."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Orada ona itaat edilir, güvenilir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Arkadaşınızı cin çarpmış değildir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Andolsun o, Cebrail'i açık ufukta gördü."
      },
      {
        "ayahNumber": "24",
        "ayahText": "O, gayb hakkında cimri de değildir."
      },
      {
        "ayahNumber": "25",
        "ayahText": "O, kovulmuş bir şeytanın sözü değildir."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Hâl böyle iken, siz nereye gidiyorsunuz?"
      },
      {
        "ayahNumber": "27",
        "ayahText": "O, âlemler için öğütten başka bir şey değildir,"
      },
      {
        "ayahNumber": "28",
        "ayahText": "İçinizden doğru gitmek isteyenler için."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Âlemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz."
      }
    ]
  }
}