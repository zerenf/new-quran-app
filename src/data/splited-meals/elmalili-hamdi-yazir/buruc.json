{
  "buruc": {
    "surahNumber": "85",
    "surahNameTr": "Bürûc Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Burçlar sahibi gökyüzüne,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Vaad olunan o güne,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Şahitlik edene ve edilene andolsun ki,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kahroldu o hendeğin sahipleri,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "O çıralı ateşin,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Hani o ateşin başına oturmuşlar,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Müminlere yaptıklarını seyrediyorlardı."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Müminlere kızmalarının sebebi de, onların yalnız çok güçlü ve övgüye lâyık olan Allah'a iman etmeleri idi."
      },
      {
        "ayahNumber": "9",
        "ayahText": "O Allah ki, göklerin ve yerin hükümranlığı O'nundur ve Allah her şeye şahittir."
      },
      {
        "ayahNumber": "10",
        "ayahText": "İnanan erkek ve kadınlara işkence yapıp sonra da tevbe etmeyenlere cehennem azabı ve yangın azabı vardır."
      },
      {
        "ayahNumber": "11",
        "ayahText": "İnanan ve iyi amel yapanlar için de altından ırmaklar akan cennetler vardır. İşte büyük kurtuluş odur."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Kuşkusuz Rabbinin yakalaması serttir."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Yoktan o yaratır ve tekrar o diriltir."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Bununla beraber çok bağışlayandır, çok sevendir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Arş'ın sahibidir, yücedir."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Dilediğini yapandır."
      },
      {
        "ayahNumber": "17",
        "ayahText": "O orduların kıssası sana geldi mi?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Yani Firavun ve Semud'un?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Fakat o inkarcılar hâlâ bir yalanlama içinde."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Oysa Allah onları arkalarından kuşatmıştır."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Hayır o şerefli bir Kur'ân'dır."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Levhi Mahfuz'dadır."
      }
    ]
  }
}