{
  "murselat": {
    "surahNumber": "77",
    "surahNameTr": "Mürselât Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Andolsun birbiri ardınca gönderilenlere,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Büküp devirenlere,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Yaydıkça yayanlara,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Seçip ayıranlara,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Bir öğüt bırakanlara,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Gerek özür için olsun, gerek uyarı için,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Herhalde size vaad olunan kesinlikle olacaktır."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Hani o yıldızlar silindiği zaman,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Gök yarıldığı zaman,"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Dağlar savrulduğu zaman,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Elçiler, tayin edilen vakitlerine erdirildikleri zaman,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Bunlar hangi güne ertelendiler?"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Hüküm gününe.."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Bildin mi, nedir o hüküm günü?"
      },
      {
        "ayahNumber": "15",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Biz, öncekileri helak etmedik mi?"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Sonra geridekileri de onlara katarız."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Biz suçlulara böyle yaparız."
      },
      {
        "ayahNumber": "19",
        "ayahText": "O gün yalanlayanların vah haline!"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Biz sizi âdi bir sudan yaratmadık mı?"
      },
      {
        "ayahNumber": "21",
        "ayahText": "Onu sağlam bir yerde oturttuk."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Belli bir süreye kadar."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Demek ki biçimlendirmişiz. Ne güzel biçimlendireniz biz."
      },
      {
        "ayahNumber": "24",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "25",
        "ayahText": "Yeryüzünü bir tokat (toplanma yeri) yapmadık mı?"
      },
      {
        "ayahNumber": "26",
        "ayahText": "Gerek diriler, gerekse ölüler için."
      },
      {
        "ayahNumber": "27",
        "ayahText": "Orada yüksek yüksek dağlar oturtup da size bir tatlı su sunmadık mı?"
      },
      {
        "ayahNumber": "28",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "29",
        "ayahText": "(Kıyameti yalanlayanlara şöyle denir): \"Haydin gidin o yalanladığınız şeye doğru.\""
      },
      {
        "ayahNumber": "30",
        "ayahText": "\"Haydi gidin o üç çatallı gölgeye (cehenneme).\""
      },
      {
        "ayahNumber": "31",
        "ayahText": "O, ne gölgelendirir, ne alevden korur."
      },
      {
        "ayahNumber": "32",
        "ayahText": "O, saray gibi kıvılcımlar atar."
      },
      {
        "ayahNumber": "33",
        "ayahText": "Sanki o kıvılcımlar, sarı sarı (erkek deve sürüleridir)."
      },
      {
        "ayahNumber": "34",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "35",
        "ayahText": "Bugün, konuşamıyacakları gündür."
      },
      {
        "ayahNumber": "36",
        "ayahText": "Kendilerine izin de verilmez ki, özür beyan etsinler."
      },
      {
        "ayahNumber": "37",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "38",
        "ayahText": "Bu, işte o hüküm günüdür. Sizi ve öncekileri bir araya topladık."
      },
      {
        "ayahNumber": "39",
        "ayahText": "Bir hileniz varsa beni atlatın."
      },
      {
        "ayahNumber": "40",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "41",
        "ayahText": "Kuşkusuz takva sahipleri gölgeler altında ve pınar başlarındadır."
      },
      {
        "ayahNumber": "42",
        "ayahText": "Canlarının çektiğinden türlü meyveler arasındadırlar."
      },
      {
        "ayahNumber": "43",
        "ayahText": "(Onlara): \"Yaptıklarınıza karşılık afiyetle yiyin, için\" (denir)."
      },
      {
        "ayahNumber": "44",
        "ayahText": "İşte biz güzel amel işleyenleri böyle mükafatlandırırız."
      },
      {
        "ayahNumber": "45",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "46",
        "ayahText": "Yiyin, zevklenin biraz, çünkü siz suçlularsınız."
      },
      {
        "ayahNumber": "47",
        "ayahText": "O gün yalanlayanların vay haline!"
      },
      {
        "ayahNumber": "48",
        "ayahText": "Onlara: \"Rüku edin\" denildiği zaman etmezler."
      },
      {
        "ayahNumber": "49",
        "ayahText": "Vay haline o gün yalanlayanların!"
      },
      {
        "ayahNumber": "50",
        "ayahText": "Artık bundan (Kur'an'dan) sonra hangi söze inanacaklar?"
      }
    ]
  }
}