{
  "tarik": {
    "surahNumber": "86",
    "surahNameTr": "Târık Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Andolsun o göğe ve Târık'a,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Târık nedir, bildin mi?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "O, karanlığı delen yıldızdır."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hiçbir nefis yoktur ki başında bir denetleyici bulunmasın."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Onun için insan neden yaratıldığına bir baksın."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Atılan bir sudan yaratıldı."
      },
      {
        "ayahNumber": "7",
        "ayahText": "O su, erkeğin sulbü ile kadının göğüs kemikleri arasından çıkar."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Elbette Allah'ın onu döndürmeye gücü yeter."
      },
      {
        "ayahNumber": "9",
        "ayahText": "O gün bütün sırlar yoklanıp, meydana çıkarılır."
      },
      {
        "ayahNumber": "10",
        "ayahText": "İnsanın o gün ne bir gücü vardır, ne de bir yardımcısı."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Andolsun o dönüşlü göğe,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "O yarılıp çatlayan yere,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Kuşkusuz Kur'ân, ayırıcı bir sözdür."
      },
      {
        "ayahNumber": "14",
        "ayahText": "O asla bir şaka değildir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Haberin olsun ki, kâfirler hep hile kuruyorlar."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ben de hilelerine karşılık veririm."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Onun için sen kâfirlere mühlet ver, onlara az bir zaman tanı."
      }
    ]
  }
}