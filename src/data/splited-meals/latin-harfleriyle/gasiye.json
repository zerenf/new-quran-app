{
  "gasiye": {
    "surahNumber": "88",
    "surahNameTr": "Ğâşiye Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "hel etâke ḥadîŝü-lgâşiyeh."
      },
      {
        "ayahNumber": "2",
        "ayahText": "vucûhüy yevmeiẕin ḫâşi`ah."
      },
      {
        "ayahNumber": "3",
        "ayahText": "`âmiletün nâṣibeh."
      },
      {
        "ayahNumber": "4",
        "ayahText": "taṣlâ nâran ḥâmiyeh."
      },
      {
        "ayahNumber": "5",
        "ayahText": "tüsḳâ min `aynin âniyeh."
      },
      {
        "ayahNumber": "6",
        "ayahText": "leyse lehüm ṭa`âmün illâ min ḍarî`."
      },
      {
        "ayahNumber": "7",
        "ayahText": "lâ yüsminü velâ yugnî min cû`."
      },
      {
        "ayahNumber": "8",
        "ayahText": "vucûhüy yevmeiẕin nâ`imeh."
      },
      {
        "ayahNumber": "9",
        "ayahText": "lisa`yihâ râḍiyeh."
      },
      {
        "ayahNumber": "10",
        "ayahText": "fî cennetin `âliyeh."
      },
      {
        "ayahNumber": "11",
        "ayahText": "lâ tesme`u fîhâ lâgiyeh."
      },
      {
        "ayahNumber": "12",
        "ayahText": "fîhâ `aynün câriyeh."
      },
      {
        "ayahNumber": "13",
        "ayahText": "fîhâ sürurum merfû`ah."
      },
      {
        "ayahNumber": "14",
        "ayahText": "veekvâbüm mevḍû`ah."
      },
      {
        "ayahNumber": "15",
        "ayahText": "venemâriḳu maṣfûfeh."
      },
      {
        "ayahNumber": "16",
        "ayahText": "vezerâbiyyü mebŝûŝeh."
      },
      {
        "ayahNumber": "17",
        "ayahText": "efelâ yenżurûne ile-l'ibili keyfe ḫuliḳat."
      },
      {
        "ayahNumber": "18",
        "ayahText": "veile-ssemâi keyfe rufi`at."
      },
      {
        "ayahNumber": "19",
        "ayahText": "veile-lcibâli keyfe nüṣibet."
      },
      {
        "ayahNumber": "20",
        "ayahText": "veile-l'arḍi keyfe süṭiḥat."
      },
      {
        "ayahNumber": "21",
        "ayahText": "feẕekkir innemâ ente müẕekkir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "leste `aleyhim bimüṣayṭir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "illâ men tevellâ vekefera."
      },
      {
        "ayahNumber": "24",
        "ayahText": "feyü`aẕẕibühü-llâhü-l`aẕâbe-l'ekber."
      },
      {
        "ayahNumber": "25",
        "ayahText": "inne ileynâ iyâbehüm."
      },
      {
        "ayahNumber": "26",
        "ayahText": "ŝümme inne `aleynâ ḥisâbehüm."
      }
    ]
  }
}