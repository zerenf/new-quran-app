{
  "kiyamet": {
    "surahNumber": "75",
    "surahNameTr": "Kıyamet Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "lâ uḳsimü biyevmi-lḳiyâmeh."
      },
      {
        "ayahNumber": "2",
        "ayahText": "velâ uḳsimü binnefsi-llevvâmeh."
      },
      {
        "ayahNumber": "3",
        "ayahText": "eyaḥsebü-l'insânü ellen necme`a `iżâmeh."
      },
      {
        "ayahNumber": "4",
        "ayahText": "belâ ḳâdirîne `alâ en nüsevviye benâneh."
      },
      {
        "ayahNumber": "5",
        "ayahText": "bel yürîdü-l'insânü liyefcüra emâmeh."
      },
      {
        "ayahNumber": "6",
        "ayahText": "yes'elü eyyâne yevmü-lḳiyâmeh."
      },
      {
        "ayahNumber": "7",
        "ayahText": "feiẕâ beriḳa-lbeṣar."
      },
      {
        "ayahNumber": "8",
        "ayahText": "veḫasefe-lḳamer."
      },
      {
        "ayahNumber": "9",
        "ayahText": "vecümi`a-şşemsü velḳamer."
      },
      {
        "ayahNumber": "10",
        "ayahText": "yeḳûlü-l'insânü yevmeiẕin eyne-lmeferr."
      },
      {
        "ayahNumber": "11",
        "ayahText": "kellâ lâ vezer."
      },
      {
        "ayahNumber": "12",
        "ayahText": "ilâ rabbike yevmeiẕin-lmüsteḳarr."
      },
      {
        "ayahNumber": "13",
        "ayahText": "yünebbeü-l'insânü yevmeiẕim bimâ ḳaddeme veeḫḫar."
      },
      {
        "ayahNumber": "14",
        "ayahText": "beli-l'insânü `alâ nefsihî beṣîrah."
      },
      {
        "ayahNumber": "15",
        "ayahText": "velev elḳâ me`âẕîrah."
      },
      {
        "ayahNumber": "16",
        "ayahText": "lâ tüḥarrik bihî lisâneke lita`cele bih."
      },
      {
        "ayahNumber": "17",
        "ayahText": "inne `aleynâ cem`ahû veḳur'âneh."
      },
      {
        "ayahNumber": "18",
        "ayahText": "feiẕâ ḳara'nâhü fettebi` ḳur'âneh."
      },
      {
        "ayahNumber": "19",
        "ayahText": "ŝümme inne `aleynâ beyâneh."
      },
      {
        "ayahNumber": "20",
        "ayahText": "kellâ bel tüḥibbûne-l`âcileh."
      },
      {
        "ayahNumber": "21",
        "ayahText": "veteẕerûne-l'âḫirah."
      },
      {
        "ayahNumber": "22",
        "ayahText": "vucûhüy yevmeiẕin nâḍirah."
      },
      {
        "ayahNumber": "23",
        "ayahText": "ilâ rabbihâ nâżirah."
      },
      {
        "ayahNumber": "24",
        "ayahText": "vevucûhüy yevmeiẕim bâsirah."
      },
      {
        "ayahNumber": "25",
        "ayahText": "teżunnü ey yüf`ale bihâ fâḳirah."
      },
      {
        "ayahNumber": "26",
        "ayahText": "kellâ iẕâ belegati-tterâḳiy."
      },
      {
        "ayahNumber": "27",
        "ayahText": "veḳîle men râḳ."
      },
      {
        "ayahNumber": "28",
        "ayahText": "veżanne ennehü-lfirâḳ."
      },
      {
        "ayahNumber": "29",
        "ayahText": "velteffeti-ssâḳu bissâḳ."
      },
      {
        "ayahNumber": "30",
        "ayahText": "ilâ rabbike yevmeiẕin-lmesâḳ."
      },
      {
        "ayahNumber": "31",
        "ayahText": "felâ ṣaddeḳa velâ ṣallâ."
      },
      {
        "ayahNumber": "32",
        "ayahText": "velâkin keẕẕebe vetevellâ."
      },
      {
        "ayahNumber": "33",
        "ayahText": "ŝümme ẕehebe ilâ ehlihî yetemeṭṭâ."
      },
      {
        "ayahNumber": "34",
        "ayahText": "evlâ leke feevlâ."
      },
      {
        "ayahNumber": "35",
        "ayahText": "ŝümme evlâ leke feevlâ."
      },
      {
        "ayahNumber": "36",
        "ayahText": "eyaḥsebü-l'insânü ey yütrake südâ."
      },
      {
        "ayahNumber": "37",
        "ayahText": "elem yekü nuṭfetem mim meniyyiy yümnâ."
      },
      {
        "ayahNumber": "38",
        "ayahText": "ŝümme kâne `aleḳaten feḫaleḳa fesevvâ."
      },
      {
        "ayahNumber": "39",
        "ayahText": "fece`ale minhü-zzevceyni-ẕẕekera vel'ünŝâ."
      },
      {
        "ayahNumber": "40",
        "ayahText": "eleyse ẕâlike biḳâdirin `alâ ey yuḥyiye-lmevtâ."
      }
    ]
  }
}