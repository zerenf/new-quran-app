{
  "buruc": {
    "surahNumber": "85",
    "surahNameTr": "Bürûc Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Burçlar sahibi göğe andolsun,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Va'dedilen güne andolsun,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "(O gün) Şahide ve şahidlik edilene andolsun,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Ki kahroldu o hendeğin adamları"
      },
      {
        "ayahNumber": "5",
        "ayahText": "O yakıt doldurulup tutuşturulmuş ateş (hendeğinin adamları)!"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Onlar, o(ateş hendeği)nin başında oturmuşlardı."
      },
      {
        "ayahNumber": "7",
        "ayahText": "Ve onlar, mü'minlere yaptıklarını seyrediyorlardı."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Mü'minler sırf aziz, övgüye layık Allah'a inandıkları için o (zalim)ler onlardan öc aldılar."
      },
      {
        "ayahNumber": "9",
        "ayahText": "O (Allah) ki göklerin ve yerin hükümranlığı O'nundur. Allah, her şeye tanıktır."
      },
      {
        "ayahNumber": "10",
        "ayahText": "İnanmış erkek ve kadınlara işkence edip sonra (yaptıklarına) tevbe etmeyenler (yok mu), onlar için cehennem azabı vardır ve onlar için yangın azabı vardır."
      },
      {
        "ayahNumber": "11",
        "ayahText": "İnanan ve iyi işler yapan kimseler için de altlarından ırmaklar akan cennetler vardır. İşte büyük başarı budur."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Şüphesiz Rabbinin tutuşu şiddetlidir."
      },
      {
        "ayahNumber": "13",
        "ayahText": "İlkin var eden, sonra geri çevirip yeniden yaratan O'dur."
      },
      {
        "ayahNumber": "14",
        "ayahText": "O bağışlayandır, sevendir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Arş'ın sahibidir, yücedir."
      },
      {
        "ayahNumber": "16",
        "ayahText": "İstediğini yapandır."
      },
      {
        "ayahNumber": "17",
        "ayahText": "O orduların haberi sana geldi mi?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "(Yani) Fir'avn ve Semud(kavimlerin)in?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Doğrusu, nankörler bir yalanlama içindedirler."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Allah ise onları arkalarından kuşatmıştır."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Hayır, (Kur'an, onların dedikleri gibi bir söz değil), o şerefli bir Kur'an'dır."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Korunan bir levhada(yazılı)dır."
      }
    ]
  }
}