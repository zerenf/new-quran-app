{
  "infitar": {
    "surahNumber": "82",
    "surahNameTr": "İnfitâr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Gök yarıldığı zaman,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar saçıldığı zaman,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Denizler fışkırtıldığı zaman,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kabirlerin içi dışına getirildiği zaman,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Her can, ne (yapıp) öne sürdüğünü ve ne (yapmayıp) geride bıraktığını bilir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Ey insan, seni engin kerem sahibi Rabbine karşı ne aldatıp isyana sürükledi?"
      },
      {
        "ayahNumber": "7",
        "ayahText": "O (Rab) ki seni yarattı, seni düzenledi, sana ölçülü bir biçim verdi."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Seni(n organlarını) dilediği şekilde birbirine ekledi."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Hayır, (bu gururunuzun sebebi şudur) siz ceza (görme)yi yalanlıyorsunuz."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Oysa üzerinizde koruyucu(yaptıklarınızı zabtedici melek)ler vardır;"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Değerli yazıcılar,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Yaptığınız herşeyi bilirler."
      },
      {
        "ayahNumber": "13",
        "ayahText": "İyiler ni'met içindedirler."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Kötüler de yakıcı ateş içindedirler."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Ceza günü oraya girerler."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Onlar ondan (hiçbir yere kaçıp) kaybolacak değillerdir."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Ceza gününün ne olduğunu sen nereden bileceksin?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Ve yine ceza gününün ne olduğunu sen nereden bileceksin?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "O, kimsenin kimseye yardım edemeyeceği bir gündür! O gün buyruk, yalnız Allah'ındır."
      }
    ]
  }
}