{
  "ala": {
    "surahNumber": "87",
    "surahNameTr": "A'lâ Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Yüce Rabbinin adını tesbih et."
      },
      {
        "ayahNumber": "2",
        "ayahText": "O, yaratıp şekil vermiştir."
      },
      {
        "ayahNumber": "3",
        "ayahText": "O, her şeyi ölçüyle yapıp doğru yolu göstermiştir."
      },
      {
        "ayahNumber": "4",
        "ayahText": "O, yeşillikler bitirmiştir."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Sonra da onları siyah çerçöpe çevirmiştir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Sana Kuran'ı Biz okutacağız ve asla unutmayacaksın;"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Allah'ın dilediği bundan müstesnadır. Doğrusu açığı da, gizliyi de bilen O'dur."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Kolay olanı yapmayı sana kolaylaştırırız."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Faydalı olacaksa insanlara öğüt ver."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Allah'tan korkan öğüt alacaktır."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Bedbaht olan ondan kaçınacaktır."
      },
      {
        "ayahNumber": "12",
        "ayahText": "O, en büyük ateşe yaslanacaktır."
      },
      {
        "ayahNumber": "13",
        "ayahText": "O, orada ne ölecektir ne de dirilecektir."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Arınmış olan, Rabbinin adını anıp namaz kılan, saadete erişecektir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Arınmış olan, Rabbinin adını anıp namaz kılan, saadete erişecektir."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ama sizler dünya hayatını tercih ediyorsunuz."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Oysa ahiret daha iyi ve daha bakidir."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Doğrusu bu hükümler ilk sahifelerde, İbrahim ve Musa'nın sahifelerinde de vardır."
      },
      {
        "ayahNumber": "19",
        "ayahText": "Doğrusu bu hükümler ilk sahifelerde, İbrahim ve Musa'nın sahifelerinde de vardır."
      }
    ]
  }
}