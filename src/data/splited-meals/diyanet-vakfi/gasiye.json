{
  "gasiye": {
    "surahNumber": "88",
    "surahNameTr": "Ğâşiye Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "(Resulüm!) Dehşeti her şeyi kaplayan kıyametin haberi sana geldi mi?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O gün bir takım yüzler zelildir,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Durmadan çalışır, (fakat boşuna) yorulur,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Kızgın ateşe girer."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Onlara kaynar su pınarından içirilir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Onlar için kuru dikenden başka yemek yoktur,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "O ise ne besler ne de açlığı giderir."
      },
      {
        "ayahNumber": "8",
        "ayahText": "O gün bir takım yüzler de vardır ki, mutludurlar,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "(dünyadaki) çabalarından hoşnut olmuşlardır,"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Yüce bir cennettedirler."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Orada boş bir söz işitmezler."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Orada (cennette) devamlı akan bir pınar,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Yükseltilmiş tahtlar,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Konulmuş kadehler,"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Sıra sıra dizilmiş yastıklar,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Serilmiş halılar vardır."
      },
      {
        "ayahNumber": "17",
        "ayahText": "(İnsanlar) devenin nasıl yaratıldığına, bakmazlar mı?"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Göğe bakmıyorlar mı nasıl yükseltilmiş?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Dağların nasıl dikildiğine, bakmazlar mı?"
      },
      {
        "ayahNumber": "20",
        "ayahText": "Yeryüzünün nasıl yayıldığına bir bakmazlar mı?"
      },
      {
        "ayahNumber": "21",
        "ayahText": "O halde (Resulüm), öğüt ver. Çünkü sen ancak öğüt vericisin."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Onların üzerinde bir zorba değilsin."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Ancak yüz çevirir inkar ederse,"
      },
      {
        "ayahNumber": "24",
        "ayahText": "İşte öylesini Allah en büyük azap ile cezalandırır."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Şüphesiz onların dönüşü sadece bizedir."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Sonra onların sorguya çekilmesi de sadece bize aittir."
      }
    ]
  }
}