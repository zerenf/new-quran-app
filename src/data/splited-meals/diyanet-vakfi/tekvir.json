{
  "tekvir": {
    "surahNumber": "81",
    "surahNameTr": "Tekvîr Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Güneş katlanıp dürüldüğünde,"
      },
      {
        "ayahNumber": "2",
        "ayahText": "Yıldızlar (kararıp) döküldüğünde,"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Dağlar (sallanıp) yürütüldüğünde,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Gebe develer salıverildiğinde,"
      },
      {
        "ayahNumber": "5",
        "ayahText": "Vahşi hayvanlar toplanıp bir araya getirildiğinde,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Denizler kaynatıldığında,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Ruhlar (bedenlerle) birleştirildiğinde,"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Diri diri toprağa gömülen kıza, sorulduğunda,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "\"Hangi günah sebebiyle öldürüldü? diye."
      },
      {
        "ayahNumber": "10",
        "ayahText": "(Amellerin yazılı olduğu) defterler açıldığında,"
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gökyüzü sıyrılıp alındığında,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Cehennem tutuşturulduğunda,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Ve cennet yaklaştırıldığında,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Kişi neler getirdiğini öğrenmiş olacaktır."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Şimdi yemin ederim o sinenlere,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "O akıp akıp yuvasına gidenlere,"
      },
      {
        "ayahNumber": "17",
        "ayahText": "Kararmaya yüz tuttuğunda geceye andolsun,"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Ağarmaya başladığında sabaha andolsun ki,"
      },
      {
        "ayahNumber": "19",
        "ayahText": "O (Kur'an), şüphesiz değerli, bir elçinin (Cebrail'in) getirdiği sözdür."
      },
      {
        "ayahNumber": "20",
        "ayahText": "O elçi güçlü, Arş'ın sahibi (Allah'ın) katında çok itibarlıdır."
      },
      {
        "ayahNumber": "21",
        "ayahText": "O orada sayılan, güvenilen (bir elçi) dir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Arkadaşınız (Muhammed) de mecnun değildir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Andolsun ki, onu (Cebrail'i) apaçık ufukta görmüştür."
      },
      {
        "ayahNumber": "24",
        "ayahText": "O, gaybın bilgilerini (sizden) esirgemez."
      },
      {
        "ayahNumber": "25",
        "ayahText": "O lanetlenmiş şeytanın sözü de değildir."
      },
      {
        "ayahNumber": "26",
        "ayahText": "Hal böyle iken nereye gidiyorsunuz?"
      },
      {
        "ayahNumber": "27",
        "ayahText": "O, herkes için, bir öğüttür,"
      },
      {
        "ayahNumber": "28",
        "ayahText": "Sizden doğru yolda gitmek isteyenler için de."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Alemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz."
      }
    ]
  }
}