{
  "abese": {
    "surahNumber": "80",
    "surahNameTr": "Abese Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "(Peygamber), yüzünü ekşitti ve geri döndü."
      },
      {
        "ayahNumber": "2",
        "ayahText": "Âmanın kendisine gelmesinden ötürü"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Belki o temizlenecek,"
      },
      {
        "ayahNumber": "4",
        "ayahText": "Yahut öğüt alacak da o öğüt ona fayda verecek."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Kendini (sana) muhtaç görmeyene gelince,"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Sen ona yöneliyorsun,"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Oysa ki onun temizlenip arınmasından sen sorumlu değilsin."
      },
      {
        "ayahNumber": "8",
        "ayahText": "Fakat koşarak sana gelen,"
      },
      {
        "ayahNumber": "9",
        "ayahText": "Ve (Allah'tan) korkarak gelenle,"
      },
      {
        "ayahNumber": "10",
        "ayahText": "Sen onunla ilgilenmiyorsun."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Hayır! Şüphesiz bunlar bir öğüttür,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "Dileyen ondan (Kur'an'dan) öğüt alır,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "O, değerli sahifelerdir,"
      },
      {
        "ayahNumber": "14",
        "ayahText": "Tertemiz kılınmış, yüce makamlara kaldırılmış mukaddes sahifelerde,"
      },
      {
        "ayahNumber": "15",
        "ayahText": "Katiplerin ellerindedir,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Değerli ve güvenilir katiplerin."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Kahrolası insan! Ne inkarcıdır!"
      },
      {
        "ayahNumber": "18",
        "ayahText": "Allah onu neden yarattı?"
      },
      {
        "ayahNumber": "19",
        "ayahText": "Bir nutfeden (spermadan) yarattı da ona şekil verdi."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Sonra ona yolu kolaylaştırdı."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Sonra onun canını aldı ve kabre soktu."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Sonra dilediği bir vakitte onu yeniden diriltir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Hayır! (İnsan) Allah'ın emrettiğini yapmadı."
      },
      {
        "ayahNumber": "24",
        "ayahText": "İnsan, yediğine bir baksın!"
      },
      {
        "ayahNumber": "25",
        "ayahText": "Yağmurlar yağdırdık,"
      },
      {
        "ayahNumber": "26",
        "ayahText": "Sonra toprağı göz göz yardık,"
      },
      {
        "ayahNumber": "27",
        "ayahText": "Bu suretle orada ekinler bitirdik,"
      },
      {
        "ayahNumber": "28",
        "ayahText": "Üzümler, yoncalar,"
      },
      {
        "ayahNumber": "29",
        "ayahText": "Zeytinlikler, hurmalıklar,"
      },
      {
        "ayahNumber": "30",
        "ayahText": "İri ve sık ağaçlı bahçeler,"
      },
      {
        "ayahNumber": "31",
        "ayahText": "Meyveler ve çayırlar bitirdik."
      },
      {
        "ayahNumber": "32",
        "ayahText": "(Bütün bunlar) sizi ve hayvanlarınızı yararlandırmak içindir."
      },
      {
        "ayahNumber": "33",
        "ayahText": "Kulakları sağır eden o ses geldiğinde,"
      },
      {
        "ayahNumber": "34",
        "ayahText": "İşte o gün kişi kardeşinden, kaçar."
      },
      {
        "ayahNumber": "35",
        "ayahText": "Annesinden, babasından,"
      },
      {
        "ayahNumber": "36",
        "ayahText": "Eşinden ve çocuklarından."
      },
      {
        "ayahNumber": "37",
        "ayahText": "O gün, herkesin kendine yetip artacak bir derdi vardır."
      },
      {
        "ayahNumber": "38",
        "ayahText": "O gün bir takım yüzler parıl parıl,"
      },
      {
        "ayahNumber": "39",
        "ayahText": "Güler ve sevinir."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Yine o gün birtakım yüzleri de keder bürümüş,"
      },
      {
        "ayahNumber": "41",
        "ayahText": "Hüzünden kapkara kesilmiştir."
      },
      {
        "ayahNumber": "42",
        "ayahText": "İşte bunlar kafirlerdir, günahkarlardır."
      }
    ]
  }
}