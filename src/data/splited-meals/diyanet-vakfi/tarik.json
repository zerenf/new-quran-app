{
  "tarik": {
    "surahNumber": "86",
    "surahNameTr": "Târık Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Gökyüzüne ve tarıka (sabah yıldızına) yemin ederim."
      },
      {
        "ayahNumber": "2",
        "ayahText": "Tarıkın ne olduğunu nereden bileceksin?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "(O, karanlığı) delen yıldızdır."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hiç kimse yoktur ki üzerinde bir koruyucu, bir denetleyici bulunmasın."
      },
      {
        "ayahNumber": "5",
        "ayahText": "İnsan neden yaratıldığına bir baksın!"
      },
      {
        "ayahNumber": "6",
        "ayahText": "Atılan bir sudan yaratıldı."
      },
      {
        "ayahNumber": "7",
        "ayahText": "(O su) sırt ile göğüs kafesi arasından çıkar."
      },
      {
        "ayahNumber": "8",
        "ayahText": "İşte Allah (başlangıçta bu şekilde yarattığı) insanı tekrar yaratmaya da kadirdir."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Gizlenenlerin ortaya döküldüğü gün"
      },
      {
        "ayahNumber": "10",
        "ayahText": "O gün insan için ne bir güç ne de bir yardımcı vardır."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Dönüş sahibi olan (yağmur yağdıran) göğe, yemin ederim ki,"
      },
      {
        "ayahNumber": "12",
        "ayahText": "(Nebat ile) yarılan yere,"
      },
      {
        "ayahNumber": "13",
        "ayahText": "Şüphesiz Kur'an, (hak ile batılı) ayıran bir sözdür."
      },
      {
        "ayahNumber": "14",
        "ayahText": "O, asla bir şaka değildir."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Onlar bir tuzak kurarlar,"
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ben de bir tuzak kurarım."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Onun için Kafirlere mühlet ver, onları biraz kendi hallerine bırak (pek yakında desteğimiz sana gelecek)."
      }
    ]
  }
}