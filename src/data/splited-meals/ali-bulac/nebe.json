{
  "nebe": {
    "surahNumber": "78",
    "surahNameTr": "Nebe' Suresi",
    "ayats": [
      {
        "ayahNumber": "1",
        "ayahText": "Birbirlerine hangi şeyi sorup duruyorlar?"
      },
      {
        "ayahNumber": "2",
        "ayahText": "O büyük haberi mi?"
      },
      {
        "ayahNumber": "3",
        "ayahText": "Ki kendileri hakkında anlaşmazlık içindedirler."
      },
      {
        "ayahNumber": "4",
        "ayahText": "Hayır; yakında bileceklerdir."
      },
      {
        "ayahNumber": "5",
        "ayahText": "Yine hayır; yakında bileceklerdir."
      },
      {
        "ayahNumber": "6",
        "ayahText": "Biz, yeryüzünü bir döşek kılmadık mı?"
      },
      {
        "ayahNumber": "7",
        "ayahText": "Dağları da birer kazık?"
      },
      {
        "ayahNumber": "8",
        "ayahText": "Sizi çift çift yarattık."
      },
      {
        "ayahNumber": "9",
        "ayahText": "Uykunuzu bir dinlenme yaptık."
      },
      {
        "ayahNumber": "10",
        "ayahText": "Geceyi bir örtü yaptık."
      },
      {
        "ayahNumber": "11",
        "ayahText": "Gündüzü bir geçim-vakti kıldık."
      },
      {
        "ayahNumber": "12",
        "ayahText": "Sizin üstünüze sapasağlam yedi-gök bina ettik."
      },
      {
        "ayahNumber": "13",
        "ayahText": "Parıldadıkça parıldayan bir kandil (güneş) kıldık."
      },
      {
        "ayahNumber": "14",
        "ayahText": "Sıkıp suyu çıkaran (bulut)lardan 'bardaktan boşanırcasına su' indirdik."
      },
      {
        "ayahNumber": "15",
        "ayahText": "Bununla taneler ve bitkiler bitirip-çıkaralım diye."
      },
      {
        "ayahNumber": "16",
        "ayahText": "Ve birbirine sarmaş-dolaş bahçeleri de."
      },
      {
        "ayahNumber": "17",
        "ayahText": "Şüphesiz o hüküm (fasl) günü, belirlenmiş bir vakittir."
      },
      {
        "ayahNumber": "18",
        "ayahText": "Sur'a üfürüleceği gün, artık siz dalga dalga geleceksiniz."
      },
      {
        "ayahNumber": "19",
        "ayahText": "O sırada gök açılmış ve kapı kapı olmuştur."
      },
      {
        "ayahNumber": "20",
        "ayahText": "Dağlar yürütülmüş, artık bir serab oluvermiştir."
      },
      {
        "ayahNumber": "21",
        "ayahText": "Gerçekten cehennem, bir gözetleme yeridir."
      },
      {
        "ayahNumber": "22",
        "ayahText": "Taşkınlık edip-azanlar için son bir varış yeridir."
      },
      {
        "ayahNumber": "23",
        "ayahText": "Bütün zamanlar boyunca içinde kalacaklardır."
      },
      {
        "ayahNumber": "24",
        "ayahText": "Orada ne serinlik tadacaklar, ne bir içecek."
      },
      {
        "ayahNumber": "25",
        "ayahText": "Kaynar sudan ve irinden başka."
      },
      {
        "ayahNumber": "26",
        "ayahText": "(İşlediklerine) Uygun olan bir ceza olarak,"
      },
      {
        "ayahNumber": "27",
        "ayahText": "Doğrusu onlar, hesaba çekileceklerini ummuyorlardı."
      },
      {
        "ayahNumber": "28",
        "ayahText": "Bizim ayetlerimizi yalanlayabildikleri kadar yalanlıyorlardı."
      },
      {
        "ayahNumber": "29",
        "ayahText": "Oysa Biz, herşeyi yazıp saymışızdır."
      },
      {
        "ayahNumber": "30",
        "ayahText": "Şimdi tadın. Size artık azaptan başkasını arttırmayacağız;"
      },
      {
        "ayahNumber": "31",
        "ayahText": "Gerçek şu ki, muttakiler için 'bir kurtuluş ve mutluluk' vardır."
      },
      {
        "ayahNumber": "32",
        "ayahText": "Nice bahçeler ve üzüm bağları."
      },
      {
        "ayahNumber": "33",
        "ayahText": "Göğüsleri henüz tomurcuklanmış yaşıt kızlar."
      },
      {
        "ayahNumber": "34",
        "ayahText": "Dopdolu kadehler."
      },
      {
        "ayahNumber": "35",
        "ayahText": "İçinde, ne 'boş ve saçma bir söz' işitirler, ne bir yalan."
      },
      {
        "ayahNumber": "36",
        "ayahText": "Rabbinden bir karşılık olmak üzere yeterli bir bağış(tır bu)."
      },
      {
        "ayahNumber": "37",
        "ayahText": "Göklerin, yerin ve ikisi arasında bulunanların Rabbi Rahman olan (Allah); O’na hitap etmeye güç yetiremezler."
      },
      {
        "ayahNumber": "38",
        "ayahText": "Ruh ve meleklerin saflar halinde duracakları gün; Rahman'ın kendilerine izin verdikleri dışında olanlar konuşmazlar. (Konuşacak olan da,) Doğruyu söyleyecektir."
      },
      {
        "ayahNumber": "39",
        "ayahText": "İşte bu, hak gündür. Şu halde dileyen Rabbine bir dönüşyolu edinsin."
      },
      {
        "ayahNumber": "40",
        "ayahText": "Gerçekten Biz sizi yakın bir azab ile uyardık. Kişinin kendi ellerinin önceden takdim ettiklerine bakacağı gün, kafir olan da: \"Ah, keşke ben bir toprak oluverseydim\" diyecek."
      }
    ]
  }
}